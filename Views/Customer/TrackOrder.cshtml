@model FridgeManagementSystem.Models.Order
@{
    ViewData["Title"] = "Track Order #" + Model.OrderId;
}

<h2 class="mb-4">Track Order #@Model.OrderId</h2>

<div class="card shadow-sm p-4 mb-4">
    <h4>Status</h4>
    <div class="progress" style="height: 30px;">
        @{
            var steps = new List<string> { "Processing", "Packed", "Dispatched", "Out for Delivery", "Delivered" };
            var currentStep = steps.IndexOf(Model.Status);
        }
        @for (int i = 0; i < steps.Count; i++)
        {
            var width = 20; // each step = 20% (5 steps)
            var bg = i <= currentStep ? "bg-success" : "bg-light";
            <div class="progress-bar @bg" role="progressbar" style="width:@width%;">@steps[i]</div>
        }
    </div>
</div>

<div class="card shadow-sm p-4">
    <h4>Order Summary</h4>
    <ul class="list-group mb-3">
        @foreach (var item in Model.Items)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                @item.Product.Name x @item.Quantity
                <span>@(item.Price * item.Quantity).ToString("C")</span>
            </li>
        }
    </ul>
    <h5>Total: @Model.TotalAmount.ToString("C")</h5>
    <p>Delivery Address: @Model.DeliveryAddress</p>
</div>

<div class="text-center mt-3">
    <a asp-action="MyAccount" class="btn btn-primary">Back to My Account</a>
</div>

