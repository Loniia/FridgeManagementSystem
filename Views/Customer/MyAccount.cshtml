
@model IEnumerable<FridgeManagementSystem.Models.Order>
@{
    Layout = "_Layout";
    ViewData["Title"] = "My Orders";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">My Orders</h2>
        <a asp-action="Dashboard" class="btn btn-outline-primary btn-lg">Go to Dashboard</a>
    </div>

    @if (!Model.Any())
    {
            <div class="alert alert-info text-center">You have no orders yet.</div>
            <div class="text-center">
                <a asp-action="Dashboard" class="btn btn-primary btn-lg">Shop Now</a>
            </div>
    }
    else
    {
            <div class="table-responsive">
                <table class="table table-hover align-middle shadow-lg rounded-4" style="background: linear-gradient(145deg, #ffffff, #e6e6e6); border-collapse: separate; border-spacing: 0; box-shadow: 5px 5px 15px rgba(0,0,0,0.3);">
                    <thead style="background: linear-gradient(135deg, #f0f0f0, #d9d9d9); box-shadow: inset 0 -3px 5px rgba(0,0,0,0.1);">
                        <tr>
                            <th>Order #</th>
                            <th>Date</th>
                            <th>Total</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var o in Model)
                    {
                        var badgeClass = o.Status switch
                        {
                            "Pending" => "bg-warning text-dark",
                            "Completed" => "bg-success",
                            "Cancelled" => "bg-danger",
                            _ => "bg-secondary"
                        };
                                <tr style="transition: transform 0.2s, box-shadow 0.2s;">
                                    <td>@o.OrderId</td>
                                    <td>@o.OrderDate.ToString("yyyy-MM-dd")</td>
                                    <td>@($"R{o.TotalAmount:0.00}")</td>
                                    <td><span class="badge @badgeClass">@o.Status</span></td>
                                    <td>
                                        <a asp-action="OrderConfirmation" asp-route-id="@o.OrderId" class="btn btn-sm btn-info me-1">View</a>
                                        <a asp-action="TrackOrder" asp-route-orderId="@o.OrderId" class="btn btn-sm btn-outline-secondary">Track</a>
                                    </td>
                                </tr>
                    }
                    </tbody>
                </table>
            </div>
    }
</div>

<style>
    table.table tbody tr:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px rgba(0,0,0,0.25);
    }

    table.table th, table.table td {
        border: none;
        padding: 1rem;
    }

    .badge {
        font-size: 0.9rem;
        padding: 0.5em 0.75em;
    }
</style>
