@model IEnumerable<FridgeManagementSystem.Models.Order>
@{
    Layout = "_Layout";
    ViewData["Title"] = "My Orders";
}

<div class="container mt-4">
    <h2 class="mb-3">My Orders</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">You have no orders yet.</div>
        <a asp-action="Dashboard" class="btn btn-primary">Shop Now</a>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Order #</th>
                    <th>Date</th>
                    <th>Total</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var o in Model)
                {
                    <tr>
                        <td>@o.OrderId</td>
                        <td>@o.OrderDate.ToString("yyyy-MM-dd")</td>
                        <td>R@o.TotalAmount.ToString("0.00")</td>
                        <td>@o.Status</td>
                        <td>
                            <a asp-action="OrderConfirmation" asp-route-id="@o.OrderId" class="btn btn-sm btn-info">View</a>
                            <a asp-action="TrackOrder" asp-route-orderId="@o.OrderId" class="btn btn-sm btn-outline-secondary ms-1">Track</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
