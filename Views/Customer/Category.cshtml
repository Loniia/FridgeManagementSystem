@model FridgeManagementSystem.Models.Category
@{
    ViewData["Title"] = "Category: " + Model.CategoryName;
}

<h2 class="mb-4">@Model.CategoryName</h2>

<div class="row">
    @foreach (var product in Model.Products)
    {
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="height:250px; object-fit:cover;">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text text-success fw-bold">@product.Price.ToString("C")</p>
                    <p class="card-text"><i class="bi bi-star-fill text-warning"></i> @product.Reviews?.Count ?? 0 reviews</p>
                    <div class="mt-auto">
                        <a asp-action="ProductDetails" asp-route-id="@product.ProductId" class="btn btn-primary w-100 mb-2">View Details</a>
                        <form asp-action="AddToCart" method="post">
                            <input type="hidden" name="productId" value="@product.ProductId" />
                            <input type="number" name="quantity" value="1" min="1" class="form-control mb-2" />
                            <button type="submit" class="btn btn-success w-100">Add to Cart</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

