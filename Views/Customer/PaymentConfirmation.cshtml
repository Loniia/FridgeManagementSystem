@{
    Layout = "_Layout";
    ViewData["Title"] = "Payment Confirmation";
}

<div class="container text-center mt-5">
    <div class="card shadow-sm border-0 p-5">
        <h2 class="text-success fw-bold mb-3">🎉 Payment Successful!</h2>
        <p class="lead text-muted mb-4">Thank you for your purchase. Your order has been placed successfully.</p>

        <div class="mb-4">
            <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
        </div>

        <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Continue Shopping</a>
        <a asp-action="OrderHistory" asp-controller="Orders" class="btn btn-outline-secondary ms-2">View My Orders</a>
    </div>
</div>

