@model FridgeManagementSystem.ViewModels.PaymentConfirmationViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Payment Confirmation";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-success text-white text-center py-4">
                    <i class="fas fa-check-circle fa-3x mb-3"></i>
                    <h2 class="mb-0">Payment Successful!</h2>
                </div>

                <div class="card-body p-5">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h5>Order Details</h5>
                            <p><strong>Order ID:</strong> #@Model.OrderId</p>
                            <p><strong>Payment Date:</strong> @Model.PaymentDate.ToString("f")</p>
                        </div>
                        <div class="col-md-6">
                            <h5>Payment Information</h5>
                            <p><strong>Amount Paid:</strong> @($"R{Model.Amount:0.00}")</p>
                            <p><strong>Payment Method:</strong> @Model.PaymentMethod</p>
                            <p><strong>Status:</strong> <span class="badge bg-success">@Model.Status</span></p>
                        </div>
                    </div>

                    @if (Model.OrderItems.Any())
                    {
                            <div class="mt-4">
                                <h5>Order Items</h5>
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>Item</th>
                                                <th>Quantity</th>
                                                <th>Price</th>
                                                <th>Total</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        @foreach (var item in Model.OrderItems)
                                        {
                                                    <tr>
                                                        <td>@item.Fridge?.Brand @item.Fridge?.Model</td>
                                                        <td>@item.Quantity</td>
                                                        <td>@($"R{item.Price:0.00}")</td>
                                                        <td>@($"R{item.Quantity * item.Price:0.00}")</td>
                                                    </tr>
                                        }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                    }

                    <div class="text-center mt-5">
                        <a asp-action="Dashboard" class="btn btn-primary me-3">
                            <i class="fas fa-home me-2"></i>Back to Dashboard
                        </a>
                        <a asp-action="OrderHistory" class="btn btn-outline-secondary">
                            <i class="fas fa-history me-2"></i>View Order History
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
        <style>
            .card {
                border-radius: 15px;
            }
            .card-header {
                border-radius: 15px 15px 0 0 !important;
            }
        </style>
}