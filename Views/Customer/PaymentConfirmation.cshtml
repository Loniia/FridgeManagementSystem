@model FridgeManagementSystem.Models.Order

@{
    Layout = "_Layout";
    ViewData["Title"] = "Payment Confirmation";
}

<div class="container mt-5 text-center">
    <div class="card shadow-lg p-5 border-0">
        <h2 class="fw-bold text-success mb-4">Payment Successful 🎉</h2>
        <p class="lead">Thank you for your payment! Your order has been successfully processed.</p>

        <hr class="my-4" />

        <div class="mt-3">
            <h5 class="fw-bold">Order Details</h5>
            <p><strong>Order ID:</strong> @Model.OrderId</p>
            <p><strong>Status:</strong> @Model.Status</p>
            <p><strong>Customer ID:</strong> @Model.CustomerID</p>

            @if (Model.OrderItems != null && Model.OrderItems.Any())
            {
                <table class="table table-bordered mt-3">
                    <thead class="table-light">
                        <tr>
                            <th>Fridge</th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderItems)
                        {
                            <tr>
                                <td>@item.Fridge?.FridgeType</td>
                                <td>@item.Quantity</td>
                                <td>R@item.Price.ToString("0.00")</td>
                                <td>R@(item.Price * item.Quantity).ToString("0.00")</td>
                            </tr>
                        }
                    </tbody>
                </table>

                <h4 class="mt-4 fw-bold">
                    Total Paid: 
                    R@Model.OrderItems.Sum(i => i.Price * i.Quantity).ToString("0.00")
                </h4>
            }
        </div>

        <div class="mt-5">
            <a asp-action="Dashboard" asp-controller="Customer" class="btn btn-primary px-4">
                Back to Dashboard
            </a>
        </div>
    </div>
</div>
