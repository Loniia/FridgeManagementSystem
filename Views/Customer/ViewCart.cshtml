@model FridgeManagementSystem.Models.Cart

@{
    ViewData["Title"] = "Your Cart";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container py-4">
    <h2 class="mb-4 text-center">🛒 Your Cart</h2>

    @if (Model == null || !Model.CartItems.Any())
    {
        <div class="alert alert-warning text-center">Your cart is empty.</div>
    }
    else
    {
        <table class="table table-striped text-center align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Fridge</th>
                    <th>Price</th>
                    <th>Qty</th>
                    <th>Subtotal</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.CartItems)
                {
                    <tr>
                        <td>
                            <strong>@item.Fridge.Brand</strong><br />
                            @item.Fridge.Model
                        </td>
                        <td>R @item.Price.ToString("0.00")</td>
                        <td>@item.Quantity</td>
                        <td>R @(item.Price * item.Quantity).ToString("0.00")</td>
                        <td>
                            <form asp-action="RemoveFromCart" method="post" class="d-inline">
                                <input type="hidden" name="cartItemId" value="@item.CartItemId" />
                                <button type="submit" class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash"></i> Remove
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="text-end mt-3">
            <h4>
                Total: R @Model.CartItems.Sum(i => i.Price * i.Quantity).ToString("0.00")
            </h4>
            <a asp-action="Checkout" class="btn btn-success mt-2">
                Proceed to Checkout
            </a>
        </div>
    }
</div>
