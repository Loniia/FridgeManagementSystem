@model FridgeManagementSystem.ViewModels.PaymentViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Payment";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <h2 class="fw-bold mb-4 text-center">💳 Payment Details</h2>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0 p-4">

                <form asp-action="AddCard" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="OrderId" />
                    <input type="hidden" asp-for="Amount" />

                    <!-- PAYMENT METHOD SELECTION -->
                    <div class="mb-4">
                        <label class="form-label fw-bold">Select Payment Method</label>
                        <select class="form-select" asp-for="Method" id="paymentMethod" onchange="togglePaymentSections()">
                            <option value="Card">Credit / Debit Card</option>
                           
                            <option value="EFT">EFT (Bank Transfer)</option>
                        </select>
                    </div>

                    <!-- CARD PAYMENT -->
                    <div id="cardSection" class="payment-section">
                        <h5 class="fw-bold mb-3">Card Details</h5>

                        <div class="mb-3">
                            <label class="form-label">Cardholder Name</label>
                            <input asp-for="CardholderName" class="form-control" placeholder="Full name on card" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Card Number</label>
                            <input asp-for="CardNumber" class="form-control" placeholder="**** **** **** ****" maxlength="20" />
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">Expiry Date</label>
                                <input asp-for="ExpiryDate" class="form-control" placeholder="MM/YY" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">CVV</label>
                                <input asp-for="CVV" class="form-control" placeholder="***" maxlength="3" />
                            </div>
                        </div>
                    </div>

                   

                    <!-- EFT PAYMENT -->
                    <div id="eftSection" class="payment-section" style="display:none;">
                        <h5 class="fw-bold mb-3">EFT / Bank Transfer</h5>
                        <p class="text-muted">Please use the bank details below to make your payment:</p>

                        <div class="border p-3 rounded mb-3 bg-light">
                            <p><strong>Bank:</strong> Capitec Bank</p>
                            <p><strong>Account Number:</strong> 1234567890</p>
                            <p><strong>Branch Code:</strong> 470010</p>
                            <p><strong>Reference:</strong> <span class="text-primary fw-bold">@("PAY-" + Guid.NewGuid().ToString("N").Substring(0, 8).ToUpper())</span></p>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Upload Proof of Payment</label>
                            <input type="file" asp-for="ProofOfPayment" class="form-control" accept=".jpg,.jpeg,.png,.pdf" />
                            <span class="text-muted small">Accepted formats: JPG, PNG, PDF</span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Your Bank Reference</label>
                            <input asp-for="BankReference" class="form-control" placeholder="Enter your bank reference (optional)" />
                        </div>

                        <div class="alert alert-warning">
                            Once you’ve uploaded proof, our admin team will verify your payment before your order is marked as paid.
                        </div>
                    </div>

                    <!-- SUBMIT -->
                    <div class="d-grid mt-4">
                        <button type="submit" class="btn btn-success btn-lg">
                            Pay @Model.Amount.ToString("C")
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function togglePaymentSections() {
        const method = document.getElementById("paymentMethod").value;
        document.getElementById("cardSection").style.display = method === "Card" ? "block" : "none";
       
        document.getElementById("eftSection").style.display = method === "EFT" ? "block" : "none";
    }

    document.addEventListener("DOMContentLoaded", togglePaymentSections);
</script>
