@model FridgeManagementSystem.ViewModels.PaymentViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Add Card";
}

<div class="container mt-5">
    <h2 class="fw-bold mb-4 text-center">Add Card Details</h2>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0 p-4">
                <form asp-action="AddCard" method="post">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Cardholder Name</label>
                        <input asp-for="CardholderName" class="form-control" placeholder="Full name on card" required />
                        <span asp-validation-for="CardholderName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Card Number</label>
                        <input asp-for="CardNumber" class="form-control" placeholder="**** **** **** ****" maxlength="16" required />
                        <span asp-validation-for="CardNumber" class="text-danger"></span>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Expiry Date</label>
                            <input asp-for="ExpiryDate" class="form-control" placeholder="MM/YY" required />
                            <span asp-validation-for="ExpiryDate" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">CVV</label>
                            <input asp-for="CVV" class="form-control" placeholder="***" maxlength="3" required />
                            <span asp-validation-for="CVV" class="text-danger"></span>
                        </div>
                    </div>

                    <input asp-for="OrderId" type="hidden" />
                    <input asp-for="Amount" type="hidden" />
                    <input asp-for="Method" type="hidden" value="Card" />

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">Add Card</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
