@model FridgeManagementSystem.ViewModels.PaymentViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Payment - Add Card";
}

<div class="container mt-5">
    <h2 class="fw-bold mb-4 text-center">Payment</h2>

    <div class="row justify-content-center">
        <div class="col-md-7">
            <div class="card p-4">
                <form asp-action="AddCard" method="post" id="paymentForm">
                    @Html.AntiForgeryToken()
                    <input asp-for="OrderId" type="hidden" />
                    <input asp-for="Amount" type="hidden" />

                    <!-- Payment Method -->
                    <div class="mb-3">
                        <label asp-for="Method" class="form-label fw-bold">Payment Method</label>
                        <select asp-for="Method" class="form-select" id="paymentMethod">
                            @foreach (var m in Enum.GetValues(typeof(FridgeManagementSystem.Models.Method)))
                            {
                                    <option value="@m">@m</option>
                            }
                        </select>
                        <span asp-validation-for="Method" class="text-danger"></span>
                    </div>

                    <!-- Card Payment Fields -->
                    <div id="cardFields">
                        <div class="mb-3">
                            <label asp-for="CardholderName" class="form-label fw-bold">Cardholder Name</label>
                            <input asp-for="CardholderName" class="form-control" placeholder="Full name on card" />
                            <span asp-validation-for="CardholderName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CardNumber" class="form-label fw-bold">Card Number</label>
                            <input asp-for="CardNumber" class="form-control" placeholder="1234 5678 9012 3456" maxlength="19" />
                            <span asp-validation-for="CardNumber" class="text-danger"></span>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="ExpiryDate" class="form-label fw-bold">Expiry Date</label>
                                <input asp-for="ExpiryDate" class="form-control" placeholder="MM/YY" />
                                <span asp-validation-for="ExpiryDate" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="CVV" class="form-label fw-bold">CVV</label>
                                <input asp-for="CVV" class="form-control" maxlength="4" placeholder="CVV" />
                                <span asp-validation-for="CVV" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <!-- EFT Fields -->
                    <div id="eftFields" style="display:none;">
                        <div class="mb-3">
                            <label asp-for="BankReference" class="form-label fw-bold">Bank Reference</label>
                            <input asp-for="BankReference" class="form-control" placeholder="Enter bank reference" />
                            <span asp-validation-for="BankReference" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg" id="submitBtn">
                            Pay @($"R{Model.Amount:0.00}")
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

        <script>
            console.log("Script loaded"); // Debug line

            const methodSelect = document.getElementById('paymentMethod');
            const cardFields = document.getElementById('cardFields');
            const eftFields = document.getElementById('eftFields');
            const paymentForm = document.getElementById('paymentForm');
            const submitBtn = document.getElementById('submitBtn');

            function toggleFields() {
                console.log("Payment method changed to:", methodSelect.value); // Debug
                if (methodSelect.value === 'Card') {
                    cardFields.style.display = 'block';
                    eftFields.style.display = 'none';
                } else {
                    cardFields.style.display = 'none';
                    eftFields.style.display = 'block';
                }
            }

            // Add form submission debug
            paymentForm.addEventListener('submit', function(e) {
                console.log("Form submitted"); // Debug
                console.log("Form valid:", paymentForm.checkValidity()); // Debug

                // Show loading state
                submitBtn.disabled = true;
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Processing...';
            });

            methodSelect.addEventListener('change', toggleFields);
            window.addEventListener('load', toggleFields);

            // Debug: Log initial state
            console.log("Initial payment method:", methodSelect.value);
            console.log("Form action:", paymentForm.action);
        </script>
}


