@{
    Layout = "_Layout";
    ViewData["Title"] = "Customer Dashboard";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    .sidebar {
        position: fixed;
        top: 0;
        left: 0;
        height: 100%;
        width: 220px;
        background-color: #3a3a3a;
        color: #fff;
        padding-top: 20px;
    }

        .sidebar h2 {
            text-align: center;
            margin-bottom: 30px;
            font-size: 1.5rem;
        }

        .sidebar ul {
            list-style: none;
            padding: 0;
        }

            .sidebar ul li {
                padding: 15px 20px;
                margin-bottom: 5px;
                border-radius: 4px;
                background-color: #3a3a3a;
                transition: all 0.3s;
            }

                .sidebar ul li:hover, .sidebar ul li.active {
                    background-color: #d3d3d3;
                    color: #000;
                }

                .sidebar ul li a {
                    text-decoration: none;
                    color: inherit;
                    display: block;
                }

    .main-content {
        margin-left: 220px;
        padding: 30px;
    }

    .dashboard-welcome {
        margin-bottom: 30px;
    }

    .product-card {
        transition: transform 0.2s;
        cursor: pointer;
    }

        .product-card:hover {
            transform: scale(1.05);
        }

    .card-img-top {
        object-fit: cover;
        height: 200px;
    }

    .badge-stock {
        position: absolute;
        top: 10px;
        right: 10px;
        font-size: 0.9rem;
        padding: 5px 10px;
    }
</style>

<div class="sidebar">
    <h2>Customer</h2>
    <ul id="sidebar-menu">
        <li class="active"><a asp-action="Dashboard" asp-controller="Customer">Home</a></li>
        <li><a asp-action="ViewCart" asp-controller="Customer">My Cart</a></li>
        <li><a asp-action="Checkout" asp-controller="Customer">Checkout</a></li>
        <li><a asp-action="MyAccount" asp-controller="Customer">My Orders</a></li>
        <li><a asp-action="TrackOrder" asp-controller="Customer">Track Order</a></li>
        <li><a asp-action="UpcomingVisits" asp-controller="Customer">Upcoming Maintenance Visit</a></li>
        <li><a asp-action="FridgeServiceHistory" asp-controller="Customer">Service History</a></li>
        <li><a asp-controller="Account" asp-action="Logout">Sign Out</a></li>
    </ul>
</div>

<div class="main-content container">
    <!-- Welcome section -->
    <div class="dashboard-welcome">
        <h2>Welcome, @(User.Identity?.Name ?? "Guest")</h2>
        <p>This is your customer dashboard.</p>
    </div>

    <!-- Product display -->
    @foreach (var categoryVm in Model.Categories)
    {
        <h4 class="mt-4">@categoryVm.Category.Name</h4>
        <div class="row">
            @foreach (var productVm in categoryVm.Products)
            {
                <div class="col-md-3 mb-4">
                    <div class="card product-card position-relative">
                        @if (productVm.AvailableStock == 0)
                        {
                            <span class="badge bg-danger badge-stock">Out of Stock</span>
                        }
                        else
                        {
                            <span class="badge bg-success badge-stock">In Stock</span>
                        }

                        <!-- Image path fixed -->
                        <img src="/images/fridges/@productVm.Product.ImageUrl" class="card-img-top" alt="@productVm.Product.Name" />

                        <div class="card-body text-center">
                            <h5 class="card-title">@productVm.Product.Name</h5>
                            <p class="text-success fw-bold">R@productVm.Product.Price.ToString("0.00")</p>
                            <p>Available: @productVm.AvailableStock</p>
                            <a class="btn btn-primary w-100"
                               asp-action="AddToCart"
                               asp-route-productId="@productVm.Product.ProductId"
                               asp-route-quantity="1">Add to Cart</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        // Sidebar active highlight
        const sidebarItems = document.querySelectorAll("#sidebar-menu li");
        sidebarItems.forEach(item => {
            item.addEventListener("click", () => {
                sidebarItems.forEach(i => i.classList.remove("active"));
                item.classList.add("active");
            });
        });
    </script>
}
