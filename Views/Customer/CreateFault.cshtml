@model CreateFaultViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Report New Fault";
}

<div class="container-fluid">
    <!-- ... same header code ... -->

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body">
                    <form asp-action="CreateFault" method="post">
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="FridgeId" class="form-label">Select Fridge</label>
                                    <select asp-for="FridgeId"
                                            asp-items="Model.FridgeOptions"
                                            class="form-select">
                                        <option value="">-- Select Fridge --</option>
                                    </select>
                                    <span asp-validation-for="FridgeId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Priority" class="form-label">Priority Level</label>
                                    <select asp-for="Priority"
                                            asp-items="Model.PriorityOptions"
                                            class="form-select">
                                        <option value="">-- Select Priority --</option>
                                    </select>
                                    <span asp-validation-for="Priority" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="FaultDescription" class="form-label">Fault Description</label>
                            <textarea asp-for="FaultDescription" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="FaultDescription" class="text-danger"></span>
                        </div>

                        <!-- ... rest of the form ... -->
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}