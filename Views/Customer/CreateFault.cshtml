@model CreateFaultViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Report New Fault";

    // Get the pre-selection status and fridge info
    var hasPreselectedFridge = ViewBag.HasPreselectedFridge as bool? ?? false;
    var selectedFridgeInfo = ViewBag.SelectedFridgeInfo as string ?? string.Empty;
    var orderContext = ViewBag.OrderContext as string ?? string.Empty;
}

<a href="@Url.Action("MyFaults", "Customer")" class="btn btn-secondary">
    <i class="fas fa-arrow-left me-1"></i>Back to My Faults
</a>

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-exclamation-circle"></i> Report New Fault
                    </h4>
                </div>
                <div class="card-body">
                    <!-- Display Messages -->
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["WarningMessage"] != null)
                    {
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle"></i> @TempData["WarningMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (Model != null)
                    {
                        <form asp-action="CreateFault" method="post">
                            @Html.AntiForgeryToken()

                            <!-- Hidden field for FridgeId when pre-selected -->
                            @if (hasPreselectedFridge)
                            {
                                <input type="hidden" asp-for="FridgeId" />
                            }

                            <div class="row">
                                <!-- Fridge Selection - Only show if NOT pre-selected -->
                                @if (!hasPreselectedFridge)
                                {
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label asp-for="FridgeId" class="form-label">Select Fridge *</label>
                                            <select asp-for="FridgeId"
                                                    asp-items="Model.FridgeOptions ?? new List<SelectListItem>()"
                                                    class="form-select">
                                                <option value="">-- Select Fridge --</option>
                                            </select>
                                            <span asp-validation-for="FridgeId" class="text-danger"></span>
                                            <small class="form-text text-muted">
                                                <i class="fas fa-info-circle"></i>
                                                Select the fridge that needs repair
                                            </small>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <!-- Show selected fridge information -->
                                    <div class="col-md-12">
                                        <div class="alert alert-info">
                                            <h6><i class="fas fa-refrigerator me-2"></i>Reporting Fault For:</h6>
                                            <p class="mb-0">
                                                <strong>@selectedFridgeInfo@orderContext</strong>
                                            </p>
                                            <small class="text-muted">
                                                <i class="fas fa-info-circle me-1"></i>
                                                You can report a different fridge by going back to your orders
                                            </small>
                                        </div>
                                    </div>
                                }

                                <!-- Priority Level -->
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label asp-for="Priority" class="form-label">Priority Level *</label>
                                        <select asp-for="Priority"
                                                asp-items="Model.PriorityOptions ?? new List<SelectListItem>()"
                                                class="form-select">
                                            <option value="">-- Select Priority --</option>
                                        </select>
                                        <span asp-validation-for="Priority" class="text-danger"></span>
                                    </div>
                                </div>

                                <!-- Fault Type -->
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label asp-for="FaultType" class="form-label">Fault Type *</label>
                                        <input asp-for="FaultType" class="form-control"
                                               placeholder="e.g., Not Cooling, Loud Noise, Water Leak" />
                                        <span asp-validation-for="FaultType" class="text-danger"></span>
                                        <small class="form-text text-muted">
                                            <i class="fas fa-info-circle"></i>
                                            Describe the type of fault (e.g., Not Cooling, Loud Noise, Water Leak)
                                        </small>
                                    </div>
                                </div>

                                <!-- Fault Description -->
                                <div class="col-12">
                                    <div class="form-group mb-3">
                                        <label asp-for="FaultDescription" class="form-label">Fault Description *</label>
                                        <textarea asp-for="FaultDescription" class="form-control" rows="4"
                                                  placeholder="Please describe the issue in detail..."></textarea>
                                        <span asp-validation-for="FaultDescription" class="text-danger"></span>
                                        <small class="form-text text-muted">
                                            <i class="fas fa-info-circle"></i>
                                            Provide as much detail as possible to help us diagnose the issue
                                        </small>
                                    </div>
                                </div>

                                <!-- Report Date (Optional) -->
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label for="reportDate" class="form-label">When did the fault occur? (Optional)</label>
                                        <input type="datetime-local" id="reportDate" name="reportDate"
                                               class="form-control" />
                                        <small class="form-text text-muted">
                                            <i class="fas fa-info-circle"></i>
                                            Leave blank for current date/time. You can report faults up to 6 months old.
                                        </small>
                                    </div>
                                </div>
                            </div>

                            <div class="row mt-4">
                                <div class="col-12">
                                    <button type="submit" class="btn btn-primary me-2">
                                        <i class="fas fa-paper-plane me-1"></i>Report Fault
                                    </button>
                                    <a href="@Url.Action("MyFaults", "Customer")" class="btn btn-secondary">
                                        <i class="fas fa-times me-1"></i>Cancel
                                    </a>
                                </div>
                            </div>
                        </form>
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-triangle"></i> Error loading the form. Please try again.
                        </div>
                        <a asp-action="MyFaults" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to My Faults
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function() {
            // Auto-select the fridge if there's only one option (only when dropdown is visible)
            if ($('#FridgeId').length > 0) {
                var fridgeOptions = $('#FridgeId option').length;
                if (fridgeOptions === 2) { // 1 option + the default "Select Fridge" option
                    $('#FridgeId option:eq(1)').prop('selected', true);
                }
            }

            // Set default priority to Medium
            if ($('#Priority').val() === '') {
                $('#Priority').val('Medium');
            }

            // Set default datetime to now for the report date
            var now = new Date();
            now.setMinutes(now.getMinutes() - now.getTimezoneOffset());
            document.getElementById('reportDate').value = now.toISOString().slice(0, 16);

            // Character count and validation for description
            $('#FaultDescription').on('input', function() {
                var length = $(this).val().length;
                var maxLength = 1000; // Adjust based on your model

                // Update character counter
                var counter = $(this).siblings('.char-counter');
                if (counter.length === 0) {
                    $(this).after('<div class="char-counter form-text text-muted"></div>');
                    counter = $(this).siblings('.char-counter');
                }
                counter.text(length + '/' + maxLength + ' characters');

                // Update validation styling
                if (length > 0 && length <= maxLength) {
                    $(this).removeClass('is-invalid').addClass('is-valid');
                    counter.removeClass('text-danger').addClass('text-success');
                } else if (length > maxLength) {
                    $(this).removeClass('is-valid').addClass('is-invalid');
                    counter.removeClass('text-success').addClass('text-danger');
                } else {
                    $(this).removeClass('is-valid is-invalid');
                    counter.removeClass('text-success text-danger');
                }
            });

            // Trigger input event to initialize character counter
            $('#FaultDescription').trigger('input');
        });
    </script>
}