@model FridgeRequest
@{
    Layout = "_Layout";
    ViewData["Title"] = "Request New Fridge";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Request New Fridge</h1>
        <a asp-action="MyRequests" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Back to My Requests
        </a>
    </div>

    <!-- Success/Error Messages -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-refrigerator"></i> Fridge Request Form
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="CreateRequest" method="post">
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="RequiredModel" class="form-label">Required Model</label>
                                    <input asp-for="RequiredModel" class="form-control"
                                           placeholder="e.g., Glass Door Cooler X500" />
                                    <span asp-validation-for="RequiredModel" class="text-danger"></span>
                                    <div class="form-text">
                                        Specify the model or type of fridge you need.
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Quantity" class="form-label">Quantity</label>
                                    <input asp-for="Quantity" class="form-control" type="number" min="1" max="100" value="1" />
                                    <span asp-validation-for="Quantity" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="RequiredDate" class="form-label">Required By Date</label>
                            <input asp-for="RequiredDate" class="form-control" type="date"
                                   min="@DateTime.Today.ToString("yyyy-MM-dd")" />
                            <span asp-validation-for="RequiredDate" class="text-danger"></span>
                            <div class="form-text">
                                When do you need the fridge(s) to be delivered?
                            </div>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="SpecialRequirements" class="form-label">Special Requirements</label>
                            <textarea asp-for="SpecialRequirements" class="form-control" rows="4"
                                      placeholder="Any special requirements, installation needs, or additional information..."></textarea>
                            <span asp-validation-for="SpecialRequirements" class="text-danger"></span>
                            <div class="form-text">
                                Include any special features, installation requirements, or other details.
                            </div>
                        </div>

                        <!-- Available Models Info -->
                        <div class="alert alert-info">
                            <h6><i class="fas fa-info-circle"></i> Popular Models Available</h6>
                            <ul class="mb-0 small">
                                <li><strong>Glass Door Coolers:</strong> X500, X300, Vision Series</li>
                                <li><strong>Solid Door Refrigerators:</strong> S200, Commercial Pro</li>
                                <li><strong>Undercounter Units:</strong> UC100, Compact Series</li>
                                <li><strong>Walk-in Coolers:</strong> Custom sizes available</li>
                            </ul>
                        </div>

                        <div class="d-flex gap-2 mt-4">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-paper-plane"></i> Submit Request
                            </button>
                            <a asp-action="MyRequests" class="btn btn-outline-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
