@model FridgeManagementSystem.Models.Cart
@{
    Layout = "_Layout";
    ViewData["Title"] = "Checkout";
}

<div class="container mt-4">
    <h2 class="fw-bold mb-4">Checkout</h2>
    <div class="row">
        <!-- Delivery Address -->
        <div class="col-md-6">
            <div class="card shadow-sm border-0 p-4">
                <form asp-action="ConfirmCheckout" method="post">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Delivery Address</label>
                        <input type="text" name="DeliveryAddress" class="form-control" placeholder="Enter delivery address" required />
                    </div>

                    <input type="hidden" name="TotalAmount" value="@Model.Items.Sum(i => i.Product.Price * i.Quantity)" />

                    <div class="d-grid">
                        <button type="submit" class="btn btn-success">Place Order</button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Order Summary -->
        <div class="col-md-6">
            <div class="card shadow-sm border-0 p-4">
                <h5 class="fw-bold mb-3">Order Summary</h5>
                <ul class="list-group mb-3">
                    @foreach (var item in Model.Items)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span>@item.Product.Name (x@item.Quantity)</span>
                            <span>@((item.Product.Price * item.Quantity).ToString("C"))</span>
                        </li>
                    }
                </ul>
                <h5 class="text-end mb-3">
                    Total:
                    <span class="fw-bold text-success">@Model.Items.Sum(i => i.Product.Price * i.Quantity).ToString("C")</span>
                </h5>

                <div class="d-grid">
                    <a asp-action="Payment" class="btn btn-outline-primary">Pay with Card</a>
                </div>
            </div>
        </div>
    </div>
</div>
