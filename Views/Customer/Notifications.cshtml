@model IEnumerable<FridgeManagementSystem.Models.Notification>

<h2>Notifications</h2>

@if (!Model.Any())
{
    <p>No notifications available.</p>
}
else
{
    <ul class="notification-list">
        @foreach (var n in Model)
        {
            <li class="notification-item @(n.IsRead ? "read" : "unread")">
                @n.Message <small>@n.CreatedAt.ToLocalTime()</small>
            </li>
        }
    </ul>
}
