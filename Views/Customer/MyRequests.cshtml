@model IEnumerable<FridgeRequest>
@{
    Layout = "_Layout";
    ViewData["Title"] = "My Fridge Requests";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>My Fridge Requests</h1>
        <a asp-action="CreateRequest" class="btn btn-success">
            <i class="fas fa-plus"></i> New Request
        </a>
    </div>

    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-header bg-success text-white">
            <h5 class="card-title mb-0">
                <i class="fas fa-clipboard-list"></i> Request History
            </h5>
        </div>
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-clipboard-list display-1 text-muted"></i>
                    <h3 class="text-muted mt-3">No Requests Made</h3>
                    <p class="text-muted">You haven't made any fridge requests yet.</p>
                    <a asp-action="CreateRequest" class="btn btn-success btn-lg">Make Your First Request</a>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Request Code</th>
                                <th>Model</th>
                                <th>Quantity</th>
                                <th>Required Date</th>
                                <th>Status</th>
                                <th>Request Date</th>
                                <th>Response Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var request in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@request.RequestCode</strong>
                                    </td>
                                    <td>@request.RequiredModel</td>
                                    <td>@request.Quantity</td>
                                    <td>@request.RequiredDate.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        @if (request.Status == "Pending")
                                        {
                                            <span class="badge bg-warning">@request.Status</span>
                                        }
                                        else if (request.Status == "Approved")
                                        {
                                            <span class="badge bg-success">@request.Status</span>
                                        }
                                        else if (request.Status == "Rejected")
                                        {
                                            <span class="badge bg-danger">@request.Status</span>
                                        }
                                        else if (request.Status == "Fulfilled")
                                        {
                                            <span class="badge bg-info">@request.Status</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@request.Status</span>
                                        }
                                    </td>
                                    <td>@request.RequestDate.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        @if (request.ResponseDate.HasValue)
                                        {
                                            @request.ResponseDate.Value.ToString("MMM dd, yyyy")
                                        }
                                        else
                                        {
                                            <span class="text-muted">Pending</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="RequestDetails" asp-route-id="@request.RequestId"
                                               class="btn btn-sm btn-outline-primary" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <button class="btn btn-sm btn-outline-info check-request-status"
                                                    data-request-id="@request.RequestId" title="Check Status">
                                                <i class="fas fa-sync-alt"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Check request status functionality
            $('.check-request-status').click(function() {
                var requestId = $(this).data('request-id');
                var button = $(this);

                button.prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i>');

                $.get('@Url.Action("GetRequestStatus", "CustomerFault")', { requestId: requestId })
                    .done(function(data) {
                        if (data.success) {
                            alert('Current Status: ' + data.status + '\nModel: ' + data.model + '\nQuantity: ' + data.quantity);
                        } else {
                            alert('Error: ' + data.message);
                        }
                    })
                    .fail(function() {
                        alert('Error checking status. Please try again.');
                    })
                    .always(function() {
                        button.prop('disabled', false).html('<i class="fas fa-sync-alt"></i>');
                    });
            });
        });
    </script>
}
