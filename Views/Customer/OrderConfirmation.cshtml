@model FridgeManagementSystem.Models.Order
@{
    Layout = "_Layout";
    ViewData["Title"] = "Order Confirmation";
}

<div class="text-center mt-5">
    <i class="bi bi-check-circle-fill text-success" style="font-size:4rem;"></i>
    <h2 class="mt-3">Thank you for your order!</h2>
    <p class="lead">Your order <strong>#@Model.OrderId</strong> has been successfully placed.</p>
</div>

<div class="card shadow-sm p-4 mt-4 mb-4">
    <h4>Order Summary</h4>
    <ul class="list-group mb-3">
        @foreach (var item in Model.OrderItems)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                @item.Fridge.Brand x @item.Quantity
                <span>@(item.Price * item.Quantity).ToString("C")</span>
            </li>
        }
    </ul>
    <h5>Total: @Model.TotalAmount.ToString("C")</h5>
    <p>Delivery Address: @Model.DeliveryAddress</p>
    <p>Status: <span class="badge bg-warning">@Model.Status</span></p>
</div>

<div class="text-center">
    <a asp-action="Dashboard" asp-controller="Customer" class="btn btn-primary btn-lg">Back to Dashboard</a>
</div>

