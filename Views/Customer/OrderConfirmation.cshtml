@model FridgeManagementSystem.Models.Order
@{
    Layout = "_Layout";
    ViewData["Title"] = "Order Confirmation";
}

<div class="container mt-4">
    <h2 class="mb-3">Order #@Model.OrderId</h2>

    <div class="card p-4 mb-3">
        <p><strong>Status:</strong> @Model.Status</p>
        <p><strong>Order Date:</strong> @Model.OrderDate.ToString("yyyy-MM-dd HH:mm")</p>
        <p><strong>Delivery Address:</strong> @Model.DeliveryAddress</p>
        <p><strong>Total:</strong> R@Model.TotalAmount.ToString("0.00")</p>
    </div>

    <div class="card p-4">
        <h5>Items</h5>
        <ul class="list-group">
            @foreach (var it in Model.OrderItems)
            {
                <li class="list-group-item d-flex justify-content-between">
                    <div>
                        <strong>@it.Fridge?.Brand @it.Fridge?.Model</strong><br />
                        <small>Qty: @it.Quantity</small>
                    </div>
                    <div>R@(it.Price * it.Quantity).ToString("0.00")</div>
                </li>
            }
        </ul>

        <div class="mt-3">
            <a asp-action="MyAccount" class="btn btn-outline-primary">My Orders</a>
            <a asp-action="Dashboard" class="btn btn-outline-secondary ms-2">Continue Shopping</a>
        </div>
    </div>
</div>
