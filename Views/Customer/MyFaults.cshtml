@model IEnumerable<Fault>
@{
    Layout = "_Layout";
    ViewData["Title"] = "My Faults";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>My Reported Faults</h1>
        <a asp-action="CreateFault" class="btn btn-primary">
            <i class="fas fa-plus"></i> Report New Fault
        </a>
    </div>

    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="card-title mb-0">
                <i class="fas fa-list"></i> Fault History
            </h5>
        </div>
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-exclamation-triangle display-1 text-muted"></i>
                    <h3 class="text-muted mt-3">No Faults Reported</h3>
                    <p class="text-muted">You haven't reported any faults yet.</p>
                    <a asp-action="CreateFault" class="btn btn-primary btn-lg">Report Your First Fault</a>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Fault Code</th>
                                <th>Description</th>
                                <th>Fridge</th>
                                <th>Status</th>
                                <th>Priority</th>
                                <th>Assigned To</th>
                                <th>Reported Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var fault in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@fault.FaultCode</strong>
                                    </td>
                                    <td>
                                        <div class="text-truncate" style="max-width: 250px;" title="@fault.FaultDescription">
                                            @fault.FaultDescription
                                        </div>
                                    </td>
                                    <td>@fault.Fridge?.Model</td>
                                    <td>
                                        @if (fault.Status == "Pending")
                                        {
                                            <span class="badge bg-warning">@fault.Status</span>
                                        }
                                        else if (fault.Status == "In Progress")
                                        {
                                            <span class="badge bg-info">@fault.Status</span>
                                        }
                                        else if (fault.Status == "Resolved")
                                        {
                                            <span class="badge bg-success">@fault.Status</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@fault.Status</span>
                                        }
                                    </td>
                                    <td>
                                        @if (fault.Priority == "High")
                                        {
                                            <span class="badge bg-danger">@fault.Priority</span>
                                        }
                                        else if (fault.Priority == "Medium")
                                        {
                                            <span class="badge bg-warning">@fault.Priority</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-info">@fault.Priority</span>
                                        }
                                    </td>
                                    <td>
                                        @if (fault.AssignedTechnician != null)
                                        {
                                            <span>@fault.AssignedTechnician.FullName</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Not assigned</span>
                                        }
                                    </td>
                                    <td>@fault.ReportDate.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="FaultDetails" asp-route-id="@fault.FaultID"
                                               class="btn btn-sm btn-outline-primary" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <button class="btn btn-sm btn-outline-info check-status"
                                                    data-fault-id="@fault.FaultID" title="Check Status">
                                                <i class="fas fa-sync-alt"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Check status functionality
            $('.check-status').click(function() {
                var faultId = $(this).data('fault-id');
                var button = $(this);

                button.prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i>');

                $.get('@Url.Action("GetFaultStatus", "CustomerFault")', { faultId: faultId })
                    .done(function(data) {
                        if (data.success) {
                            alert('Current Status: ' + data.status + '\nPriority: ' + data.priority);
                        } else {
                            alert('Error: ' + data.message);
                        }
                    })
                    .fail(function() {
                        alert('Error checking status. Please try again.');
                    })
                    .always(function() {
                        button.prop('disabled', false).html('<i class="fas fa-sync-alt"></i>');
                    });
            });
        });
    </script>
}
