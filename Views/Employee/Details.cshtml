@model FridgeManagementSystem.Models.Customer
@{
    ViewData["Title"] = "Customer Details";
}

<h2>Customer Details</h2>

<div>
    <h4>@Model.FullName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Contact Info</dt>
        <dd class="col-sm-9">@Model.ContactInfo</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Model.Status</dd>

        <dt class="col-sm-3">User Account</dt>
        <dd class="col-sm-9">@Model.UserAccount?.UserName</dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.CustomerID" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>
