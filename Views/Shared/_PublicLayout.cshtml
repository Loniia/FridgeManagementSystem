<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FridgeManagementSystem</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FridgeManagementSystem.styles.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>

<body>
    <!-- 🌍 Global background image for all pages -->
    <div class="global-background"></div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <div class="container-fluid">
        <div class="row">
            <!-- Main Sidebar (always visible) -->
            <div class="col-md-3 col-lg-2 sidebar-main bg-dark text-white">
                <div class="sidebar-sticky">
                    <!-- Brand/Logo -->
                    <div class="sidebar-header p-3 border-bottom">
                        <h4 class="text-white mb-0">
                            <i class="bi bi-snow"></i> Dynamic Ice Inc 
                        </h4>
                        <small class="text-muted">Dynamic Ice Inc</small>
                    </div>

                    <!-- Navigation Menu -->
                    <ul class="nav flex-column mt-3">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Services">
                                <i class="bi bi-gear"></i> Services
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="About">
                                <i class="bi bi-info-circle"></i> About Us
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Contact">
                                <i class="bi bi-envelope"></i> Contact
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Help">
                                <i class="bi bi-question-circle"></i> Help
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="bi bi-shield-lock"></i> Privacy
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="Login">
                                <i class="bi bi-box-arrow-in-right"></i> Sign In
                            </a>
                        </li>
                    </ul>

                    <!-- Welcome Text -->
                    <div class="sidebar-welcome mt-auto p-3">
                        <h4>Freshness redefined,</h4>
                        <h1>chill with style</h1>
                    </div>
                </div>
            </div>

            <!-- Main Content Area -->
            <div class="col-md-9 col-lg-10 main-content">
                <!-- System-specific Sidebars (conditionally rendered) -->
                @if (ViewData["Sidebar"]?.ToString() == "CustomerManagementSubSystem" ||
                ViewData["Sidebar"]?.ToString() == "PurchasingSubSystem" ||
                ViewData["Sidebar"]?.ToString() == "FaultTechSubsystem" ||
                ViewData["Sidebar"]?.ToString() == "MaintenanceSubSystem")
                {
                    <div class="row">
                        <div class="col-3">
                            <div class="sidebar bg-light p-3 border rounded">
                                @if (ViewData["Sidebar"]?.ToString() == "CustomerManagementSubSystem")
                                {
                                    <partial name="_CustomerSidebar" />
                                }
                                else if (ViewData["Sidebar"]?.ToString() == "PurchasingSubSystem")
                                {
                                    <partial name="_PurchasingSidebar" />
                                }
                                else if (ViewData["Sidebar"]?.ToString() == "FaultTechSubsystem")
                                {
                                    <partial name="_FaultTechSidebar" />
                                }
                                else if (ViewData["Sidebar"]?.ToString() == "MaintenanceSubSystem")
                                {
                                    <partial name="_MaintenanceSidebar" />
                                }
                            </div>
                        </div>
                        <div class="col-9">
                            <main role="main" class="pb-3">
                                @RenderBody()
                            </main>
                        </div>
                    </div>
                }
                else
                {
                    <!-- No system sidebar - full width content -->
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                }
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted mt-3">
        <div class="container">
            &copy; 2025 - Dynamic Ice Inc -
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <style>
        /* 🌍 Global background image (shows on all pages) - KEEPING YOUR ORIGINAL STYLES */
        .global-background {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url('@Url.Content("~/images/backgroundPicture.jpg")');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            z-index: -1; /* keeps it behind everything */
        }

        .sidebar {
            position: relative;
            height: 100%;
            display: flex;
            flex-direction: column;
            justify-content: flex-end; /* pushes content to the bottom */
        }

        .sidebar-welcome {
            position: absolute;
            bottom: 20px;
            left: 20px;
            color: black;
        }

            .sidebar-welcome h4 {
                font-size: 1rem;
                margin: 0;
                font-weight: 500;
            }

            .sidebar-welcome h1 {
                font-size: 2rem;
                margin: 0;
                font-weight: 800;
                line-height: 1.2;
            }

        /* NEW STYLES FOR MAIN SIDEBAR */
        .sidebar-main {
            min-height: 100vh;
            position: fixed;
            left: 0;
            top: 0;
            z-index: 100;
            box-shadow: 2px 0 5px rgba(0,0,0,0.1);
        }

        .sidebar-sticky {
            position: sticky;
            top: 0;
            height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .sidebar-header {
            border-bottom: 1px solid #495057 !important;
        }

        .nav-link {
            padding: 0.75rem 1rem;
            border-radius: 0.375rem;
            margin: 0.125rem 0;
            transition: all 0.3s ease;
        }

            .nav-link:hover {
                background-color: #495057;
                color: white !important;
            }

            .nav-link.active {
                background-color: #0d6efd;
                color: white !important;
            }

        /* Main content area */
        .main-content {
            margin-left: 16.666667%; /* col-md-3 offset */
            min-height: 100vh;
        }

        /* System sidebars */
        .sidebar {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 0.5rem;
        }

        /* Responsive design */
        @@media (max-width: 768px) {
            .sidebar-main {
                position: relative;
                min-height: auto;
            }

            .main-content {
                margin-left: 0;
            }

            .sidebar-sticky {
                height: auto;
            }
        }

        /* Ensure content is readable over background */
        .main-content main {
            background: rgba(255, 255, 255, 0.9);
            border-radius: 0.5rem;
            padding: 2rem;
            margin: 1rem;
            backdrop-filter: blur(5px);
        }
    </style>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        $(document).ready(function () {
            // Add active class to current page in sidebar
            var currentUrl = window.location.href;
            $('.nav-link').each(function () {
                if (this.href === currentUrl) {
                    $(this).addClass('active');
                }
            });

            // Mobile sidebar toggle (optional enhancement)
            $('.sidebar-toggle').on('click', function () {
                $('.sidebar-main').toggleClass('show');
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>