@model BusinessInfo
@{
    ViewData["Title"] = "Help & Support";
    Layout = "_PublicLayout";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <h1 class="text-center mb-5">Help & Support</h1>

            <!-- Contact Information -->
            @if (Model != null)
            {
                <div class="card mb-4">
                    <div class="card-body text-center">
                        <h3>Need Help?</h3>
                        <p class="lead">We're here to assist you</p>

                        <div class="row mt-4">
                            <div class="col-md-4">
                                <div class="text-center">
                                    <i class="fas fa-phone fa-2x text-primary mb-3"></i>
                                    <h5>Call Us</h5>
                                    <p>@Model.Phone</p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="text-center">
                                    <i class="fas fa-envelope fa-2x text-success mb-3"></i>
                                    <h5>Email Us</h5>
                                    <p>@Model.Email</p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="text-center">
                                    <i class="fas fa-map-marker-alt fa-2x text-warning mb-3"></i>
                                    <h5>Visit Us</h5>
                                    <p>@Model.Address</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!-- FAQ Section -->
            <div class="card">
                <div class="card-body">
                    <h3 class="text-center mb-4">Frequently Asked Questions</h3>

                    <div class="accordion" id="faqAccordion">
                        <!-- LOGIN SECTION -->
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#faq1">
                                    How do I log in to the system?
                                </button>
                            </h2>
                            <div id="faq1" class="accordion-collapse collapse show" data-bs-parent="#faqAccordion">
                                <div class="accordion-body">
                                    You first need to register yourself by providing your details and setting a password.
                                    After registration, you can log in using your email and password once your account is approved.
                                </div>
                            </div>
                        </div>

                        <!-- PASSWORD RECOVERY -->
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq2">
                                    What if I forget my password?
                                </button>
                            </h2>
                            <div id="faq2" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                <div class="accordion-body">
                                    If you forget your password, you can reset it by answering the security question you set during registration.
                                    Once verified, you'll be able to create a new password.
                                </div>
                            </div>
                        </div>

                        <!-- ACCOUNT APPROVAL -->
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq3">
                                    Why can’t I log in immediately after registering?
                                </button>
                            </h2>
                            <div id="faq3" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                <div class="accordion-body">
                                    After registration, your account needs to be approved by the system administrator.
                                    Once approved, you’ll receive an email notification and can then log in.
                                </div>
                            </div>
                        </div>

                        <!-- FRIDGE MANAGEMENT (CUSTOMER-ONLY) -->
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq4">
                                    How do I manage my fridge records?
                                </button>
                            </h2>
                            <div id="faq4" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                <div class="accordion-body">
                                    As a customer, you can view all the fridges assigned to you under the “My Fridges” section.
                                    You can see details such as model, serial number, and status. If you need updates or maintenance, use the scheduling option.
                                </div>
                            </div>
                        </div>

                        <!-- MAINTENANCE -->
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq5">
                                    How do I schedule fridge maintenance?
                                </button>
                            </h2>
                            <div id="faq5" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                <div class="accordion-body">
                                    Go to the “Maintenance” section in your dashboard, select the fridge you want serviced,
                                    choose your preferred date, and submit your request. You’ll receive a confirmation once it’s scheduled.
                                </div>
                            </div>
                        </div>

                        <!-- GENERAL SUPPORT -->
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq6">
                                    How do I contact support for other issues?
                                </button>
                            </h2>
                            <div id="faq6" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                <div class="accordion-body">
                                    You can reach out via phone, email, or by visiting our offices.
                                    Our support team is available during business hours to assist you with any system-related queries.
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            
        </div>
    </div>
</div>

