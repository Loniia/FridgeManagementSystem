@model BusinessInfo
@{
    ViewData["Title"] = "Help & Support";
    Layout = "_PublicLayout";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <h1 class="text-center mb-5">Help & Support</h1>

            <!-- Contact Information -->
            @if (Model != null)
            {
                <div class="card mb-4">
                    <div class="card-body text-center">
                        <h3>Need Help?</h3>
                        <p class="lead">We're here to assist you with all your fridge management needs</p>

                        <div class="row mt-4">
                            <div class="col-md-4">
                                <div class="text-center">
                                    <i class="fas fa-phone fa-2x text-primary mb-3"></i>
                                    <h5>Call Us</h5>
                                    <p>@Model.Phone</p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="text-center">
                                    <i class="fas fa-envelope fa-2x text-success mb-3"></i>
                                    <h5>Email Us</h5>
                                    <p>@Model.Email</p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="text-center">
                                    <i class="fas fa-map-marker-alt fa-2x text-warning mb-3"></i>
                                    <h5>Visit Us</h5>
                                    <p>@Model.Address</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!-- FAQ Section -->
            <div class="card">
                <div class="card-body">
                    <h3 class="text-center mb-4">Frequently Asked Questions</h3>

                    <div class="accordion" id="faqAccordion">
                        <!-- FAQ 1 -->
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#faq1">
                                    How do I report a fridge fault or issue?
                                </button>
                            </h2>
                            <div id="faq1" class="accordion-collapse collapse show" data-bs-parent="#faqAccordion">
                                <div class="accordion-body">
                                    Log into your customer account, navigate to the "Report Fault" section, select the specific fridge having issues, describe the problem in detail, and submit. Our technical team will be notified immediately and will contact you to schedule a repair.
                                </div>
                            </div>
                        </div>

                        <!-- FAQ 2 -->
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq2">
                                    How quickly do you respond to fault reports?
                                </button>
                            </h2>
                            <div id="faq2" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                <div class="accordion-body">
                                    We guarantee an initial response within 2 hours during business hours (8 AM - 6 PM, Monday to Friday). Emergency issues are prioritized and may receive faster response times.
                                </div>
                            </div>
                        </div>

                        <!-- FAQ 3 -->
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq3">
                                    How can I schedule routine maintenance for my fridges?
                                </button>
                            </h2>
                            <div id="faq3" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                <div class="accordion-body">
                                    You can schedule maintenance through your customer dashboard under "Maintenance Scheduling." Choose your preferred date and time, and our technicians will confirm the appointment. Regular maintenance helps prevent unexpected breakdowns.
                                </div>
                            </div>
                        </div>

                        <!-- FAQ 4 -->
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq4">
                                    What should I do in case of an emergency after hours?
                                </button>
                            </h2>
                            <div id="faq4" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                <div class="accordion-body">
                                    For emergency situations outside business hours, please call our emergency hotline at the same phone number. We have technicians on standby for urgent issues that cannot wait until the next business day.
                                </div>
                            </div>
                        </div>

                        <!-- FAQ 5 -->
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq5">
                                    How do I request additional fridges for my business?
                                </button>
                            </h2>
                            <div id="faq5" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                <div class="accordion-body">
                                    Log into your account and go to "Fridge Allocation Request" in your dashboard. Specify the number of fridges needed, preferred models, and delivery requirements. Our team will process your request and contact you regarding availability and pricing.
                                </div>
                            </div>
                        </div>

                        <!-- FAQ 6 -->
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq6">
                                    Can I track the status of my repair requests?
                                </button>
                            </h2>
                            <div id="faq6" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                <div class="accordion-body">
                                    Yes! You can track all your repair requests in real-time through the "My Requests" section. You'll see updates when a technician is assigned, when they're on their way, and when the repair is completed.
                                </div>
                            </div>
                        </div>

                        <!-- FAQ 7 -->
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq7">
                                    What types of fridge issues do you typically repair?
                                </button>
                            </h2>
                            <div id="faq7" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                <div class="accordion-body">
                                    We handle all types of fridge repairs including cooling issues, temperature control problems, compressor failures, door seal replacements, electrical faults, water leakage, and general maintenance. Our technicians are trained on all major brands and models.
                                </div>
                            </div>
                        </div>

                        <!-- FAQ 8 -->
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq8">
                                    How do I view my current fridge allocations?
                                </button>
                            </h2>
                            <div id="faq8" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                <div class="accordion-body">
                                    Your allocated fridges are visible in the "My Fridges" section of your dashboard. Here you can see all fridges currently assigned to your business, their status, maintenance history, and any active issues.
                                </div>
                            </div>
                        </div>

                        <!-- FAQ 9 -->
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq9">
                                    What are your service hours?
                                </button>
                            </h2>
                            <div id="faq9" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                <div class="accordion-body">
                                    Our standard service hours are Monday to Friday, 8:00 AM to 6:00 PM. We also offer emergency services outside these hours for critical issues. Weekend appointments may be available by special arrangement.
                                </div>
                            </div>
                        </div>

                        <!-- FAQ 10 -->
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq10">
                                    How do I update my business information or contact details?
                                </button>
                            </h2>
                            <div id="faq10" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                <div class="accordion-body">
                                    You can update your business information, contact details, and preferences in the "My Profile" section of your account. Keeping this information current ensures we can reach you quickly when needed.
                                </div>
                            </div>
                        </div>

                        <!-- FAQ 11 -->
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq11">
                                    Are there costs for routine maintenance visits?
                                </button>
                            </h2>
                            <div id="faq11" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                <div class="accordion-body">
                                    Routine maintenance is included in our service packages. However, if replacement parts are needed during a maintenance visit, there may be additional costs which will be communicated to you for approval before any work begins.
                                </div>
                            </div>
                        </div>

                        <!-- FAQ 12 -->
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq12">
                                    How do I provide feedback about your service?
                                </button>
                            </h2>
                            <div id="faq12" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                <div class="accordion-body">
                                    After each service visit, you'll receive a request to rate your experience. You can also provide feedback at any time through the "Feedback" section in your account or by contacting our customer service team directly.
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Links -->
            <div class="card mt-4">
                <div class="card-body text-center">
                    <h4>Quick Links</h4>
                    <div class="row mt-3">
                        <div class="col-md-3">
                            <a asp-action="Services" class="btn btn-outline-primary w-100 mb-2">Our Services</a>
                        </div>
                        <div class="col-md-3">
                            <a asp-action="About" class="btn btn-outline-primary w-100 mb-2">About Us</a>
                        </div>
                        <div class="col-md-3">
                            <a asp-action="Contact" class="btn btn-outline-primary w-100 mb-2">Contact</a>
                        </div>
                        <div class="col-md-3">
                            <a asp-controller="Account" asp-action="Login" class="btn btn-primary w-100 mb-2">Customer Login</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>