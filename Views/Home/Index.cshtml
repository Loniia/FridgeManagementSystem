@model BusinessInfo

@{
    ViewData["Title"] = "Home";
}

<!-- 🏠 Hero / Home Section -->
<section id="home" class="d-flex align-items-center justify-content-center text-center text-white"
         style="background: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.6)), url('/images/home-bg.jpg') center/cover no-repeat; height:100vh;">
    <div class="container">
        <h1 class="display-4 fw-bold">Welcome to <span class="text-success">Dynamic Ice Inc</span></h1>
        <p class="lead">Smart control. Efficient storage. Seamless management.</p>
        <a href="#about" class="btn btn-success btn-lg mt-3">Learn More</a>
    </div>
</section>

<!-- ℹ️ About Us Section -->
<section id="about" class="py-5" style="background-color: #f7f7f7;">
    <div class="container">
        <h2 class="fw-bold mb-4 text-center">About Dynamic Ice Inc</h2>
        <p class="text-muted fs-5 mx-auto mb-3" style="max-width: 800px;">
            Dynamic Inc Ice is a leading beverage company dedicated to delivering the freshest beverages to our customers.
            To ensure proper refrigeration, we provide fridges to our clients, helping them keep their products at optimal temperature.
        </p>
        <p class="text-muted fs-5 mx-auto" style="max-width: 800px;">
            Our Fridge Management System is designed to streamline operations, improve customer service, and simplify fridge inventory
            management. From tracking fridge allocations and monitoring service history to reporting faults efficiently, the system
            ensures smooth, reliable operations for both our team and our valued customers.
        </p>
    </div>
</section>

<!-- 🧰 Services Section -->
<section id="services" class="py-5" style="background-color: #f7f7f7;">
    <div class="container text-center">
        <h2 class="fw-bold mb-5">Our Services</h2>
        <div class="row g-4">

            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <i class="bi bi-people display-4 text-success mb-3"></i>
                        <h5 class="card-title">Customer Management</h5>
                        <p class="text-muted">
                            Manage customer profiles, allocate fridges, and track fridge distribution efficiently 
                            to ensure operational excellence and customer satisfaction.
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <i class="bi bi-box-seam display-4 text-success mb-3"></i>
                        <h5 class="card-title">Inventory Control</h5>
                        <p class="text-muted">
                            Keep real-time track of fridges in stock, new deliveries, and scrapped units. 
                            Automatically generate purchase requests when stock is low.
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <i class="bi bi-tools display-4 text-success mb-3"></i>
                        <h5 class="card-title">Maintenance & Fault Reporting</h5>
                        <p class="text-muted">
                            Schedule and manage maintenance visits, process fault reports, and ensure fridges are serviced promptly.
                            Customers can view upcoming visits and fridge service history.
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <i class="bi bi-receipt display-4 text-success mb-3"></i>
                        <h5 class="card-title">Purchasing & Supplier Management</h5>
                        <p class="text-muted">
                            Streamline procurement from suppliers, manage purchase requests and orders, 
                            and ensure timely delivery of fridges to maintain stock levels.
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <i class="bi bi-graph-up display-4 text-success mb-3"></i>
                        <h5 class="card-title">Reporting & Analytics</h5>
                        <p class="text-muted">
                            Gain insights into fridge allocations, maintenance history, customer interactions, 
                            and inventory levels to optimize operations.
                        </p>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>


<!-- 👨‍💼 Team Section -->
<section id="team" class="py-5" style="background-color: #f7f7f7;">
    <div class="container text-center">
        <h2 class="fw-bold mb-5">Meet Our Team</h2>
        <div class="row justify-content-center g-4">
            <div class="col-md-3">
                <div class="card border-0 shadow-sm">
                   <img src="~/images/idah1.jpg" class="card-img-top rounded-top" alt="Team Member 1">
                    <div class="card-body">
                        <h5 class="card-title mb-0">Idah Munyai.</h5>
                        <p class="text-muted">Customer Manager</p>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card border-0 shadow-sm">
                    <img src="/images/team2.jpg" class="card-img-top rounded-top" alt="Team Member 2">
                    <div class="card-body">
                        <h5 class="card-title mb-0">Onke Boyce.</h5>
                        <p class="text-muted">Fault Technician</p>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card border-0 shadow-sm">
                    <img src="/images/Kay.JPG" class="card-img-top rounded-top" alt="Team Member 3">
                    <div class="card-body">
                        <h5 class="card-title mb-0">Kayla Williams.</h5>
                        <p class="text-muted">Maintenance Technician</p>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card border-0 shadow-sm">
                    <img src="/images/team4.jpg" class="card-img-top rounded-top" alt="Team Member 4">
                    <div class="card-body">
