@{
    ViewData["Title"] = "Home Page";
}

<div class="home-container position-relative">
    <!-- Full background image -->
    <img src="~/images/HopePage.jpg" alt="Fridge background" class="img-fluid home-image" />

    <!-- Text overlay on bottom-left -->
    <div class="home-text">
        <h2>Welcome to <br />Dynamic Ice Inc</h2>
    </div>
</div>

@section Styles {
        <style>
            .home-container {
                position: relative;
                width: 100%;
                overflow: hidden;
                border-radius: 10px;
            }

            .home-image {
                width: 100%;
                height: auto;
                display: block;
                border-radius: 10px;
            }

            .home-text {
                position: absolute;
                bottom: 40px;
                left: 50px;
                color: white;
                font-weight: bold;
                text-shadow: 2px 2px 6px rgba(0, 0, 0, 0.7);
            }

            .home-text h2 {
                font-size: 2.5rem;
                line-height: 1.3;
            }
        </style>
}
