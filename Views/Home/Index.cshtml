</section>

<!-- 📞 Contact Section -->
<section id="contact" class="py-5">
    <div class="container text-center">
        <h2 class="fw-bold mb-4">Contact Us</h2>
        <p class="text-muted fs-5">We’d love to hear from you! Get in touch with us for any questions or collaboration ideas.</p>

        <div class="mt-4">
            <p class="mb-1"><i class="bi bi-envelope text-success me-2"></i> info@fridgemanagement.com</p>
            <p class="mb-1"><i class="bi bi-telephone text-success me-2"></i> +27 67 123 4567</p>
            <p><i class="bi bi-geo-alt text-success me-2"></i> 123 Innovation Street, Pretoria, South Africa</p>
        </div>
    </div>
</section>

<!-- 🌟 Footer -->
<footer class="text-center py-4" style="background-color: #f7f7f7; border-top: 1px solid #e0e0e0;">
    <p class="mb-0 text-muted">&copy; 2025 Dynamic Ice Inc. | Designed with ❤️ By Us to You.</p>
</footer>

@section Scripts {
    <script>
        // Smooth scrolling enhancement for internal links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth', block: 'start' });
                }
            });
        });
    </script>
}


