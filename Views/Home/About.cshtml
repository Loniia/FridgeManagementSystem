@model BusinessInfo
@{
    ViewData["Title"] = "About Us";
    Layout = "_PublicLayout";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="text-center mb-5">
                <h1>About @(Model?.CompanyName ?? "Our Company")</h1>
                <p class="lead">@(Model?.MissionStatement ?? "Our mission is to provide exceptional service")</p>
            </div>

            @if (Model != null)
            {
                <div class="row">
                    <div class="col-md-6 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <h3>Our Story</h3>
                                <p>@Model.CompanyDescription</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <h3>Core Values</h3>
                                <p>@Model.CoreValues</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <h3>What We Do</h3>
                                <p>@Model.ServicesDescription</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center">
                    <h4>Business information not configured</h4>
                    <p>Please contact the administrator to set up business information.</p>
                </div>
            }
        </div>
    </div>
</div>