@model List<FridgeManagementSystem.Models.FridgeAllocation>
@{
    ViewData["Title"] = "Allocation Report";
}

<div class="container-fluid py-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">🚚 Allocation Report</h2>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Customer</th>
                            <th>Fridge Model</th>
                            <th>Allocation Date</th>
                            <th>Quantity</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var allocation in Model)
                        {
                            <tr>
                                <td>@allocation.Customer?.FullName</td>
                                <td>@allocation.Fridge?.Model</td>
                                <td>@allocation.AllocationDate.ToString("yyyy-MM-dd")</td>
                                <td>@allocation.QuantityAllocated</td>
                                <td>
                                    <span class="badge bg-@(allocation.Status == "Active" ? "success" : "warning")">
                                        @allocation.Status
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="text-center mt-4">
        <a href="@Url.Action("Index")" class="btn btn-secondary">Back to Reports</a>
    </div>
</div>