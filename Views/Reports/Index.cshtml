@{
    ViewData["Title"] = "Customer Management Reports";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12 text-center">
            <h1 class="display-4 mb-4">🏪 Customer Management Reports</h1>
            <p class="lead mb-5">Comprehensive reports for customer management subsystem</p>

            <!-- Report Cards -->
            <div class="row">
                <div class="col-md-4 mb-4">
                    <div class="card shadow-lg h-100">
                        <div class="card-body text-center">
                            <div class="mb-3" style="font-size: 3rem;">📊</div>
                            <h3>Dashboard</h3>
                            <p class="text-muted">Overview of customers, allocations, and inventory</p>
                            <a href="@Url.Action("Dashboard")" class="btn btn-success btn-lg">
                                Open Dashboard
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 mb-4">
                    <div class="card shadow-lg h-100">
                        <div class="card-body text-center">
                            <div class="mb-3" style="font-size: 3rem;">🚚</div>
                            <h3>Allocations</h3>
                            <p class="text-muted">Fridge allocation history and tracking</p>
                            <a href="@Url.Action("Allocations")" class="btn btn-primary btn-lg">
                                View Allocations
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 mb-4">
                    <div class="card shadow-lg h-100">
                        <div class="card-body text-center">
                            <div class="mb-3" style="font-size: 3rem;">👥</div>
                            <h3>Customers</h3>
                            <p class="text-muted">Customer database and details</p>
                            <a href="@Url.Action("Customers")" class="btn btn-info btn-lg">
                                View Customers
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>