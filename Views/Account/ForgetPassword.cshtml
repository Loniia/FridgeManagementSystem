@model FridgeManagementSystem.Models.ForgetPasswordViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Forgot Password";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0 rounded-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0"><i class="fas fa-key me-2"></i>Forgot Password</h3>
                </div>
                <div class="card-body">
                    <form asp-action="ForgetPassword" method="post">
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            <label class="form-label">Enter your email address</label>
                            <input asp-for="Email" class="form-control form-control-lg" placeholder="you@example.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Continue</button>
                        <div class="text-center mt-3"><a asp-action="Login">Back to Login</a></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
