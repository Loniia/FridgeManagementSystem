@model FridgeManagementSystem.Models.LoginViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Login";
}

<style>
    .alert {
        animation: fadeInDown 0.5s ease;
    }

    @@keyframes fadeInDown {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0"><i class="fas fa-sign-in-alt me-2"></i>Login</h3>
                </div>
                <div class="card-body">

                    @if (TempData["LoginError"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["LoginError"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <!-- Role Tabs -->
                    <div class="d-flex justify-content-center mb-4">
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-outline-primary active tab" data-role="Customer">
                                <i class="fas fa-user"></i> Customer
                            </button>
                            <button type="button" class="btn btn-outline-secondary tab" data-role="Employee">
                                <i class="fas fa-user-tie"></i> Employee
                            </button>
                            <button type="button" class="btn btn-outline-dark tab" data-role="Administrator">
                                <i class="fas fa-user-shield"></i> Admin
                            </button>
                        </div>
                    </div>

                    <form asp-action="Login" method="post">
                        <input type="hidden" asp-for="Role" id="role" value="Customer" />

                        <div class="mb-3">
                            <label asp-for="Username" class="form-label"></label>
                            <input asp-for="Username" class="form-control form-control-lg" placeholder="Enter username" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="Enter password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input asp-for="RememberMe" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label">Remember me</label>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 btn-lg mb-3">
                            <i class="fas fa-sign-in-alt me-2"></i> Login
                        </button>

                        <!-- Customer-only links -->
                        <div id="customer-links" class="text-center">
                            <small>
                                Not a member? <a asp-controller="Account" asp-action="RegisterCustomer">Register</a> |
                                <a asp-controller="Account" asp-action="ForgetPassword">Forgot Password?</a>
                            </small>
                        </div>

                        <!-- Display errors -->
                        <div class="text-danger mt-3">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <div>@error.ErrorMessage</div>
                            }
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const tabs = document.querySelectorAll('.tab');
        const roleInput = document.getElementById("role");
        const customerLinks = document.getElementById("customer-links");

        tabs.forEach(tab => {
            tab.addEventListener('click', function () {
                tabs.forEach(t => t.classList.remove('active'));
                this.classList.add('active');

                const selectedRole = this.dataset.role;
                roleInput.value = selectedRole;

                if (selectedRole === 'Customer') {
                    customerLinks.style.display = 'block';
                } else {
                    customerLinks.style.display = 'none';
                }
            });
        });

        if (roleInput.value !== 'Customer') {
            customerLinks.style.display = 'none';
        }
    </script>
}

