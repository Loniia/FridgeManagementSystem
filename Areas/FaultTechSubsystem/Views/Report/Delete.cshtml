@model FridgeManagementSystem.Models.FaultReport

@{
    ViewData["Title"] = "Delete Fault Report";
}

<div class="card shadow border-danger">
    <div class="card-header bg-danger text-white">
        <h4 class="m-0 font-weight-bold">
            <i class="fas fa-trash-alt"></i> @ViewData["Title"] - R@(Model.FaultReportId.ToString("D4"))
        </h4>
    </div>
    <div class="card-body">
        <h5 class="text-danger">⚠️ Are you sure you want to delete this report?</h5>
        <hr />

        <dl class="row">
            <dt class="col-sm-3">Report Date</dt>
            <dd class="col-sm-9">@Model.ReportDate.ToString("yyyy/MM/dd")</dd>

            <dt class="col-sm-3">Report Details</dt>
            <dd class="col-sm-9">@Model.FaultType</dd>

            <dt class="col-sm-3">Fault</dt>
            <dd class="col-sm-9">@Model.Fault?.FaultDescription</dd>
        </dl>

        <form asp-action="Delete" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="FaultReportId" />

            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash"></i> Yes, Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Cancel
            </a>
        </form>
    </div>
</div>

