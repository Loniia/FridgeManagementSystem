@model IEnumerable<FridgeManagementSystem.Models.FaultReport>

@{
    ViewData["Title"] = "Completed Repairs";
}

<div class="card shadow">
    <div class="card-header bg-success text-white">
        <h4 class="m-0 font-weight-bold">
            <i class="fas fa-check-circle"></i> @ViewData["Title"]
        </h4>
    </div>
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Report ID</th>
                    <th>Report Date</th>
                    <th>Fault Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>R@(item.FaultReportId.ToString("D4"))</td>
                        <td>@item.ReportDate.ToString("yyyy/MM/dd")</td>
                        <td>@item.Fault?.FaultDescription</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.FaultReportId" class="btn btn-info btn-sm">View</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

