                @model FridgeManagementSystem.Models.FaultReport

@{
    ViewData["Title"] = "Generate Reports";
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FMS</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
        }

        .sidebar {
            width: 220px;
            background-color: #1a237e;
            color: white;
            padding: 1rem;
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
        }

        .sidebar-header {
            text-align: center;
            padding-bottom: 1.5rem;
            margin-bottom: 1rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

            .sidebar-header img {
                width: 60px;
                height: 60px;
                object-fit: contain;
                background-color: white;
                padding: 5px;
                border-radius: 8px;
            }

            .sidebar-header h6 {
                color: white;
                margin-top: 0.5rem;
                font-weight: 500;
            }

        .sidebar .nav-link {
            color: rgba(255, 255, 255, 0.85) !important;
            padding: 0.75rem 1rem;
            margin: 0.25rem 0;
            border-radius: 5px;
            transition: all 0.3s;
            display: flex;
            align-items: center;
        }

            .sidebar .nav-link:hover {
                color: white !important;
                background-color: #283593;
            }

            .sidebar .nav-link.active {
                color: white !important;
                background-color: #3949ab;
                font-weight: 500;
            }

            .sidebar .nav-link i {
                margin-right: 0.75rem;
                width: 20px;
                text-align: center;
            }

        .sidebar .btn-signout {
            background-color: #d32f2f;
            border: none;
            color: white;
            margin-top: 1.5rem;
            padding: 0.75rem;
            width: 100%;
        }

            .sidebar .btn-signout:hover {
                background-color: #b71c1c;
            }

        .main-content {
            margin-left: 220px;
            padding: 1.5rem;
            min-height: 100vh;
        }

        .card {
            border: 1px solid #e3e6f0;
            border-radius: 0.35rem;
        }

        .card-header {
            background-color: #f8f9fc;
            border-bottom: 1px solid #e3e6f0;
        }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="sidebar-header">
                <img src="~/images/Cozy.jpg" alt="Logo" />
                <h6>Onke Boyce</h6>
            </div>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a asp-controller="Faults" asp-action="Dashboard"
                       class="nav-link @(currentController=="Faults" && currentAction=="Dashboard" ? "active" : "")">
                        <i class="fas fa-home"></i> Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Faults" asp-action="Index"
                       class="nav-link @(currentController=="Faults" && currentAction=="Index" ? "active" : "")">
                        <i class="fas fa-exclamation-triangle"></i> View Fault Reports
                    </a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle @(currentController=="Schedules" ? "active" : "")" href="#" data-bs-toggle="dropdown">
                        <i class="fas fa-calendar-alt"></i> Scheduling
                    </a>
                    <ul class="dropdown-menu">
                        <li>
                            <a asp-controller="Schedules" asp-action="Create"
                               class="dropdown-item @(currentController=="Schedules" && currentAction=="Create" ? "active" : "")">
                                <i class="fas fa-plus-circle"></i> Schedule a Repair
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Schedules" asp-action="Index"
                               class="dropdown-item @(currentController=="Schedules" && currentAction=="Index" ? "active" : "")">
                                <i class="fas fa-list"></i> Scheduled Repairs
                            </a>
                        </li>
                    </ul>
                </li>
                <li class="nav-item">
                    <a asp-controller="Report" asp-action="Create"
                       class="nav-link @(currentController=="Report" ? "active" : "")">
                        <i class="fas fa-file-alt"></i> Generate Reports
                    </a>
                </li>
            </ul>
            <a asp-controller="UserAcc" asp-action="Login" class="btn btn-signout">
                <i class="fas fa-sign-out-alt"></i> Sign Out
            </a>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="m-0 font-weight-bold">
                        <i class="fas fa-plus"></i> @ViewData["Title"]
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        @Html.AntiForgeryToken()

                        <div class="form-group mb-3">
                            <label asp-for="ReportDate"></label>
                            <input asp-for="ReportDate" type="date" class="form-control" />
                            <span asp-validation-for="ReportDate" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="FaultType"></label>
                            <textarea asp-for="FaultType" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="FaultType" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="FaultID">Fault</label>
                            <select asp-for="FaultID" class="form-control" asp-items="ViewBag.FaultID"></select>
                            <span asp-validation-for="FaultID" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Save
                        </button>
                        <a asp-action="Create" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Cancel
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
