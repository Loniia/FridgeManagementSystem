@model FridgeManagementSystem.Models.RepairSchedule

@{
    ViewData["Title"] = "Schedule Repair";
}

<div class="card shadow-lg border-0 rounded-lg">
    <div class="card-header bg-primary text-white d-flex align-items-center">
        <i class="fas fa-plus-circle me-2"></i>
        <h4 class="m-0">@ViewData["Title"]</h4>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="FaultID" class="form-label fw-bold">Select Fault</label>
                    <select asp-for="FaultID" class="form-select" asp-items="ViewBag.FaultID">
                        <option value="">-- Select Fault --</option>
                    </select>
                    <span asp-validation-for="FaultID" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="TechnicianID" class="form-label fw-bold">Technician</label>
                    <select asp-for="TechnicianID" class="form-select" asp-items="ViewBag.TechnicianID">
                        <option value="">-- Select Technician --</option>
                    </select>
                    <span asp-validation-for="TechnicianID" class="text-danger"></span>
                </div>
            </div>

            <div class="row g-3 mt-2">
                <div class="col-md-6">
                    <label asp-for="RepairDate" class="form-label fw-bold">Repair Date</label>
                    <input asp-for="RepairDate" type="date" class="form-control"
                           min="@DateTime.Today.ToString("yyyy-MM-dd")" required />
                    <span asp-validation-for="RepairDate" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="ScheduleTime" class="form-label fw-bold">Repair Time</label>
                    <input asp-for="ScheduleTime" type="time" class="form-control" required />
                    <small class="text-muted">Working hours: 08:00 - 17:00</small>
                    <span asp-validation-for="ScheduleTime" class="text-danger"></span>
                </div>
            </div>

            <div class="mt-3">
                <label asp-for="Diagnosis" class="form-label fw-bold">Diagnosis / Description</label>
                <textarea asp-for="Diagnosis" class="form-control" rows="3"
                          placeholder="Enter diagnosis or additional details..."></textarea>
                <span asp-validation-for="Diagnosis" class="text-danger"></span>
            </div>

            <div class="mt-3">
                <label asp-for="Status" class="form-label fw-bold">Status</label>
                <select asp-for="Status" class="form-select">
                    <option value="Scheduled" selected>Scheduled</option>
                    <option value="In Progress">In Progress</option>
                    <option value="On Hold">On Hold</option>
                    <option value="Completed">Completed</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-end gap-2 mt-4">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Create Schedule
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            // Default to tomorrow
            const tomorrow = new Date();
            tomorrow.setDate(tomorrow.getDate() + 1);
            $('#RepairDate').val(tomorrow.toISOString().split('T')[0]);

            // Default time = 09:00
            $('#ScheduleTime').val('09:00');
        });
    </script>
}


