@model FridgeManagementSystem.Models.RepairSchedule

@{
    ViewData["Title"] = "Delete Repair Schedule";
}

<div class="card shadow border-danger">
    <div class="card-header bg-danger text-white">
        <h4 class="m-0 font-weight-bold">
            <i class="fas fa-trash-alt"></i> @ViewData["Title"] - R@(Model.RepairID.ToString("D4"))
        </h4>
    </div>
    <div class="card-body">
        <h5 class="text-danger">⚠️ Are you sure you want to delete this repair schedule?</h5>
        <hr />

        <dl class="row">
            <dt class="col-sm-3">Repair ID:</dt>
            <dd class="col-sm-9">R@(Model.RepairID.ToString("D4"))</dd>

            <dt class="col-sm-3">Fault Description:</dt>
            <dd class="col-sm-9">@Model.Diagnosis</dd>

            <dt class="col-sm-3">Fridge Model:</dt>
            <dd class="col-sm-9">@(Model.Fridge?.Model)</dd>

            <dt class="col-sm-3">Repair Date:</dt>
            <dd class="col-sm-9">@Model.RepairDate.ToString("yyyy/MM/dd")</dd>

            <dt class="col-sm-3">Repair Time:</dt>
            <dd class="col-sm-9">@Model.ScheduleTime.ToString(@"hh\:mm")</dd>

            <dt class="col-sm-3">Technician:</dt>
            <dd class="col-sm-9">@(Model.FaultTechnician?.FirstName ?? "Not assigned")</dd>

            <dt class="col-sm-3">Status:</dt>
            <dd class="col-sm-9">
                <span class="badge @GetStatusBadgeClass(Model.Status)">
                    @Model.Status
                </span>
            </dd>

            <dt class="col-sm-3">Fault ID:</dt>
            <dd class="col-sm-9">F@(Model.FaultID.ToString("D4"))</dd>
        </dl>

        <form asp-action="Delete" method="post" class="mt-4">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="RepairID" />

            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash"></i> Yes, Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Cancel
            </a>
        </form>
    </div>
</div>

@functions {
    private string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Scheduled" => "bg-primary",
            "In Progress" => "bg-warning",
            "Completed" => "bg-success",
            "On Hold" => "bg-secondary",
            _ => "bg-info"
        };
    }
}


