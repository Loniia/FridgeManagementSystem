@model FridgeManagementSystem.Models.RepairSchedule

@{
    ViewData["Title"] = "Complete Repair";
}

<div class="card shadow">
    <div class="card-header">
        <h4 class="m-0 font-weight-bold text-primary">Mark Repair as Completed</h4>
    </div>
    <div class="card-body">
        <h5>Are you sure you want to mark this repair as completed?</h5>
        <p><strong>Diagnosis:</strong> @Model.Diagnosis</p>
        <p><strong>Repair Date:</strong> @Model.RepairDate.ToShortDateString()</p>
        <p><strong>Status:</strong> @Model.Status</p>
        <form asp-action="Complete" method="post">
            <input type="hidden" asp-for="RepairID" />
            <button type="submit" class="btn btn-success">Yes, Complete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

