@model FridgeManagementSystem.Controllers.DashboardViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid">
    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Total Fault Reports
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalFaults</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-exclamation-triangle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Unattended Faults
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.UnattendedFaults</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clock fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-danger shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                                High Priority
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.HighPriorityFaults</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-flag fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Completed This Week
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.CompletedThisWeek</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Fault Reports -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">Recent Fault Reports</h6>
                    <a asp-action="Index" class="btn btn-primary btn-sm">View All Fault Reports</a>
                </div>
                <div class="card-body">
                    @if (Model.RecentFaults.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Report ID</th>
                                        <th>Fault Type</th>
                                        <th>Description</th>
                                        <th>Status</th>
                                        <th>Urgency</th>
                                        <th>Fridge Model</th>
                                        <th>Customer</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var faultReport in Model.RecentFaults)
                                    {
                                        <tr>
                                            <td>FR@(faultReport.FaultReportId.ToString("D3"))</td>
                                            <td>
                                                <span class="badge bg-info">@faultReport.FaultType</span>
                                            </td>
                                            <td>@faultReport.FaultDescription</td>
                                            <td>
                                                <span class="badge @GetStatusBadgeClass(faultReport.StatusFilter)">@faultReport.StatusFilter</span>
                                            </td>
                                            <td>
                                                <span class="badge @GetUrgencyBadgeClass(faultReport.UrgencyLevel)">@faultReport.UrgencyLevel</span>
                                            </td>
                                            <td>@(faultReport.Fridge?.Model ?? "N/A")</td>
                                            <td>@(faultReport.Fridge?.Customer?.FullName ?? "N/A")</td>
                                            <td>
                                                <a asp-action="Details" asp-route-id="@faultReport.FaultReportId"
                                                   class="btn btn-info btn-sm">View</a>
                                                @if (faultReport.StatusFilter == "Pending" || faultReport.StatusFilter == "Diagnosing")
                                                {
                                                    <a asp-action="Process" asp-route-id="@faultReport.FaultReportId"
                                                       class="btn btn-primary btn-sm">Process</a>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-exclamation-circle fa-3x text-muted mb-3"></i>
                            <p class="text-muted">No recent fault reports found.</p>
                            <p class="text-muted small">New fault reports will appear here as they are reported.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Quick Actions</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 text-center mb-3">
                            <a asp-action="Index" class="btn btn-primary btn-lg btn-block">
                                <i class="fas fa-list fa-2x mb-2"></i><br>
                                View All Reports
                            </a>
                        </div>
                        <div class="col-md-3 text-center mb-3">
                            <a asp-action="Index" class="btn btn-warning btn-lg btn-block">
                                <i class="fas fa-cogs fa-2x mb-2"></i><br>
                                Process Reports
                            </a>
                        </div>
                        <div class="col-md-3 text-center mb-3">
                            <a asp-action="Index" class="btn btn-danger btn-lg btn-block">
                                <i class="fas fa-tools fa-2x mb-2"></i><br>
                                Repair Fridges
                            </a>
                        </div>
                        <div class="col-md-3 text-center mb-3">
                            <a asp-action="Index" class="btn btn-success btn-lg btn-block">
                                <i class="fas fa-thermometer-half fa-2x mb-2"></i><br>
                                Update Conditions
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    public string GetStatusBadgeClass(string statusFilter)
    {
        return statusFilter?.ToLower() switch
        {
            "pending" => "bg-warning",
            "in progress" => "bg-info",
            "resolved" => "bg-success",
            "cancelled" => "bg-secondary",
            "diagnosing" => "bg-primary",
            "awaiting parts" => "bg-warning",
            "repairing" => "bg-danger",
            "testing" => "bg-info",
            "completed" => "bg-success",
            _ => "bg-secondary"
        };
    }

    public string GetUrgencyBadgeClass(UrgencyLevel urgencyLevel)
    {
        return urgencyLevel switch
        {
            UrgencyLevel.Critical => "bg-danger",
            UrgencyLevel.Emergency => "bg-dark",
            UrgencyLevel.High => "bg-warning",
            UrgencyLevel.Medium => "bg-info",
            UrgencyLevel.Low => "bg-success",
            _ => "bg-secondary"
        };
    }
}