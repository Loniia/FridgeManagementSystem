    @model FridgeManagementSystem.Controllers.DashboardViewModel

@{
    ViewData["Title"] = "Fault Technician Dashboard";
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FMS</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
        }

        .sidebar {
            width: 220px;
            background-color: #1a237e;
            color: white;
            padding: 1rem;
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
        }

        .sidebar-header {
            text-align: center;
            padding-bottom: 1.5rem;
            margin-bottom: 1rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

            .sidebar-header img {
                width: 60px;
                height: 60px;
                object-fit: contain;
                background-color: white;
                padding: 5px;
                border-radius: 8px;
            }

            .sidebar-header h6 {
                color: white;
                margin-top: 0.5rem;
                font-weight: 500;
            }

        .sidebar .nav-link {
            color: rgba(255, 255, 255, 0.85) !important;
            padding: 0.75rem 1rem;
            margin: 0.25rem 0;
            border-radius: 5px;
            transition: all 0.3s;
            display: flex;
            align-items: center;
        }

            .sidebar .nav-link:hover {
                color: white !important;
                background-color: #283593;
            }

            .sidebar .nav-link.active {
                color: white !important;
                background-color: #3949ab;
                font-weight: 500;
            }

            .sidebar .nav-link i {
                margin-right: 0.75rem;
                width: 20px;
                text-align: center;
            }

        .sidebar .btn-signout {
            background-color: #d32f2f;
            border: none;
            color: white;
            margin-top: 1.5rem;
            padding: 0.75rem;
            width: 100%;
        }

            .sidebar .btn-signout:hover {
                background-color: #b71c1c;
            }

        .main-content {
            margin-left: 220px;
            padding: 1.5rem;
            min-height: 100vh;
        }

        .card {
            border: 1px solid #e3e6f0;
            border-radius: 0.35rem;
        }

        .card-header {
            background-color: #f8f9fc;
            border-bottom: 1px solid #e3e6f0;
        }

        .table th {
            border-top: 1px solid #e3e6f0;
            background-color: #f8f9fc;
            font-weight: 600;
        }

        .border-left-primary {
            border-left: 0.25rem solid #4e73df !important;
        }

        .border-left-success {
            border-left: 0.25rem solid #1cc88a !important;
        }

        .border-left-danger {
            border-left: 0.25rem solid #e74a3b !important;
        }

        .border-left-warning {
            border-left: 0.25rem solid #f6c23e !important;
        }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="sidebar-header">
                <img src="~/images/Cozy.jpg" alt="Logo" />
                <h6>Onke Boyce</h6>
            </div>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a asp-controller="Faults" asp-action="Dashboard"
                       class="nav-link @(currentController=="Faults" && currentAction=="Dashboard" ? "active" : "")">
                        <i class="fas fa-home"></i> Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Faults" asp-action="Index"
                       class="nav-link @(currentController=="Faults" && currentAction=="Index" ? "active" : "")">
                        <i class="fas fa-exclamation-triangle"></i> View Fault Reports
                    </a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle @(currentController=="Schedules" ? "active" : "")" href="#" data-bs-toggle="dropdown">
                        <i class="fas fa-calendar-alt"></i> Scheduling
                    </a>
                    <ul class="dropdown-menu">
                        <li>
                            <a asp-controller="Schedules" asp-action="Create"
                               class="dropdown-item @(currentController=="Schedules" && currentAction=="Create" ? "active" : "")">
                                <i class="fas fa-plus-circle"></i> Schedule a Repair
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Schedules" asp-action="Details"
                               class="dropdown-item @(currentController=="Schedules" && currentAction=="Details" ? "active" : "")">
                                <i class="fas fa-list"></i> Scheduled Repairs
                            </a>
                        </li>
                    </ul>
                </li>
                <li class="nav-item">
                    <a asp-controller="Report" asp-action="Create"
                       class="nav-link @(currentController=="Report" ? "active" : "")">
                        <i class="fas fa-file-alt"></i> Generate Reports
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Schedules" asp-action="Index"
                       class="nav-link @(currentController=="Schedules" && currentAction=="Index" ? "active" : "")">
                        <i class="fas fa-check-circle"></i> Completed Repairs
                    </a>
                </li>
            </ul>
            <a asp-controller="UserAcc" asp-action="Login" class="btn btn-signout">
                <i class="fas fa-sign-out-alt"></i> Sign Out
            </a>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <div class="container-fluid">
                <h1 class="h3 mb-4 text-gray-800">Fault Technician Dashboard</h1>

                <!-- Summary Cards -->
                <div class="row mb-4">
                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card border-left-primary shadow h-100 py-2">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Unattended Faults</div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.UnattendedFaults</div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-exclamation-triangle fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card border-left-success shadow h-100 py-2">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Scheduled Repairs</div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TodaysRepairs</div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-calendar-check fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card border-left-danger shadow h-100 py-2">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">High Priority Faults</div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.HighPriorityFaults</div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-flag fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card border-left-warning shadow h-100 py-2">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Total Faults</div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalFaults</div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-tasks fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Today's Repairs Table -->
                <div class="card shadow mb-4">
                    <div class="card-header py-3 d-flex justify-content-between align-items-center">
                        <h6 class="m-0 font-weight-bold text-primary">Today's Repairs</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Customer Name</th>
                                        <th>Address</th>
                                        <th>Fridge</th>
                                        <th>Model & Brand</th>
                                        <th>Schedule Date and Time</th>
                                        <th>Category</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var fault in Model.RecentFaults)
                                    {
                                        <tr>
                                            <td>@(fault.Fridge?.Customer?.FullName)</td>
                                            <td>@(fault.Fridge?.Customer?.Location)</td>
                                            <td>@(fault.Fridge?.Type)</td>
                                            <td>@(fault.Fridge?.Model)</td>
                                            <td>@fault.ScheduledDate.ToString("yyyy-MM-dd HH:mm")</td>
                                            <td>@fault.FaultDescription</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="alert alert-info">
                    <strong>Note:</strong> Personnel can view recent and upcoming faults, including scheduled and high priority faults.
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
