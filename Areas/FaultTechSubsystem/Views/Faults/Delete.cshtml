@model FridgeManagementSystem.Models.Fault

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Delete Fault";
}

<div class="card shadow border-danger">
    <div class="card-header bg-danger text-white">
        <h4><i class="fas fa-trash"></i> Delete Fault </h4>
    </div>
    <div class="card-body">
        <h5 class="text-danger">⚠️ Are you sure you want to delete this fault?</h5>
        <dl class="row">
            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Model.FaultDescription</dd>

            <dt class="col-sm-3">Fridge</dt>
            <dd class="col-sm-9">@Model.Fridge?.Model</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">@Model.Status</dd>

            <dt class="col-sm-3">Priority</dt>
            <dd class="col-sm-9">@Model.Priority</dd>
        </dl>

        <form asp-action="Delete">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="FaultID" />
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash"></i> Yes, Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Cancel
            </a>
        </form>
    </div>
</div>
