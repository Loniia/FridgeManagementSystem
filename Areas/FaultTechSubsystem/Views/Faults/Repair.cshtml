@model FridgeManagementSystem.Models.RepairSchedule
@{
    ViewData["Title"] = "Repair Fridge";
    var faultReport = ViewBag.FaultReport as FridgeManagementSystem.Models.FaultReport;
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4><i class="fas fa-tools"></i> Repair Fridge</h4>
        </div>
        <div class="card-body">
            @if (faultReport != null)
            {
                <div class="alert alert-info">
                    Fridge: @faultReport.Fridge?.Brand @faultReport.Fridge?.Model<br>
                    Fault: @faultReport.FaultType
                </div>
            }

            <form asp-action="Repair" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="FaultReportId" />
                <input type="hidden" asp-for="FridgeId" />
                <input type="hidden" asp-for="RepairID" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="RepairType" class="control-label">Repair Type</label>
                            <select asp-for="RepairType" class="form-control" asp-items="ViewBag.RepairTypes">
                                <option value="">Select Repair Type</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label asp-for="PartsUsed" class="control-label">Parts Used</label>
                            <input asp-for="PartsUsed" class="form-control" />
                            <span asp-validation-for="PartsUsed" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="RepairCost" class="control-label">Repair Cost (R)</label>
                            <input asp-for="RepairCost" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="RepairCost" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Status" class="control-label">Repair Status</label>
                            <select asp-for="Status" class="form-control">
                                <option value="Diagnosing">Diagnosing</option>
                                <option value="Repairing">Repairing</option>
                                <option value="Testing">Testing</option>
                                <option value="Completed">Completed</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label asp-for="RepairNotes" class="control-label">Repair Notes</label>
                            <textarea asp-for="RepairNotes" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="RepairNotes" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-primary">Save Repair Details</button>
                    <a asp-action="Process" asp-route-id="@Model.FaultReportId" class="btn btn-secondary">Back to Process</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}