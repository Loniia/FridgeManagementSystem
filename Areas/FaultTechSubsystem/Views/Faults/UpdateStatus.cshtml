@model FridgeManagementSystem.Models.Fridge
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Update Fridge Condition";
    ViewData["Sidebar"] = "FaultTechSubsystem";

    var faultReport = ViewBag.FaultReport as FridgeManagementSystem.Models.FaultReport;
    var conditionOptions = ViewBag.ConditionOptions as IEnumerable<SelectListItem>;

    // Simple helper functions
    string GetConditionBadgeClass(string condition)
    {
        if (condition == null) return "bg-secondary";
        switch (condition.ToLower())
        {
            case "working": return "bg-success";
            case "under repair": return "bg-warning";
            case "faulty": return "bg-danger";
            case "scrapped": return "bg-dark";
            default: return "bg-secondary";
        }
    }

    string GetStatusBadgeClass(string status)
    {
        if (status == null) return "bg-secondary";
        switch (status.ToLower())
        {
            case "pending": return "bg-warning";
            case "inprogress": return "bg-primary";
            case "onhold": return "bg-info";
            case "complete": return "bg-success";
            case "cancelled": return "bg-secondary";
            default: return "bg-secondary";
        }
    }
}