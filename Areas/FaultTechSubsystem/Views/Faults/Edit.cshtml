@model FridgeManagementSystem.Models.Fault

@{
    ViewData["Title"] = "Edit Fault";
}

<div class="card shadow">
    <div class="card-header py-3">
        <h4 class="m-0 font-weight-bold text-primary">
            <i class="fas fa-edit"></i> @ViewData["Title"] 
        </h4>
    </div>
    <div class="card-body">
        <form asp-action="Edit">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FaultID" />

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="FridgeId" class="control-label">Select Fridge</label>
                        <select asp-for="FridgeId" class="form-control" asp-items="ViewBag.FridgeID">
                            <option value="">-- Select Fridge --</option>
                        </select>
                        <span asp-validation-for="FridgeId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Priority" class="control-label">Priority Level</label>
                        <select asp-for="Priority" class="form-control" asp-items="ViewBag.PriorityOptions">
                            <option value="">-- Select Priority --</option>
                        </select>
                        <span asp-validation-for="Priority" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="FaultDescription" class="control-label">Fault Description</label>
                <textarea asp-for="FaultDescription" class="form-control" rows="4">@Model.FaultDescription</textarea>
                <span asp-validation-for="FaultDescription" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Status" class="control-label">Status</label>
                <select asp-for="Status" class="form-control" asp-items="ViewBag.StatusOptions">
                    <option value="">-- Select Status --</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Save Changes
                </button>
                <a asp-action="Details" asp-route-id="@Model.FaultID" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}