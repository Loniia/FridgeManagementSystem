@model FridgeManagementSystem.Models.FaultReport

@{
    //Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Edit Fault Report";
}

<div class="card shadow">
    <div class="card-header py-3">
        <h4 class="m-0 font-weight-bold text-primary">
            <i class="fas fa-edit"></i> @ViewData["Title"]
        </h4>
    </div>
    <div class="card-body">
        <form asp-action="Edit">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FaultReportId" />

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="FridgeId" class="control-label">Select Fridge</label>
                        <select asp-for="FridgeId" class="form-control" asp-items="ViewBag.FridgeID">
                            <option value="">-- Select Fridge --</option>
                        </select>
                        <span asp-validation-for="FridgeId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="FaultType" class="control-label">Fault Type</label>
                        <select asp-for="FaultType" class="form-control" asp-items="Html.GetEnumSelectList<FaultType>()">
                            <option value="">-- Select Fault Type --</option>
                        </select>
                        <span asp-validation-for="FaultType" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="UrgencyLevel" class="control-label">Urgency Level</label>
                        <select asp-for="UrgencyLevel" class="form-control" asp-items="Html.GetEnumSelectList<UrgencyLevel>()">
                            <option value="">-- Select Urgency --</option>
                        </select>
                        <span asp-validation-for="UrgencyLevel" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="StatusFilter" class="control-label">Status</label>
                        <select asp-for="StatusFilter" class="form-control">
                            <option value="">-- Select Status --</option>
                            <option value="Pending">Pending</option>
                            <option value="In Progress">In Progress</option>
                            <option value="Resolved">Resolved</option>
                            <option value="Cancelled">Cancelled</option>
                            <option value="Diagnosing">Diagnosing</option>
                            <option value="Awaiting Parts">Awaiting Parts</option>
                            <option value="Repairing">Repairing</option>
                            <option value="Testing">Testing</option>
                            <option value="Completed">Completed</option>
                        </select>
                        <span asp-validation-for="StatusFilter" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="FaultDescription" class="control-label">Fault Description</label>
                <textarea asp-for="FaultDescription" class="form-control" rows="4">@Model.FaultDescription</textarea>
                <span asp-validation-for="FaultDescription" class="text-danger"></span>
            </div>

            <!-- Read-only fields for reference -->
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Report Date</label>
                        <input type="text" class="form-control" value="@Model.ReportDate.ToString("yyyy-MM-dd")" readonly />
                        <small class="form-text text-muted">Report date cannot be changed</small>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Reported By</label>
                        <input type="text" class="form-control"
                               value="@(Model.MaintenanceVisitId > 0 ? "Maintenance Technician" : "Customer")" readonly />
                    </div>
                </div>
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Save Changes
                </button>
                <a asp-action="Details" asp-route-id="@Model.FaultReportId" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Cancel
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-list"></i> Back to List
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
            // Set current values for enum selects
            $('#FaultType').val('@Model.FaultType');
            $('#UrgencyLevel').val('@Model.UrgencyLevel');
            $('#StatusFilter').val('@Model.StatusFilter');
        });
    </script>
}