@model IEnumerable<FridgeManagementSystem.Models.FaultReport>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "View Fault Reports";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">View Fault Reports</h1>

    <!-- Search Bar -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search by customer name, fault description...">
                <button class="btn btn-primary" type="button">
                    <i class="fas fa-search"></i> Search
                </button>
            </div>
        </div>
    </div>

    <!-- Fault Reports Table -->
    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead class="thead-light">
                        <tr>
                            <th>Report ID</th>
                            <th>Customer Name</th>
                            <th>Fridge Model</th>
                            <th>Fault Type</th>
                            <th>Description</th>
                            <th>Date Reported</th>
                            <th>Urgency</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>FR@(item.FaultReportId.ToString("D3"))</td>
                                    <td>@(item.Fridge?.Customer?.FullName ?? "N/A")</td>
                                    <td>@(item.Fridge?.Model ?? "N/A")</td>
                                    <td>
                                        <span class="badge bg-info">@item.FaultType</span>
                                    </td>
                                    <td>@item.FaultDescription</td>
                                    <td>@item.ReportDate.ToString("yyyy-MM-dd")</td>
                                    <td>
                                        <span class="badge @(item.UrgencyLevel == UrgencyLevel.Critical || item.UrgencyLevel == UrgencyLevel.Emergency ? "bg-danger" :
                                                        item.UrgencyLevel == UrgencyLevel.High ? "bg-warning" :
                                                        item.UrgencyLevel == UrgencyLevel.Medium ? "bg-info" : "bg-secondary")">
                                            @item.UrgencyLevel
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge @(item.StatusFilter == "Pending" ? "bg-danger" :
                                                        item.StatusFilter == "In Progress" ? "bg-warning" :
                                                        item.StatusFilter == "Resolved" ? "bg-success" : "bg-secondary")">
                                            @item.StatusFilter
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@item.FaultReportId" class="btn btn-outline-info btn-sm" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Process" asp-route-id="@item.FaultReportId" class="btn btn-outline-primary btn-sm" title="Process Fault">
                                                <i class="fas fa-cogs"></i>
                                            </a>
                                            @if (item.StatusFilter == "In Progress" || item.StatusFilter == "Diagnosing")
                                            {
                                                <a asp-action="Repair" asp-route-id="@item.FaultReportId" class="btn btn-outline-warning btn-sm" title="Start Repair">
                                                    <i class="fas fa-tools"></i>
                                                </a>
                                            }
                                            <a asp-action="UpdateCondition" asp-route-id="@item.FaultReportId" class="btn btn-outline-secondary btn-sm" title="Update Condition">
                                                <i class="fas fa-thermometer-half"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="9" class="text-center">No fault reports found</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="alert alert-info mt-4">
        <strong>Note:</strong> Use the action buttons to manage each fault report. Start with "Process" for new fault reports.
    </div>
</div>