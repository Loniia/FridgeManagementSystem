@model FridgeManagementSystem.Models.Fridge
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Update Fridge Condition";
    ViewData["Sidebar"] = "FaultTechSubsystem";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 text-gray-800">Update Fridge Condition</h1>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Fault Reports
        </a>
    </div>

    <!-- Display Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Fridge Information -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-primary text-white">
            <h6 class="m-0 font-weight-bold">Fridge Information - #@Model.FridgeId</h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <p><strong>Model:</strong> @Model.Model</p>
                    <p><strong>Brand:</strong> @Model.Brand</p>
                    <p><strong>Serial No:</strong> @Model.SerialNumber</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Type:</strong> @Model.FridgeType</p>
                    <p>
                        <strong>Current Condition:</strong>
                        <span class="badge @(Model.Condition == "Working" ? "bg-success" : Model.Condition == "Under Repair" ? "bg-warning" : Model.Condition == "Faulty" ? "bg-danger" : "bg-dark")">
                            @Model.Condition
                        </span>
                    </p>
                    @if (Model.Customer != null)
                    {
                        <p><strong>Customer:</strong> @Model.Customer.FullName</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Update Condition</h6>
                </div>
                <div class="card-body">
                    <form asp-action="UpdateCondition" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="FridgeId" value="@Model.FridgeId" />
                        <input type="hidden" name="Model" value="@Model.Model" />
                        <input type="hidden" name="SerialNumber" value="@Model.SerialNumber" />
                        <input type="hidden" name="Brand" value="@Model.Brand" />
                        <input type="hidden" name="FridgeType" value="@Model.FridgeType" />

                        <div class="form-group mb-4">
                            <label for="Condition" class="form-label">Fridge Condition *</label>
                            <select name="Condition" id="Condition" class="form-control" required>
                                <option value="">-- Select Condition --</option>
                                <option value="Working">Working - Fully Functional</option>
                                <option value="Under Repair">Under Repair</option>
                                <option value="Faulty">Faulty - Needs Attention</option>
                                <option value="Scrapped">Scrapped - Beyond Repair</option>
                            </select>
                            <small class="form-text text-muted">
                                Select the current operational status of the fridge
                            </small>
                        </div>

                        <div class="form-group mb-4">
                            <label for="Notes" class="form-label">Condition Notes</label>
                            <textarea name="Notes" id="Notes" class="form-control" rows="4" placeholder="Add notes about the fridge condition...">@Model.Notes</textarea>
                            <small class="form-text text-muted">
                                Document any issues, repairs performed, or maintenance recommendations
                            </small>
                        </div>

                        <div class="form-group mb-4">
                            <label for="UpdatedDate" class="form-label">Update Date</label>
                            <input type="datetime-local" class="form-control" id="UpdatedDate" name="UpdatedDate"
                                   value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
                            <small class="form-text text-muted">
                                Date and time when condition was assessed
                            </small>
                        </div>

                        <!-- Warning for Working condition -->
                        <div class="alert alert-warning">
                            <h6><i class="fas fa-info-circle"></i> Important Note</h6>
                            <p class="mb-0">
                                Setting condition to <strong>"Working"</strong> will automatically mark all related fault reports as <strong>Complete</strong>.
                            </p>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-save"></i> Update Condition
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Condition Guide -->
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Condition Guide</h6>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <h6><i class="fas fa-lightbulb"></i> Definitions</h6>
                        <ul class="mb-0 small">
                            <li><strong class="text-success">Working:</strong> Fully functional</li>
                            <li><strong class="text-warning">Under Repair:</strong> Being repaired</li>
                            <li><strong class="text-danger">Faulty:</strong> Needs repair</li>
                            <li><strong class="text-dark">Scrapped:</strong> Beyond repair</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Set current condition
            $('#Condition').val('@Model.Condition');

            // Confirmation for Working condition
            $('#Condition').change(function() {
                if ($(this).val() === 'Working') {
                    if (!confirm('Setting condition to "Working" will mark all fault reports as Complete. Continue?')) {
                        $(this).val('@Model.Condition');
                    }
                }
            });
        });
    </script>
}