@model FridgeManagementSystem.Models.Fault
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Fault Details Page";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-3 border-bottom pb-2">
        <div class="col-md-8">
            <h5 class="fw-bold">Fault Details Page</h5>
            <p><strong>Fault No:</strong> F@(Model.FaultID.ToString("D3"))</p>
            <p><strong>Priority:</strong> @Model.Priority</p>
            <p><strong>Date Reported:</strong> @Model.CreatedDate.ToString("yyyy/MM/dd")</p>
        </div>
        <div class="col-md-4 text-end">
            <img src="~/images/logo.png" alt="Company Logo" style="max-height:60px;" />
        </div>
    </div>

    <!-- Details Section -->
    <div class="border p-3 mb-3">
        <h6 class="fw-bold mb-3 text-center">Details</h6>
        <div class="row">
            <!-- Fridge Information -->
            <div class="col-md-6 border-end">
                <h6 class="fw-bold">Fridge Information:</h6>
                @if (Model.Fridge != null)
                {
                    <p><strong>Serial Number:</strong> @Model.Fridge.SerialNumber</p>
                    <p><strong>Model:</strong> @Model.Fridge.Model</p>
                    <p><strong>Brand:</strong> @Model.Fridge.Brand</p>
                    <p><strong>Type:</strong> @Model.Fridge.FridgeType</p>
                }
                else
                {
                    <p class="text-muted">No fridge information available.</p>
                }
            </div>

            <!-- Repair History -->
            <div class="col-md-6">
                <h6 class="fw-bold">Repair History:</h6>
                @if (Model.RepairSchedules.Any())
                {
                    foreach (var repair in Model.RepairSchedules)
                    {
                        <p>@repair.RepairNotes</p>
                    }
                }
                else
                {
                    <p class="text-muted">First time repair for this fridge.</p>
                }
            </div>
        </div>
    </div>

    <!-- Customer Information -->
    <div class="mb-3">
        <h6 class="fw-bold">Customer Information:</h6>
        @if (Model.Fridge?.Customer != null)
        {
            <table class="table table-bordered table-striped">
                <thead class="table-primary">
                    <tr>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Phone No</th>
                        <th>Location</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.Fridge.Customer.FullName</td>
                        <td>@Model.Fridge.Customer.Email</td>
                        <td>@Model.Fridge.Customer.PhoneNumber</td>
                        <td>@Model.Fridge.Customer.Location</td>

                    </tr>
                </tbody>
            </table>
        }
        else
        {
            <p class="text-muted">No customer information available.</p>
        }
    </div>

    <!-- Buttons -->
    <div class="mt-3">
        <button type="button" class="btn btn-danger" onclick="window.print()">
            <i class="fas fa-print"></i> Print
        </button>
        <a asp-action="Index" class="btn btn-secondary">Close</a>
    </div>
</div>


