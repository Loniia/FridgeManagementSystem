@model FridgeManagementSystem.Models.FaultReport

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Report New Fault";
}

<div class="card shadow">
    <div class="card-header py-3">
        <h4 class="m-0 font-weight-bold text-primary">
            <i class="fas fa-plus-circle"></i> @ViewData["Title"]
        </h4>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="FridgeId" class="control-label">Select Fridge</label>
                        <select asp-for="FridgeId" class="form-control" asp-items="ViewBag.FridgeID">
                            <option value="">-- Select Fridge --</option>
                        </select>
                        <span asp-validation-for="FridgeId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="FaultType" class="control-label">Fault Type</label>
                        <select asp-for="FaultType" class="form-control" asp-items="Html.GetEnumSelectList<FaultType>()">
                            <option value="">-- Select Fault Type --</option>
                        </select>
                        <span asp-validation-for="FaultType" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="UrgencyLevel" class="control-label">Urgency Level</label>
                        <select asp-for="UrgencyLevel" class="form-control" asp-items="Html.GetEnumSelectList<UrgencyLevel>()">
                            <option value="">-- Select Urgency --</option>
                        </select>
                        <span asp-validation-for="UrgencyLevel" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="StatusFilter" class="control-label">Initial Status</label>
                        <select asp-for="StatusFilter" class="form-control">
                            <option value="">-- Select Status --</option>
                            <option value="Pending">Pending</option>
                            <option value="In Progress">In Progress</option>
                            <option value="Diagnosing">Diagnosing</option>
                        </select>
                        <span asp-validation-for="StatusFilter" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="FaultDescription" class="control-label">Fault Description</label>
                <textarea asp-for="FaultDescription" class="form-control" rows="4"
                          placeholder="Please describe the fault in detail..."></textarea>
                <span asp-validation-for="FaultDescription" class="text-danger"></span>
                <small class="form-text text-muted">
                    Be as detailed as possible to help technicians diagnose the issue quickly.
                </small>
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Report Fault
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
            // Set default values if not selected
            if ($('#StatusFilter').val() === '') {
                $('#StatusFilter').val('Pending');
            }
            if ($('#UrgencyLevel').val() === '') {
                $('#UrgencyLevel').val('@UrgencyLevel.Medium');
            }
            if ($('#FaultType').val() === '') {
                $('#FaultType').val('@FaultType.Electrical');
            }
        });
    </script>
}