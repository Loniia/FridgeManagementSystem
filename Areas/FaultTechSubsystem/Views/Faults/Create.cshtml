@model FridgeManagementSystem.Models.Fault

@{
    ViewData["Title"] = "Report New Fault";
}

<div class="card shadow">
    <div class="card-header py-3">
        <h4 class="m-0 font-weight-bold text-primary">
            <i class="fas fa-plus-circle"></i> @ViewData["Title"]
        </h4>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="FridgeId" class="control-label">Select Fridge</label>
                        <select asp-for="FridgeId" class="form-control" asp-items="ViewBag.FridgeID">
                            <option value="">-- Select Fridge --</option>
                        </select>
                        <span asp-validation-for="FridgeId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Priority" class="control-label">Priority Level</label>
                        <select asp-for="Priority" class="form-control" asp-items="ViewBag.PriorityOptions">
                            <option value="">-- Select Priority --</option>
                        </select>
                        <span asp-validation-for="Priority" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="FaultDescription" class="control-label">Fault Description</label>
                <textarea asp-for="FaultDescription" class="form-control" rows="4"
                          placeholder="Please describe the fault in detail..."></textarea>
                <span asp-validation-for="FaultDescription" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Status" class="control-label">Initial Status</label>
                <select asp-for="Status" class="form-control" asp-items="ViewBag.StatusOptions">
                    <option value="">-- Select Status --</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary">
                    <a asp-action="Dashboard">
                    <i class="fas fa-save"></i> Report Fault
                    </a>
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
            // Set default values if not selected
            if ($('#Status').val() === '') {
                $('#Status').val('Pending');
            }
            if ($('#Priority').val() === '') {
                $('#Priority').val('Low');
            }
        });
    </script>
}
