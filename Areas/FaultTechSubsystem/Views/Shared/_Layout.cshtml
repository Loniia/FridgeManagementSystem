@* Layout for Fault Technician *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dynamic Ice Inc</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <style>
        body {
            display: flex;
            min-height: 100vh;
        }

        .sidebar {
            width: 250px;
            background-color: #343a40;
            color: white;
            flex-shrink: 0;
            padding-bottom: 50px;
            position: fixed;
            top: 0;
            left: 0;
            height: 100%;
            z-index: 1040;
            transition: transform 0.3s ease;
        }

        .sidebar-collapsed {
            transform: translateX(-100%);
        }

        .sidebar-header {
            padding: 1rem;
            background-color: #23272b;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .toggle-sidebar-btn {
            background: none;
            border: none;
            color: white;
            font-size: 1.2rem;
            cursor: pointer;
        }

        .user-panel {
            padding: 1rem;
        }

        .user-card {
            background-color: #495057;
            border-radius: 8px;
            padding: 0.5rem;
            text-align: center;
        }

            .user-card img {
                width: 50px;
                height: 50px;
                border-radius: 50%;
                object-fit: cover;
                margin-bottom: 0.5rem;
            }

            .user-card h4 {
                margin: 0;
                font-size: 0.9rem;
            }

            .user-card p {
                margin: 0;
                font-size: 0.75rem;
                color: #adb5bd;
            }

        .sidebar-menu {
            list-style: none;
            padding: 0;
        }

            .sidebar-menu li a {
                display: block;
                color: white;
                padding: 0.75rem 1rem;
                text-decoration: none;
            }

                .sidebar-menu li a:hover, .sidebar-menu li a.active {
                    background-color: #495057;
                }

            .sidebar-menu .menu-header {
                display: block;
                padding: 0.75rem 1rem;
                font-weight: bold;
                font-size: 0.9rem;
                text-transform: uppercase;
                color: #adb5bd;
                cursor: pointer;
            }

        .main-content {
            flex: 1;
            background-color: #f8f9fa;
            display: flex;
            flex-direction: column;
            margin-left: 250px;
            transition: margin-left 0.3s ease;
        }

        main {
            flex: 1;
            padding: 1rem;
        }

        #sidebarFixedToggle {
            position: fixed;
            top: 10px;
            left: 10px;
            z-index: 1050;
            display: none;
            background-color: #343a40;
            color: white;
            border: none;
            padding: 0.5rem 0.7rem;
            border-radius: 4px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <button class="toggle-sidebar-btn" id="sidebarToggle">
                <i class="fas fa-bars"></i>
            </button>
            <h3>Fault Technician <br /> Management<br> SubSystem</h3>
        </div>

        <!-- User panel -->
        <div class="user-panel">
            <div class="user-card">
                <img src="~/images/technician.jpg" alt="Fault Technician" />
                <h4>@User.Identity.Name</h4>
                <p>Fault Technician</p>
            </div>
        </div>

        <!-- Fault Technician Menu -->
        <ul class="sidebar-menu">
            <li>
                <span class="menu-header" id="faultHeader">
                    <i class="fas fa-tools"></i> Fault Management
                    <i class="fas fa-chevron-down float-end"></i>
                </span>
                <ul class="collapse list-unstyled" id="faultTechnicianSubmenu">
                    <li><a asp-area="FaultTechSubsystem" asp-controller="Faults" asp-action="Dashboard"><i class="fas fa-tachometer-alt"></i> Dashboard</a></li>
                    <li><a asp-area="FaultTechSubsystem" asp-controller="Faults" asp-action="Index"><i class="fas fa-list"></i> View Faults</a></li>
                    <li><a asp-area="FaultTechSubsystem" asp-controller="Faults" asp-action="Process"><i class="fas fa-wrench"></i> Process Fault</a></li>
                    <li><a asp-area="FaultTechSubsystem" asp-controller="Faults" asp-action="Repair"><i class="fas fa-tools"></i> Repair Fault</a></li>
                    <li><a asp-area="FaultTechSubsystem" asp-controller="Faults" asp-action="Complete"><i class="fas fa-check"></i> Complete Repair</a></li>
                    <li><a asp-area="FaultTechSubsystem" asp-controller="Faults" asp-action="UpdateCondition"><i class="fas fa-exclamation-triangle"></i> Update Condition</a></li>
                    <li><a asp-area="FaultTechSubsystem" asp-controller="Faults" asp-action="Details"><i class="fas fa-info-circle"></i> Fault Details</a></li>
                </ul>
            </li>
        </ul>

        <!-- General Pages -->
        <ul class="sidebar-menu">
            <li><a asp-area="FaultTechSubsystem" asp-controller="FaultTech" asp-action="About"><i class="fas fa-info"></i> About Us</a></li>
            <li><a asp-area="FaultTechSubsystem" asp-controller="FaultTech" asp-action="Services"><i class="fas fa-concierge-bell"></i> Services</a></li>
            <li><a asp-area="FaultTechSubsystem" asp-controller="FaultTech" asp-action="Contact"><i class="fas fa-envelope"></i> Contact Us</a></li>
        </ul>

        <!-- Account -->
        <div class="sign-out">
            <a asp-area="" asp-controller="Account" asp-action="Logout">
                <i class="fas fa-sign-out-alt"></i> Sign Out
            </a>
        </div>
    </div>

    <!-- Fixed toggle button -->
    <button id="sidebarFixedToggle">
        <i class="fas fa-bars"></i>
    </button>

    <!-- Main content -->
    <div class="main-content" id="mainContent">
        <nav class="navbar navbar-expand-lg navbar-light bg-white">
            <div class="container-fluid">
                <a asp-area="FaultTechSubsystem" asp-controller="FaultTech" asp-action="Dashboard" class="navbar-brand">Dynamic Ice Inc</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#topNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="topNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a asp-area="FaultTechSubsystem" asp-controller="FaultTech" asp-action="Dashboard" class="nav-link">Home</a></li>
                        <li class="nav-item"><a asp-area="FaultTechSubsystem" asp-controller="FaultTech" asp-action="About" class="nav-link">About</a></li>
                        <li class="nav-item"><a asp-area="FaultTechSubsystem" asp-controller="FaultTech" asp-action="Services" class="nav-link">Services</a></li>
                        <li class="nav-item"><a asp-area="FaultTechSubsystem" asp-controller="FaultTech" asp-action="Contact" class="nav-link">Contact</a></li>
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        <form asp-area="" asp-page="/Account/Logout" method="post">
                            <button type="submit" class="btn btn-link">Logout</button>
                        </form>
                    </ul>
                </div>
            </div>
        </nav>

        <main role="main">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        $(function () {
            $('.navbar .nav-link').each(function () {
                if ((this.href) === window.location.href) $(this).addClass('active');
            });

            $('.sidebar-menu a').on('click', function () {
                $('.sidebar-menu a').removeClass('active');
                $(this).addClass('active');
            });

            $('#faultHeader').on('click', function () {
                $('#faultTechnicianSubmenu').collapse('toggle');
            });

            $('#sidebarToggle').on('click', function () {
                $('#sidebar').toggleClass('sidebar-collapsed');
                updateFixedToggle();
            });

            $('#sidebarFixedToggle').on('click', function () {
                $('#sidebar').removeClass('sidebar-collapsed');
                updateFixedToggle();
            });

            function updateFixedToggle() {
                if ($('#sidebar').hasClass('sidebar-collapsed')) {
                    $('#sidebarFixedToggle').show();
                } else {
                    $('#sidebarFixedToggle').hide();
                }
            }
            updateFixedToggle();
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
