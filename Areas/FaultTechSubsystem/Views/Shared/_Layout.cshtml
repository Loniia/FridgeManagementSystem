@using Microsoft.AspNetCore.Mvc.Rendering
@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FMS</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f8f9fa;
        }

        .sidebar {
        width: 210px;
        min-height: auto;
        background-color: #1a237e;
        color: white;
        padding: 1rem;
        box-shadow: 3px 0 10px rgba(0, 0, 0, 0.2);
        position: fixed;
        left: 0;
        top: 0;
        z-index: 100;
        }

        .sidebar-header {
        text-align: center;
        padding-bottom: 1.5rem;
        margin-bottom: 1rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .sidebar-header img {
        width: 60px;
        height: 60px;
        object-fit: contain;
        background-color: white;
        padding: 5px;
        border-radius: 8px;
        }

        .sidebar-header h6 {
        color: white;
        margin-top: 0.5rem;
        font-weight: 500;
        }

        .sidebar .nav-link {
        color: rgba(255, 255, 255, 0.85) !important;
        padding: 0.75rem 1rem;
        margin: 0.25rem 0;
        border-radius: 5px;
        transition: all 0.3s;
        }

        .sidebar .nav-link:hover {
        color: white !important;
        background-color: #283593;
        }

        .sidebar .nav-link.active {
        color: white !important;
        background-color: #3949ab;
        font-weight: 500;
        }

        .sidebar .nav-link i {
        margin-right: 0.75rem;
        width: 20px;
        text-align: center;
        }

        .sidebar .btn-signout {
        background-color: #d32f2f;
        border: none;
        color: white;
        margin-top: 1.5rem;
        padding: 0.75rem;
        }

        .sidebar .btn-signout:hover {
        background-color: #b71c1c;
        }

        .main-content {
        margin-left: 220px;
        padding: 1.5rem;
        width: calc(100% - 220px);
        min-height: 100vh;
        }

        /* Dropdown styles for sidebar */
        .sidebar .dropdown-menu {
        background-color: #283593;
        border: none;
        border-radius: 5px;
        margin: 0;
        padding: 0;
        }

        .sidebar .dropdown-item {
        color: rgba(255, 255, 255, 0.85);
        padding: 0.6rem 1rem 0.6rem 2.5rem;
        margin: 0;
        }

        .sidebar .dropdown-item:hover {
        background-color: #3949ab;
        color: white;
        }

        .sidebar .dropdown-item.active {
        background-color: #3949ab;
        color: white;
        }

        .sidebar .dropdown-toggle::after {
        float: right;
        margin-top: 0.5rem;
        }

        .sidebar .nav-item.dropdown.show .dropdown-toggle {
        background-color: #3949ab;
        }
    </style>
</head>
<body>

    <div class="d-flex">
        <!-- Sidebar -->
        @if (User.Identity != null && User.Identity.IsAuthenticated)
        {
            <div class="sidebar">
                <div class="sidebar-header">
                        <img src="~/images/Cozy.jpg" alt="Logo" />
                        <h6>Onke Boyce</h6>
                    </div>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a asp-controller="Faults" asp-action="Dashboard"
                               class="nav-link @(currentController=="Faults" && currentAction=="Dashboard" ? "active" : "")">
                                <i class="fas fa-home"></i> <span>Dashboard</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Faults" asp-action="Index"
                               class="nav-link @(currentController=="Faults" && currentAction=="Index" ? "active" : "")">
                                <i class="fas fa-exclamation-triangle"></i> <span>View Faults</span>
                            </a>
                        </li>
                    <li class="nav-item">
                        <a asp-controller="Faults" asp-action="Process"
                           class="nav-link @(currentController=="Faults" && currentAction=="Process" ? "active" : "")">
                            <i class="fas fa-cogs"></i> <span>Process Fault</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Faults" asp-action="Repair"
                           class="nav-link @(currentController=="Faults" && currentAction=="Repair" ? "active" : "")">
                            <i class="fas fa-tools"></i> <span>Repair Fridge</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Faults" asp-action="UpdateCondition"
                           class="nav-link @(currentController=="Faults" && currentAction=="UpdateCondition" ? "active" : "")">
                            <i class="fas fa-thermometer-half"></i> <span>Update Condition</span>
                        </a>
                    </li>
                    </ul>
                    <div class="mt-auto">
                        <a asp-controller="UserAcc" asp-action="Login" class="btn btn-signout w-100">
                            <i class="fas fa-sign-out-alt"></i> <span>Sign Out</span>
                        </a>
                    </div> 
            </div>
            }
        <!-- Main Content -->
        <div class="main-content">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Initialize dropdowns
        document.addEventListener('DOMContentLoaded', function() {
            var dropdownElementList = [].slice.call(document.querySelectorAll('.dropdown-toggle'))
            var dropdownList = dropdownElementList.map(function (dropdownToggleEl) {
                return new bootstrap.Dropdown(dropdownToggleEl)
            });
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>

