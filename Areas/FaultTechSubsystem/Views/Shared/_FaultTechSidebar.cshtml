<!-- Clean Fault Tech Sidebar -->
<div class="sidebar" id="sidebar">
    <div class="sidebar-header">
        <h5>Fault Technician</h5>
        <small>Management System</small>
    </div>

    <!-- User Panel -->
    <div class="user-panel">
        <div class="user-card">
            <img src="~/images/technician1.jpg" alt="Technician" class="user-avatar" />
            <h6>@User.Identity?.Name</h6>
            <small>Fault Technician</small>
        </div>
    </div>

    <!-- Navigation Menu -->
    <nav class="sidebar-nav">
        <div class="nav-section">
            <h6 class="nav-section-title">
                <i class="fas fa-tools"></i>
                <span>Fault Management</span>
            </h6>
            <ul class="nav-links">
                <li><a asp-area="FaultTechSubsystem" asp-controller="Faults" asp-action="Dashboard" class="nav-link"><i class="fas fa-tachometer-alt"></i> Dashboard</a></li>
                <li><a asp-area="FaultTechSubsystem" asp-controller="Faults" asp-action="Index" class="nav-link"><i class="fas fa-list"></i> View Faults</a></li>
                <li><a asp-area="FaultTechSubsystem" asp-controller="Faults" asp-action="Reports" class="nav-link"><i class="fas fa-chart-bar"></i> Reports</a></li>
            </ul>
        </div>
    </nav>

    <!-- Sign Out -->
    <div class="sidebar-footer">
        <a asp-area="" asp-controller="Account" asp-action="Logout" class="sign-out-btn">
            <i class="fas fa-sign-out-alt"></i> Sign Out
        </a>
    </div>
</div>

<style>
    .sidebar {
        background: linear-gradient(180deg, #2c3e50 0%, #34495e 100%);
        color: white;
        height: 100vh;
        position: fixed;
        top: 0;
        left: 0;
        width: 280px;
        display: flex;
        flex-direction: column;
        z-index: 1000;
        box-shadow: 2px 0 10px rgba(0,0,0,0.1);
    }

    .sidebar-header {
        padding: 1.5rem 1rem 1rem;
        text-align: center;
        border-bottom: 1px solid #34495e;
    }

        .sidebar-header h5 {
            margin: 0;
            font-weight: 600;
        }

        .sidebar-header small {
            color: #bdc3c7;
            font-size: 0.8rem;
        }

    .user-panel {
        padding: 1.5rem 1rem;
        border-bottom: 1px solid #34495e;
    }

    .user-card {
        text-align: center;
    }

    .user-avatar {
        width: 70px;
        height: 70px;
        border-radius: 50%;
        border: 3px solid #3498db;
        margin-bottom: 0.75rem;
        object-fit: cover;
    }

    .user-card h6 {
        margin: 0;
        font-weight: 600;
    }

    .user-card small {
        color: #bdc3c7;
        font-size: 0.8rem;
    }

    .sidebar-nav {
        flex: 1;
        padding: 1rem 0;
        overflow-y: auto;
    }

    .nav-section {
        margin-bottom: 1.5rem;
    }

    .nav-section-title {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0 1rem 0.5rem;
        margin: 0;
        font-size: 0.85rem;
        font-weight: 600;
        color: #bdc3c7;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        border-bottom: 1px solid #34495e;
    }

    .nav-links {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .nav-link {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.75rem 1rem;
        color: #ecf0f1;
        text-decoration: none;
        transition: all 0.3s ease;
        border-left: 3px solid transparent;
    }

        .nav-link:hover {
            background: rgba(52, 152, 219, 0.1);
            color: #3498db;
            border-left-color: #3498db;
        }

        .nav-link.active {
            background: rgba(52, 152, 219, 0.2);
            color: #3498db;
            border-left-color: #3498db;
        }

        .nav-link i {
            width: 20px;
            text-align: center;
        }

    .sidebar-footer {
        padding: 1rem;
        border-top: 1px solid #34495e;
    }

    .sign-out-btn {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.75rem 1rem;
        color: #e74c3c;
        text-decoration: none;
        border-radius: 6px;
        transition: all 0.3s ease;
        background: rgba(231, 76, 60, 0.1);
    }

        .sign-out-btn:hover {
            background: rgba(231, 76, 60, 0.2);
            color: #c0392b;
        }
</style>

<script>
    $(document).ready(function () {
        // Set active navigation link
        $('.nav-link').each(function () {
            if (this.href === window.location.href) {
                $(this).addClass('active');
            }
        });
    });
</script>