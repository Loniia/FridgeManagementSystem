@model IEnumerable<FridgeManagementSystem.Models.CustomerViewModel>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Manage Customers";
}

<h2>Manage Customers</h2>

<!-- SEARCH FORM -->
<form asp-action="Search" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="searchString" value="@ViewData["CurrentFilter"]"
               class="form-control"
               placeholder="Search customers by Name and Email" />
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>

<p>
    <a asp-action="Create" asp-controller="ManageCustomer" class="btn btn-primary">Add New Customer</a>
</p>

<!-- Customers Table -->
<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Full Names</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Status</th>
            <th>Total Fridges Allocated</th>
            <th>Registration Date</th>
            <th>Last Fridge Return</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.FullNames</td>
                <td>@customer.PhoneNumber</td>
                <td>@customer.Email</td>
                <td>@(customer.IsActive ? "Active" : "Inactive")</td>
                <td>@customer.TotalFridgesAllocated</td> <!-- This now sums correctly -->
                <td>@customer.RegistrationDate.ToString("yyyy/MM/dd")</td>
                <td>
                    @{
                        var lastReturn = customer.FridgeAllocations?
                        .OrderByDescending(a => a.AllocationDate)
                        .FirstOrDefault()?.ReturnDate;
                    }
                    @(lastReturn.HasValue ? lastReturn.Value.ToString("yyyy/MM/dd") : "N/A")
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@customer.CustomerId" class="btn btn-warning btn-sm @(customer.IsActive ? "" : "disabled")">Edit</a>
                    <a asp-action="Delete" asp-route-id="@customer.CustomerId" class="btn btn-danger btn-sm @(customer.IsActive ? "" : "disabled")">Delete</a>
                    <a asp-action="Details" asp-route-id="@customer.CustomerId" class="btn btn-info btn-sm">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

