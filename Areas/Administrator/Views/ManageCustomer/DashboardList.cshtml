@model List<FridgeManagementSystem.Models.Customer>

@{
    ViewData["Title"] = "Manage Customers";
}

<h2 class="mb-4">All Customers</h2>

<div class="row">
    @foreach (var customer in Model)
    {
        <div class="col-md-4 mb-3">
            <a asp-area="Administrator"
               asp-controller="ManageCustomer"
               asp-action="Dashboard"
               asp-route-id="@customer.CustomerID"
               class="text-decoration-none text-dark">
                <div class="card h-100 shadow-sm hover-card">
                    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                        <span>@customer.FullName</span>
                        <span class="badge @(customer.IsActive ? "bg-success" : "bg-secondary")">
                            @(customer.IsActive ? "Active" : "Inactive")
                        </span>
                    </div>
                    <div class="card-body">
                        <p><i class="bi bi-shop me-1"></i><strong>Shop Type:</strong> @customer.ShopType</p>
                        <p><i class="bi bi-envelope me-1"></i><strong>Email:</strong> @customer.Email</p>
                        <p><i class="bi bi-telephone me-1"></i><strong>Phone:</strong> @customer.PhoneNumber</p>
                        <p>
                            <i class="bi bi-box-seam me-1"></i>
                            <strong>Fridges Allocated:</strong>
                            @(customer.FridgeAllocation != null && customer.FridgeAllocation.Any()
                                ? customer.FridgeAllocation.Count.ToString()
                                : "None")
                        </p>
                    </div>
                </div>
            </a>
        </div>
    }
</div>

<style>
    /* Hover effect for cards */
    .hover-card {
        transition: all 0.2s ease-in-out;
    }

        .hover-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.2);
        }

    /* Remove underline on hover for links */
    a.text-decoration-none:hover {
        text-decoration: none;
    }

    /* Optional: cursor pointer for cards */
    a.text-decoration-none {
        cursor: pointer;
    }
</style>


