@model FridgeManagementSystem.Models.Customer

@{
    Layout = "_Layout";
    ViewData["Title"] = "Delete Customer";
}

<h2>Delete Customer</h2>

<div class="alert alert-warning">
    <strong>ALERT!!</strong> Are you sure you want to delete this customer?
</div>

<div class="mb-3">
    <h4>Customer Details:</h4>
    <p><strong>Full Names:</strong> @Model.FullName</p>
    <p><strong>Location:</strong> @Model.LocationId</p>
    <p><strong>Phone Number:</strong> @Model.PhoneNumber</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Registration Date:</strong> @Model.RegistrationDate.ToString("yyyy-MM-dd")</p>
    <p><strong>Status:</strong> @(Model.IsActive ? "Active" : "Inactive")</p>
</div>

<form asp-action="DeleteConfirmed" asp-controller="ManageCustomer" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="CustomerID" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Index" asp-controller="ManageCustomer" class="btn btn-secondary">No, Cancel</a>
</form>
