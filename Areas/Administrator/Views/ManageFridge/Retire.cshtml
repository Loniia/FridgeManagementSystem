@model FridgeManagementSystem.Models.Fridge

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Retire Fridge";
}

<div class="alert alert-warning">
    <h5>Are you sure you want to retire this fridge?</h5>
    <p>Serial: @Model.SerialNumber</p>
</div>

<form asp-action="ConfirmRetire" method="post">
    <input type="hidden" asp-for="FridgeId" />
    <button type="submit" class="btn btn-danger">Yes, Retire</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

