@model FridgeManagementSystem.Models.Fridge

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Fridge Details";
}

<div class="card shadow">
    <div class="card-header bg-primary text-white">
        <h4>Fridge Details - @Model.SerialNumber</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">@Model.Status</dd>

            <dt class="col-sm-3">Customer</dt>
            <dd class="col-sm-9">@Model.Customer?.FullName ?? "Unallocated"</dd>

            <dt class="col-sm-3">Supplier</dt>
            <dd class="col-sm-9">@Model.Supplier?.Name</dd>

            <dt class="col-sm-3">Location</dt>
            <dd class="col-sm-9">@Model.Location?.Address</dd>
        </dl>

        <hr />
        <h5>Business Actions</h5>
        <div>
            @if (Model.Status == "Active")
            {
                <a asp-action="AllocateToCustomer" asp-route-id="@Model.FridgeId" class="btn btn-primary">Allocate to Customer</a>
                <a asp-action="ScheduleMaintenance" asp-route-id="@Model.FridgeId" class="btn btn-secondary">Schedule Maintenance</a>
            }
            else if (Model.Status == "Retired")
            {
                <span class="badge bg-danger">This fridge is retired</span>
            }
        </div>
    </div>
</div>