@model IEnumerable<FridgeManagementSystem.Models.FridgeWithMaintenanceVM>
@{
    ViewData["Title"] = "Fridge Inventory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Fridge Inventory</h1>
        <a asp-action="Create" class="btn btn-primary btn-icon-split">
            <span class="icon text-white-50">
                <i class="fas fa-plus"></i>
            </span>
            <span class="text">Add New Fridge</span>
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">All Fridges</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Serial Number</th>
                            <th>Supplier</th>
                            <th>Location</th>
                            <th>Status</th>
                            <th>Last Maintenance</th>
                            <th>Next Maintenance</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var fridge in Model)
                        {
                            <tr>
                                <td>@fridge.SerialNumber</td>
                                <td>@fridge.SupplierName</td>
                                <td>@fridge.Location</td>
                                <td>
                                    <span class="badge badge-@(fridge.Status == "Active" ? "success" : fridge.Status == "In Repair" ? "warning" : "secondary")">
                                        @fridge.Status
                                    </span>
                                </td>
                                <td>@(fridge.LastMaintenanceDate?.ToString("MM/dd/yyyy") ?? "Never")</td>
                                <td>@(fridge.NextScheduledMaintenance?.ToString("MM/dd/yyyy") ?? "Not Scheduled")</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@fridge.FridgeId" class="btn btn-warning btn-sm">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@fridge.FridgeId" 
                                           class="btn btn-danger btn-sm" 
                                           onclick="return confirm('Are you sure you want to delete this fridge?')">
                                            <i class="fas fa-trash"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6">
            <a asp-action="InventoryReport" class="btn btn-info btn-icon-split">
                <span class="icon text-white-50">
                    <i class="fas fa-chart-bar"></i>
                </span>
                <span class="text">View Inventory Report</span>
            </a>
        </div>
        <div class="col-lg-6 text-right">
            <a asp-action="SupplierReport" class="btn btn-success btn-icon-split">
                <span class="icon text-white-50">
                    <i class="fas fa-truck"></i>
                </span>
                <span class="text">View Supplier Report</span>
            </a>
        </div>
    </div>
</div>

