@model FridgeManagementSystem.Models.Fridge

@{
    ViewData["Title"] = "Create Fridge";
}

<h2>Add New Fridge</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="SerialNumber" class="control-label"></label>
        <input asp-for="SerialNumber" class="form-control" />
        <span asp-validation-for="SerialNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Supplier</label>
        <select asp-for="SupplierID" asp-items="ViewBag.Suppliers" class="form-control"></select>
    </div>

    <div class="form-group">
        <label>Location</label>
        <select asp-for="LocationId" asp-items="ViewBag.Locations" class="form-control"></select>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>


