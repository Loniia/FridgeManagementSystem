@model FridgeManagementSystem.Models.Fridge
@{
    ViewData["Title"] = "Delete Fridge";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800 text-danger">Delete Fridge</h1>
        <a asp-action="Index" class="btn btn-secondary btn-icon-split">
            <span class="icon text-white-50">
                <i class="fas fa-arrow-left"></i>
            </span>
            <span class="text">Back to List</span>
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-danger">Confirm Deletion</h6>
        </div>
        <div class="card-body">
            <h4 class="text-danger">Are you sure you want to delete this fridge?</h4>

            <div class="row mt-4">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Serial Number:</dt>
                        <dd class="col-sm-8">@Model.SerialNumber</dd>

                        <dt class="col-sm-4">Model:</dt>
                        <dd class="col-sm-8">@Model.Model</dd>

                        <dt class="col-sm-4">Status:</dt>
                        <dd class="col-sm-8">
                            <span class="badge badge-@(Model.Status == "Active" ? "success" : "warning")">
                                @Model.Status
                            </span>
                        </dd>
                    </dl>
                </div>
            </div>

            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="FridgeId" />
                @Html.AntiForgeryToken()

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-danger btn-icon-split">
                        <span class="icon text-white-50">
                            <i class="fas fa-trash"></i>
                        </span>
                        <span class="text">Delete Fridge</span>
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
