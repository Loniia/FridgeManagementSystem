@model FridgeManagementSystem.Models.Fridge

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Delete Fridge";
}

<h2>Are you sure you want to delete this fridge?</h2>

<div>
    <h4>@Model.SerialNumber</h4>
    <p>Status: @Model.Status</p>
    <p>Supplier: @Model.Supplier?.Name</p>
    <p>Location: @Model.Location?.City</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="FridgeId" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

