@model FridgeManagementSystem.Models.Location

@{
    Layout = "_Layout";
    ViewData["Title"] = "Location Details";
}

<h2>Location Details</h2>

<div>
    <h4>@Model.Address, @Model.City</h4>
    <p><strong>Province:</strong> @Model.Province</p>
    <p><strong>Postal Code:</strong> @Model.PostalCode</p>
</div>

<hr />

<h5>Customers</h5>
<ul>
    @foreach (var c in Model.Customer ?? new List<FridgeManagementSystem.Models.Customer>())
    {
        <li>@c.FullName (@c.FullName)</li>
    }
</ul>

<h5>Employees</h5>
<ul>
    @foreach (var e in Model.Employee ?? new List<FridgeManagementSystem.Models.Employee>())
    {
        <li>@e.FullName (@e.Role)</li>
    }
</ul>

<h5>Fridges</h5>
<ul>
    @foreach (var f in Model.Fridge ?? new List<FridgeManagementSystem.Models.Fridge>())
    {
        <li>Serial: @f.SerialNumber (Status: @f.Status)</li>
    }
</ul>

<p>
    <a asp-action="Edit" asp-route-id="@Model.LocationId" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>
