@model Employee
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewData["Title"] = "Delete Employee";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Delete Employee</h1>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    <!-- Success/Error Messages -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-exclamation-triangle"></i> Confirm Deletion
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h5 class="alert-heading">
                            <i class="bi bi-shield-exclamation"></i> Soft Delete Notice
                        </h5>
                        <p class="mb-0">
                            This action will mark the employee as "Deleted" and deactivate their system access.
                            The record will be preserved but hidden from active lists.
                        </p>
                    </div>

                    <div class="employee-details p-4 border rounded bg-light">
                        <h5 class="mb-4">Employee Details</h5>
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Name:</strong> @Model.FullName</p>
                                <p><strong>Email:</strong> @Model.Email</p>
                                <p><strong>Role:</strong> <span class="badge bg-info">@Model.Role</span></p>
                                <p><strong>Phone:</strong> @Model.PhoneNumber</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Location:</strong> @Model.Location?.Address</p>
                                <p><strong>Hire Date:</strong> @Model.HireDate.ToString("MMM dd, yyyy")</p>
                                <p>
                                    <strong>Status:</strong>
                                    @if (Model.Status == "Active")
                                    {
                                        <span class="badge bg-success">@Model.Status</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">@Model.Status</span>
                                    }
                                </p>
                                <p><strong>Pay Rate:</strong> $@Model.PayRate.ToString("F2")</p>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-info mt-4">
                        <h6><i class="bi bi-info-circle"></i> What happens after deletion?</h6>
                        <ul class="mb-0">
                            <li>Employee will lose system access</li>
                            <li>Record will be moved to deleted employees list</li>
                            <li>Data will be preserved for reporting purposes</li>
                            <li>Employee can be restored if needed</li>
                        </ul>
                    </div>

                    <form asp-action="Delete" method="post" class="mt-4">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="EmployeeID" />

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Confirm Delete
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>