@model Employee
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    ViewData["Title"] = "Employee Details";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Employee Details</h1>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.EmployeeID" class="btn btn-warning me-2">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Employee Information -->
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-person-badge"></i> Employee Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Full Name</label>
                                <p class="form-control-plaintext">@Model.FullName</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Email Address</label>
                                <p class="form-control-plaintext">@Model.Email</p>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Phone Number</label>
                                <p class="form-control-plaintext">@Model.PhoneNumber</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Role</label>
                                <p>
                                    <span class="badge bg-info fs-6">@Model.Role</span>
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Hire Date</label>
                                <p class="form-control-plaintext">@Model.HireDate.ToString("MMM dd, yyyy")</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Pay Rate</label>
                                <p class="form-control-plaintext">$@Model.PayRate.ToString("F2")</p>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Status</label>
                        <p>
                            @if (Model.Status == "Active")
                            {
                                <span class="badge bg-success fs-6">@Model.Status</span>
                            }
                            else if (Model.Status == "Inactive")
                            {
                                <span class="badge bg-warning fs-6">@Model.Status</span>
                            }
                            else
                            {
                                <span class="badge bg-danger fs-6">@Model.Status</span>
                            }
                        </p>
                    </div>
                </div>
            </div>

            <!-- Address Information -->
            <div class="card mb-4">
                <div class="card-header bg-secondary text-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-geo-alt"></i> Address Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Address</label>
                                <p class="form-control-plaintext">@Model.Address</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Postal Code</label>
                                <p class="form-control-plaintext">@Model.PostalCode</p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">City</label>
                                <p class="form-control-plaintext">@Model.City</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Location</label>
                                <p class="form-control-plaintext">@Model.Location?.Address</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Account Status -->
            <div class="card mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-person-check"></i> Account Status
                    </h5>
                </div>
                <div class="card-body">
                    <div class="text-center">
                        <div class="avatar-circle bg-primary text-white rounded-circle mx-auto d-flex align-items-center justify-content-center mb-3"
                             style="width: 80px; height: 80px; font-size: 24px;">
                            @Model.FullName.Split(' ').Select(n => n[0]).Take(2).Aggregate("", (a, b) => a + b)
                        </div>
                        <h5>@Model.FullName</h5>
                        <p class="text-muted">@Model.Role</p>

                        <div class="d-grid gap-2">
                            @if (Model.Status == "Active")
                            {
                                <span class="badge bg-success fs-6">Active Employee</span>
                            }
                            else if (Model.Status == "Inactive")
                            {
                                <span class="badge bg-warning fs-6">Inactive Employee</span>
                            }
                            else
                            {
                                <span class="badge bg-danger fs-6">Deleted Employee</span>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="card">
                <div class="card-header bg-warning text-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-lightning"></i> Quick Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.EmployeeID" class="btn btn-warning">
                            <i class="bi bi-pencil"></i> Edit Employee
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.EmployeeID" class="btn btn-outline-danger">
                            <i class="bi bi-trash"></i> Delete Employee
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-circle {
        font-weight: bold;
    }

    .form-control-plaintext {
        padding: 0.375rem 0;
        margin-bottom: 0;
        line-height: 1.5;
        background-color: transparent;
        border: solid transparent;
        border-width: 1px 0;
    }
</style>
