@model FridgeManagementSystem.Models.Employee

@{
    ViewData["Title"] = "Employee Details";
}

<h2>@Model.FullName - Details</h2>

<div class="row">
    <div class="col-md-6 mb-3">
        <div class="card shadow-sm">
            <div class="card-body">
                <p><strong>Full Name:</strong> @Model.FullName</p>
                <p><strong>Email:</strong> @Model.ContactInfo</p>
                <p><strong>Phone:</strong> @Model.PhoneNumber</p>
                <p><strong>Department:</strong> @Model.Department</p>
                <p><strong>Role:</strong> @Model.Role</p>
                <p><strong>Hire Date:</strong> @Model.HireDate.ToShortDateString()</p>
                <p><strong>Pay Rate:</strong> @Model.PayRate.ToString("C")</p>
                <p>
                    <strong>Status:</strong>
                    @if (Model.Status == "Active")
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactive</span>
                    }
                </p>
                <a asp-action="Edit" asp-route-id="@Model.EmployeeID" class="btn btn-sm btn-primary">Edit</a>
                <a asp-action="Index" class="btn btn-sm btn-secondary">Back</a>
            </div>
        </div>
    </div>
</div>

