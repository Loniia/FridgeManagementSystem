@model IEnumerable<FridgeManagementSystem.Models.Employee>

@{
    Layout = "~/Views/Shared/_Layout.cshtml"; // or the area-specific layout
}
@{
    ViewData["Title"] = "Manage Employees";
}

<h2 class="mb-4">Manage Employees</h2>

<p>
    <a asp-action="Create" asp-controller="ManageEmployee" asp-area="Administrator" class="btn btn-primary mb-3">
        Add New Employee
    </a>
</p>

<div class="row">
    @foreach (var emp in Model)
    {
        <div class="col-md-3 mb-3">
            <div class="card h-100 shadow-sm employee-card" style="cursor:pointer;"
                 onclick="location.href='@Url.Action("Edit", "ManageEmployee", new { area = "Administrator", id = emp.EmployeeID })'">
                <div class="card-header bg-info text-white">
                    @emp.FullName
                </div>
                <div class="card-body">
                    <p><strong>Email:</strong> @emp.ContactInfo</p>
                    <p><strong>Role:</strong> @emp.Role</p>
                    <p>
                        <strong>Status:</strong>
                        @if (emp.Status == "Active")
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactive</span>
                        }
                    </p>
                    <a asp-action="Edit" asp-controller="ManageEmployee" asp-route-id="@emp.EmployeeID" asp-area="Administrator" class="btn btn-sm btn-light mt-2">
                        Edit
                    </a>
                </div>
            </div>
        </div>
    }
</div>

@section Styles {
    <style>
        .employee-card:hover {
            transform: translateY(-5px);
            transition: all 0.2s;
            box-shadow: 0 4px 20px rgba(0,0,0,0.2);
        }
    </style>
}
