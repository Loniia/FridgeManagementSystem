@model FridgeManagementSystem.Models.Supplier

@{
    ViewData["Title"] = "Supplier Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <style>
        .fridge-theme {
            --primary: #4CC9F0;
            --secondary: #4361EE;
            --accent: #7209B7;
            --success: #4CAF50;
            --warning: #FF9800;
            --danger: #F72585;
        }

        .cute-header {
            background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
            border-radius: 20px;
            padding: 2rem;
            margin-bottom: 2rem;
            box-shadow: 0 10px 30px rgba(76, 201, 240, 0.3);
            position: relative;
            overflow: hidden;
        }

            .cute-header::before {
                content: '❄️📋';
                position: absolute;
                top: -20px;
                right: -20px;
                font-size: 8rem;
                opacity: 0.1;
                transform: rotate(15deg);
            }

        .cute-card {
            background: white;
            border-radius: 25px;
            border: none;
            box-shadow: 0 15px 35px rgba(0,0,0,0.1);
            overflow: hidden;
            transition: all 0.3s ease;
        }

            .cute-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 20px 40px rgba(0,0,0,0.15);
            }

        .supplier-avatar {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 2rem;
            margin-right: 1.5rem;
        }

        .info-bubble {
            background: linear-gradient(135deg, #f8fdff, #f0f8ff);
            border-radius: 20px;
            padding: 1.5rem;
            margin-bottom: 1rem;
            border-left: 4px solid var(--primary);
            transition: all 0.3s ease;
        }

            .info-bubble:hover {
                transform: translateX(10px);
                background: linear-gradient(135deg, #f0f8ff, #e3f2fd);
            }

        .stats-card {
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            color: white;
            border-radius: 20px;
            padding: 2rem;
            text-align: center;
            transition: all 0.3s ease;
        }

            .stats-card:hover {
                transform: scale(1.05);
                box-shadow: 0 15px 35px rgba(76, 201, 240, 0.4);
            }

        .action-btn {
            border-radius: 50px;
            padding: 1rem 2rem;
            font-weight: 600;
            border: none;
            transition: all 0.3s ease;
            width: 100%;
            margin-bottom: 1rem;
        }

            .action-btn:hover {
                transform: translateY(-3px);
            }

        .contact-link {
            color: var(--primary);
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .contact-link:hover {
                color: var(--secondary);
                transform: translateX(5px);
            }

        .floating-emoji {
            animation: float 3s ease-in-out infinite;
            font-size: 1.5rem;
        }

        @@keyframes float {
            0%, 100% {
                transform: translateY(0px);
            }

            50% {
                transform: translateY(-10px);
            }
        }
    </style>
</head>
<body class="fridge-theme">
    <div class="container-fluid py-4">
        <!-- Cute Header -->
        <div class="cute-header">
            <div class="row align-items-center">
                <div class="col">
                    <h1 class="text-white mb-2">
                        <span class="floating-emoji">📋</span>
                        Supplier Details
                    </h1>
                    <p class="text-white mb-0 opacity-8">
                        All the cool details about your refrigerator supplier! ❄️
                    </p>
                </div>
                <div class="col-auto">
                    <a asp-action="Index" class="btn btn-light btn-lg rounded-pill">
                        <i class="fas fa-arrow-left me-2"></i>
                        Back to Suppliers
                    </a>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Left Column - Supplier Info -->
            <div class="col-lg-8">
                <div class="cute-card mb-4">
                    <div class="card-header bg-transparent border-0 py-4">
                        <div class="d-flex align-items-center">
                            <div class="supplier-avatar">
                                <i class="fas fa-truck"></i>
                            </div>
                            <div>
                                <h2 class="text-primary mb-1">@Model.Name</h2>
                                <p class="text-muted mb-0">
                                    <i class="fas fa-id-card me-2"></i>Supplier ID: #@Model.SupplierID
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="card-body p-4">
                        <!-- Contact Information -->
                        <div class="info-bubble">
                            <h5 class="text-primary mb-3">
                                <i class="fas fa-user me-2"></i>Contact Person
                            </h5>
                            <p class="fs-4 fw-bold text-dark mb-0">@Model.ContactPerson</p>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="info-bubble">
                                    <h6 class="text-primary mb-2">
                                        <i class="fas fa-envelope me-2"></i>Email Address
                                    </h6>
                                    <a href="mailto:@Model.Email" class="contact-link fs-5">
                                        @Model.Email
                                    </a>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="info-bubble">
                                    <h6 class="text-primary mb-2">
                                        <i class="fas fa-phone me-2"></i>Phone Number
                                    </h6>
                                    <a href="tel:@Model.Phone" class="contact-link fs-5">
                                        @Model.Phone
                                    </a>
                                </div>
                            </div>
                        </div>

                        <!-- Address -->
                        <div class="info-bubble">
                            <h5 class="text-primary mb-3">
                                <i class="fas fa-map-marker-alt me-2"></i>Physical Address
                            </h5>
                            <p class="fs-5 fw-semibold text-dark mb-0">@Model.Address</p>
                        </div>

                        <!-- Status -->
                        <div class="info-bubble">
                            <h5 class="text-primary mb-3">
                                <i class="fas fa-check-circle me-2"></i>Supplier Status
                            </h5>
                            <span class="badge bg-success fs-6 p-3 rounded-pill">
                                <i class="fas fa-bolt me-2"></i>Active & Ready!
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Column - Stats & Actions -->
            <div class="col-lg-4">
                <!-- Statistics -->
                <div class="stats-card mb-4">
                    <div class="floating-emoji">📊</div>
                    <h3 class="text-white mb-2">Supplier Activity</h3>
                    <div class="row text-center">
                        <div class="col-6">
                            <h1 class="text-white mb-1">@(Model.PurchaseOrders?.Count ?? 0)</h1>
                            <p class="text-white opacity-8 mb-0">Purchase Orders</p>
                        </div>
                        <div class="col-6">
                            <h1 class="text-white mb-1">@(Model.Quotations?.Count ?? 0)</h1>
                            <p class="text-white opacity-8 mb-0">Quotations</p>
                        </div>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="cute-card">
                    <div class="card-header bg-transparent border-0 py-4">
                        <h5 class="text-primary mb-0">
                            <i class="fas fa-bolt me-2"></i>Quick Actions
                        </h5>
                    </div>
                    <div class="card-body">
                        <a asp-action="Edit" asp-route-id="@Model.SupplierID"
                           class="action-btn btn-warning text-dark">
                            <i class="fas fa-edit me-2"></i>Edit Supplier
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.SupplierID"
                           class="action-btn btn-outline-danger">
                            <i class="fas fa-trash me-2"></i>Delete Supplier
                        </a>
                        <a href="mailto:@Model.Email"
                           class="action-btn btn-outline-primary">
                            <i class="fas fa-envelope me-2"></i>Send Email
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
