@model FridgeManagementSystem.Models.Supplier

@{
    ViewData["Title"] = "Supplier Details";
}

<style>
    .supplier-theme {
        --primary: #2E8B57;
        --secondary: #4682B4;
        --accent: #2196F3;
        --light: #F8F9FA;
        --dark: #2C3E50;
    }

    .supplier-bg-pattern {
        background: linear-gradient(135deg, #f8fdff 0%, #f0f8ff 100%);
        background-image: url("data:image/svg+xml,%3Csvg width='100' height='100' viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M20 20h20v20H20zM60 20h20v20H60zM20 60h20v20H20zM60 60h20v20H60z' fill='%232196F3' fill-opacity='0.03' fill-rule='evenodd'/%3E%3C/svg%3E");
        background-attachment: fixed;
    }

    .supplier-header {
        background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
        border-radius: 15px;
        position: relative;
        overflow: hidden;
    }

    .supplier-card {
        background: white;
        border-radius: 15px;
        border-left: 4px solid var(--accent);
        box-shadow: 0 4px 15px rgba(33, 150, 243, 0.1);
    }

    .blue-accent {
        color: var(--accent);
    }

    .info-card {
        background: linear-gradient(135deg, #f8fdff, #f0f8ff);
        border-radius: 10px;
        border-left: 4px solid var(--accent);
    }

    .stats-card {
        background: linear-gradient(135deg, var(--accent), #1976D2);
        color: white;
        border-radius: 15px;
    }
</style>

<div class="container-fluid supplier-bg-pattern" style="min-height: 100vh;">
    <!-- Header -->
    <div class="supplier-header text-white p-4 mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="h2 mb-2">
                    <i class="fas fa-truck me-3"></i>Supplier Details
                </h1>
                <p class="mb-0 opacity-8">Complete supplier information and activity overview</p>
            </div>
            <a asp-action="Index" class="btn btn-light" style="border-radius: 8px;">
                <i class="fas fa-arrow-left me-2"></i>Back to List
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="supplier-card p-4 mb-4">
                <div class="d-flex align-items-center mb-4">
                    <div class="bg-primary bg-opacity-10 rounded-circle p-3 me-3" style="border: 2px solid var(--accent);">
                        <i class="fas fa-truck fa-2x blue-accent"></i>
                    </div>
                    <div>
                        <h3 class="text-dark mb-1">@Model.Name</h3>
                        <p class="text-muted mb-0">Supplier ID: #@Model.SupplierID</p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="info-card p-3">
                            <label class="form-label text-muted small mb-2">Contact Person</label>
                            <p class="fw-semibold text-dark fs-5 mb-0">@Model.ContactPerson</p>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="info-card p-3">
                            <label class="form-label text-muted small mb-2">Email Address</label>
                            <p class="mb-0">
                                <a href="mailto:@Model.Email" class="blue-accent text-decoration-none fw-semibold">
                                    <i class="fas fa-envelope me-1"></i>@Model.Email
                                </a>
                            </p>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="info-card p-3">
                            <label class="form-label text-muted small mb-2">Phone Number</label>
                            <p class="mb-0">
                                <a href="tel:@Model.Phone" class="blue-accent text-decoration-none fw-semibold">
                                    <i class="fas fa-phone me-1"></i>@Model.Phone
                                </a>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="info-card p-3">
                            <label class="form-label text-muted small mb-2">Status</label>
                            <div>
                                <span class="badge bg-success rounded-pill px-3 py-2">
                                    <i class="fas fa-check me-1"></i>Active
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="info-card p-3">
                    <label class="form-label text-muted small mb-2">Physical Address</label>
                    <p class="fw-semibold text-dark mb-0">@Model.Address</p>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Quick Actions -->
            <div class="supplier-card p-4 mb-4">
                <h5 class="text-dark mb-3">
                    <i class="fas fa-bolt me-2 blue-accent"></i>Quick Actions
                </h5>
                <div class="d-grid gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.SupplierID" class="btn btn-warning">
                        <i class="fas fa-edit me-2"></i>Edit Supplier
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.SupplierID" class="btn btn-outline-danger">
                        <i class="fas fa-trash me-2"></i>Delete Supplier
                    </a>
                </div>
            </div>

            <!-- Statistics -->
            <div class="stats-card p-4">
                <h5 class="text-white mb-3">
                    <i class="fas fa-chart-bar me-2"></i>Supplier Activity
                </h5>
                <div class="row text-center">
                    <div class="col-6">
                        <div class="border-end border-white border-opacity-25">
                            <h2 class="text-white mb-1">@(Model.PurchaseOrders?.Count ?? 0)</h2>
                            <small class="text-white opacity-8">Purchase Orders</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <h2 class="text-white mb-1">@(Model.Quotations?.Count ?? 0)</h2>
                        <small class="text-white opacity-8">Quotations</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>