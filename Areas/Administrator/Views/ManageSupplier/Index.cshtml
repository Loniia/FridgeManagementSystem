@model IEnumerable<FridgeManagementSystem.Models.Supplier>

@{
    ViewData["Title"] = "Manage Suppliers";
    ViewData["ActivePage"] = "Suppliers";
}

<div class="container-fluid">
    <!-- Header with colored background -->
    <div class="d-flex justify-content-between align-items-center mb-4 py-3 px-4 rounded-3" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
        <div>
            <h1 class="h3 mb-2 text-white">Supplier Management</h1>
            <p class="mb-0 text-white opacity-8">Manage all refrigerator suppliers in the system</p>
        </div>
        <a asp-action="Create" class="btn btn-light">
            <i class="fas fa-plus me-2"></i>Add New Supplier
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white py-3">
            <h5 class="card-title mb-0">
                <i class="fas fa-list me-2"></i>Active Suppliers
            </h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-primary">
                            <tr>
                                <th class="border-0">Supplier Name</th>
                                <th class="border-0">Contact Person</th>
                                <th class="border-0">Email</th>
                                <th class="border-0">Phone</th>
                                <th class="border-0 text-center">Status</th>
                                <th class="border-0 text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="border-top">
                                    <td>
                                        <div class="fw-semibold text-dark">@item.Name</div>
                                        <small class="text-muted">ID: @item.SupplierID</small>
                                    </td>
                                    <td class="text-dark">@item.ContactPerson</td>
                                    <td>
                                        <a href="mailto:@item.Email" class="text-decoration-none text-primary">
                                            <i class="fas fa-envelope me-1"></i>@item.Email
                                        </a>
                                    </td>
                                    <td class="text-dark">@item.Phone</td>
                                    <td class="text-center">
                                        <span class="badge bg-success rounded-pill px-3 py-2">
                                            <i class="fas fa-check me-1"></i>Active
                                        </span>
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group shadow-sm">
                                            <a asp-action="Details" asp-route-id="@item.SupplierID"
                                               class="btn btn-outline-primary btn-sm">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.SupplierID"
                                               class="btn btn-outline-warning btn-sm">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.SupplierID"
                                               class="btn btn-outline-danger btn-sm">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <div class="mb-4">
                        <i class="fas fa-truck fa-4x text-primary opacity-3"></i>
                    </div>
                    <h5 class="text-muted mb-3">No Suppliers Found</h5>
                    <p class="text-muted mb-4">Get started by adding your first supplier to the system</p>
                    <a asp-action="Create" class="btn btn-primary px-4">
                        <i class="fas fa-plus me-2"></i>Add First Supplier
                    </a>
                </div>
            }
        </div>
    </div>
</div>