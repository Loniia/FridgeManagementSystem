@model BusinessInfo

@{
    ViewData["Title"] = "Business Information";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Business Information</h1>
        <div>
            <a asp-action="Manage" class="btn btn-primary">Edit Business Info</a>
            <a asp-action="About" target="_blank" class="btn btn-outline-secondary">View Public Page</a>
        </div>
    </div>

    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- Company Overview -->
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">Company Overview</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-sm-3 fw-bold">Company Name:</div>
                        <div class="col-sm-9">@Model.CompanyName</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-3 fw-bold">Industry:</div>
                        <div class="col-sm-9">@Model.Industry</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-3 fw-bold">Business Type:</div>
                        <div class="col-sm-9">@Model.BusinessType</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-3 fw-bold">Year Founded:</div>
                        <div class="col-sm-9">@Model.YearFounded</div>
                    </div>
                </div>
            </div>

            <!-- Company Description -->
            @if (!string.IsNullOrEmpty(Model.CompanyDescription))
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="card-title mb-0">About Us</h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text">@Model.CompanyDescription</p>
                    </div>
                </div>
            }

            <!-- Mission & Values -->
            @if (!string.IsNullOrEmpty(Model.MissionStatement))
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Mission Statement</h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text">@Model.MissionStatement</p>
                    </div>
                </div>
            }

            <!-- Services -->
            @if (!string.IsNullOrEmpty(Model.ServicesDescription))
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="card-title mb-0">What We Do</h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text">@Model.ServicesDescription</p>
                    </div>
                </div>
            }
        </div>

        <!-- Sidebar - Contact & Details -->
        <div class="col-md-4">
            <!-- Logo -->
            @if (!string.IsNullOrEmpty(Model.LogoUrl))
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Company Logo</h5>
                    </div>
                    <div class="card-body text-center">
                        <img src="@Model.LogoUrl" alt="Company Logo" class="img-fluid" style="max-height: 150px;">
                    </div>
                </div>
            }

            <!-- Contact Information -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">Contact Information</h5>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.Address))
                    {
                        <p><strong>Address:</strong><br>@Model.Address</p>
                    }
                    @if (!string.IsNullOrEmpty(Model.Phone))
                    {
                        <p><strong>Phone:</strong><br>@Model.Phone</p>
                    }
                    @if (!string.IsNullOrEmpty(Model.Email))
                    {
                        <p><strong>Email:</strong><br>@Model.Email</p>
                    }
                    @if (!string.IsNullOrEmpty(Model.Website))
                    {
                        <p><strong>Website:</strong><br><a href="@Model.Website" target="_blank">@Model.Website</a></p>
                    }
                </div>
            </div>

            <!-- Registration Details -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">Registration Details</h5>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.RegistrationNumber))
                    {
                        <p><strong>Registration #:</strong><br>@Model.RegistrationNumber</p>
                    }
                    @if (!string.IsNullOrEmpty(Model.TaxNumber))
                    {
                        <p><strong>Tax Number:</strong><br>@Model.TaxNumber</p>
                    }
                </div>
            </div>

            <!-- Social Media -->
            @if (!string.IsNullOrEmpty(Model.FacebookUrl) || !string.IsNullOrEmpty(Model.LinkedInUrl) || !string.IsNullOrEmpty(Model.TwitterUrl))
            {
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Social Media</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex gap-2">
                            @if (!string.IsNullOrEmpty(Model.FacebookUrl))
                            {
                                <a href="@Model.FacebookUrl" target="_blank" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-facebook"></i> Facebook
                                </a>
                            }
                            @if (!string.IsNullOrEmpty(Model.LinkedInUrl))
                            {
                                <a href="@Model.LinkedInUrl" target="_blank" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-linkedin"></i> LinkedIn
                                </a>
                            }
                            @if (!string.IsNullOrEmpty(Model.TwitterUrl))
                            {
                                <a href="@Model.TwitterUrl" target="_blank" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-twitter"></i> Twitter
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>