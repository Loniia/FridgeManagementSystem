@model BusinessInfo
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Create Business Information";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Create Business Information</h1>
        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
    </div>

    <!-- Success/Error Messages -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="card-title mb-0">Basic Business Information</h5>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label for="CompanyName" class="form-label">Company Name</label>
                            <input type="text" id="CompanyName" name="CompanyName" class="form-control" value="@Model?.CompanyName" />
                            <span class="text-danger field-validation-valid" data-valmsg-for="CompanyName" data-valmsg-replace="true"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label for="YearFounded" class="form-label">Year Founded</label>
                            <input type="number" id="YearFounded" name="YearFounded" class="form-control" value="@Model?.YearFounded" />
                            <span class="text-danger field-validation-valid" data-valmsg-for="YearFounded" data-valmsg-replace="true"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label for="Address" class="form-label">Address</label>
                    <textarea id="Address" name="Address" class="form-control" rows="2">@Model?.Address</textarea>
                    <span class="text-danger field-validation-valid" data-valmsg-for="Address" data-valmsg-replace="true"></span>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label for="Phone" class="form-label">Phone</label>
                            <input type="text" id="Phone" name="Phone" class="form-control" value="@Model?.Phone" />
                            <span class="text-danger field-validation-valid" data-valmsg-for="Phone" data-valmsg-replace="true"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label for="Email" class="form-label">Email</label>
                            <input type="email" id="Email" name="Email" class="form-control" value="@Model?.Email" />
                            <span class="text-danger field-validation-valid" data-valmsg-for="Email" data-valmsg-replace="true"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label for="CompanyDescription" class="form-label">Company Description</label>
                    <textarea id="CompanyDescription" name="CompanyDescription" class="form-control" rows="3" placeholder="Brief description of your company...">@Model?.CompanyDescription</textarea>
                    <span class="text-danger field-validation-valid" data-valmsg-for="CompanyDescription" data-valmsg-replace="true"></span>
                </div>

                <!-- Hidden fields for other properties to maintain model binding -->
                <input type="hidden" name="BusinessInfoId" value="@Model?.BusinessInfoId" />
                <input type="hidden" name="RegistrationNumber" value="@Model?.RegistrationNumber" />
                <input type="hidden" name="TaxNumber" value="@Model?.TaxNumber" />
                <input type="hidden" name="Website" value="@Model?.Website" />
                <input type="hidden" name="MissionStatement" value="@Model?.MissionStatement" />
                <input type="hidden" name="ServicesDescription" value="@Model?.ServicesDescription" />
                <input type="hidden" name="CoreValues" value="@Model?.CoreValues" />
                <input type="hidden" name="Industry" value="@Model?.Industry" />
                <input type="hidden" name="BusinessType" value="@Model?.BusinessType" />
                <input type="hidden" name="LogoUrl" value="@Model?.LogoUrl" />
                <input type="hidden" name="BannerImageUrl" value="@Model?.BannerImageUrl" />
                <input type="hidden" name="FacebookUrl" value="@Model?.FacebookUrl" />
                <input type="hidden" name="LinkedInUrl" value="@Model?.LinkedInUrl" />
                <input type="hidden" name="TwitterUrl" value="@Model?.TwitterUrl" />

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-success">Create Business Information</button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
} 