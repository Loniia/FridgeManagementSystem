@model List<FridgeManagementSystem.ViewModels.PendingAllocationViewModel>

<div class="container mt-4">
    <h2>Pending Fridge Allocations</h2>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    @if (TempData["InfoMessage"] != null)
    {
        <div class="alert alert-info">@TempData["InfoMessage"]</div>
    }

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    @if (Model != null && Model.Any())
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Customer</th>
                    <th>Fridge</th>
                    <th>Ordered Qty</th>
                    <th>Allocated Qty</th>
                    <th>Pending Qty</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="@(item.Status == "Allocated" ? "table-success" : "")">
                        <td>@item.CustomerName</td>
                        <td>@item.FridgeBrand @item.FridgeModel</td>
                        <td>@item.QuantityOrdered</td>
                        <td>@item.QuantityAllocated</td>
                        <td>@item.QuantityPending</td>
                        <td>
                            <span class="badge @(item.Status == "Pending" ? "bg-warning" : "bg-success")">
                                @item.Status
                            </span>
                        </td>
                        <td>
                            @if (item.QuantityPending > 0)
                            {
                                <form asp-area="CustomerManagementSubSystem"
                                      asp-controller="CustomerLiaison"
                                      asp-action="Allocate"
                                      method="post" class="d-inline">
                                    <input type="hidden" name="orderId" value="@item.OrderId" />
                                    <input type="hidden" name="customerId" value="@item.CustomerId" />
                                    <input type="hidden" name="orderItemId" value="@item.OrderItemId" />
                                    <input type="hidden" name="fridgeId" value="@item.FridgeId" />
                                    <button type="submit" class="btn btn-primary btn-sm">Allocate</button>
                                </form>
                            }
                            else
                            {
                                <button class="btn btn-secondary btn-sm" disabled title="All fridges for this item have been allocated">Allocated</button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning">
            <h4>No pending allocations found</h4>
            <p>This could be because:</p>
            <ul>
                <li>No customers have placed orders yet</li>
                <li>Orders are not marked as "Paid"</li>
                <li>All paid orders have been fully allocated</li>
                <li>There are no order items in the system</li>
            </ul>
        </div>
    }

    <div class="text-center mt-3">
        <a asp-area="CustomerManagementSubSystem"
           asp-controller="CustomerLiaison"
           asp-action="Index"
           class="btn btn-secondary">
            Back to Customer List
        </a>
    </div>
</div>

@section Scripts {
    <script>
        console.log('✅ ProcessPendingAllocations page loaded');
    </script>
}


