@model FridgeManagementSystem.Models.Customer

@{
    Layout = "_Layout";
    ViewData["Title"] = "Add Customer";
}

<h2>Add New Customer</h2>

<!-- Form to create a new customer -->
<form asp-action="Create" asp-controller="CustomerLiaison" method="post">
    @Html.AntiForgeryToken()

    <!-- Validation summary -->
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <!-- Full Names -->
    <div class="form-group mb-2">
        <label asp-for="FullName" class="form-label"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <!-- Address/Location -->
    <div class="form-group mb-2">
        <label asp-for="LocationId" class="form-label"></label>
        <select asp-for="LocationId" class="form-control" asp-items="ViewBag.Locations">
            <option value="">-- Select Location --</option>
        </select>
        <span asp-validation-for="LocationId" class="text-danger"></span>
    </div>

    <!-- Phone Number -->
    <div class="form-group mb-2">
        <label asp-for="PhoneNumber" class="form-label"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <!-- Email -->
    <div class="form-group mb-2">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <!-- Registration Date -->
    <div class="form-group mb-2">
        <label asp-for="RegistrationDate" class="form-label"></label>
        <input asp-for="RegistrationDate"
               type="date"
               class="form-control"
               min="@DateTime.Now.AddMonths(-6).ToString("yyyy-MM-dd")"
               max="@DateTime.Now.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="RegistrationDate" class="text-danger"></span>
    </div>

    <!-- Buttons -->
    <button type="submit" class="btn btn-success">Save</button>
    <!-- Updated Cancel button to point to correct controller -->
    <a asp-action="Index" asp-controller="CustomerLiaison" class="btn btn-secondary">Cancel</a>
</form>

