@model FridgeManagementSystem.Models.CustomerAllocationViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Allocate Fridge";
}

<h2>Allocate Fridge for @Model.CustomerName</h2>

<form asp-action="Allocate" method="post">
    <input type="hidden" asp-for="CustomerId" />

    <div class="mb-3">
        <label asp-for="SelectedFridgeID" class="form-label">Select Fridge</label>
        <select asp-for="SelectedFridgeID" class="form-select"
                asp-items="@(new SelectList(Model.AvailableFridges, "FridgeID", "Model"))">
            <option value="">-- Choose Fridge --</option>
        </select>
        <span asp-validation-for="SelectedFridgeID" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="QuantityAllocated" class="form-label">Quantity to Allocate</label>
        <input asp-for="QuantityAllocated" type="number" min="1" class="form-control" />
        <span asp-validation-for="QuantityAllocated" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ReturnDate" class="form-label">Expected Return Date (optional)</label>
        <input asp-for="ReturnDate" class="form-control" type="date" />
        <span asp-validation-for="ReturnDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Allocate Fridge</button>
    <a asp-action="Details" asp-route-id="@Model.CustomerId" class="btn btn-secondary">Back</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
