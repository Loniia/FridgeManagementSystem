@model FridgeManagementSystem.Models.CustomerViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Customer Details";
}

<h2>Customer Details</h2>

<!-- Customer Information -->
<div class="card customer-card mb-4 shadow-lg">
    <div class="card-body">
        <div class="row mb-2">
            <div class="col-md-6 mb-3">
                <p class="mb-1"><strong>Full Name:</strong> @Model.FullNames</p>
                <p class="mb-1"><strong>Phone:</strong> @Model.PhoneNumber</p>
                <p class="mb-1"><strong>Email:</strong> @(string.IsNullOrWhiteSpace(Model.Email) ? "N/A" : Model.Email)</p>
            </div>
            <div class="col-md-6 mb-3">
                <p class="mb-1">
                    <strong>Location:</strong>
                    @(Model.Location != null
                        ? $"{Model.Location.Address}, {Model.Location.City}, {Model.Location.Province}"
                        : "No location assigned")
                </p>
                <p>
                    <strong>Status:</strong>
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success shadow-sm">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-warning shadow-sm">Inactive</span>
                    }
                </p>
                <p class="mb-1"><strong>Registration Date:</strong> @Model.RegistrationDate.ToString("yyyy/MM/dd")</p>
                <p class="mb-0"><strong>Total Fridges Allocated:</strong> @Model.TotalFridgesAllocated</p>
            </div>
        </div>
    </div>
</div>

<h3>Fridge Allocations</h3>

@if (Model.FridgeAllocations != null && Model.FridgeAllocations.Any())
{
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Fridge Brand & Model</th>
                <th>Quantity Allocated</th>
                <th>Allocation Date</th>
                <th>Return Date</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var allocation in Model.FridgeAllocations.OrderByDescending(a => a.AllocationDate))
            {
                <tr>
                    <td>@($"{allocation.Fridge?.Brand} - {allocation.Fridge?.Model}")</td>
                    <td>@allocation.QuantityAllocated</td>
                    <td>
                        @if (allocation.AllocationDate.HasValue)
                        {
                            @allocation.AllocationDate.Value.ToString("yyyy/MM/dd")
                        }
                        else
                        {
                            @:N/A
                        }
                    </td>
                    <td>
                        @if (allocation.ReturnDate.HasValue)
                        {
                            @allocation.ReturnDate.Value.ToString("yyyy/MM/dd")
                        }
                        else
                        {
                            @:N/A
                        }
                    </td>
                    <td>@allocation.Status</td>
                    <td>
                        @* Actions column *@
                        @if (allocation.ReturnRequested)
                        {
                            <span class="badge bg-warning me-2">Return Requested</span>
                            <a asp-action="ReturnFridge"
                               asp-route-allocationId="@allocation.AllocationID"
                               class="btn btn-success btn-sm">
                                Return
                            </a>
                        }
                        else if (allocation.Status == "Allocated")
                        {
                            <a asp-action="RequestReturn"
                               asp-route-allocationId="@allocation.AllocationID"
                               class="btn btn-primary btn-sm me-1">
                                Request Return
                            </a>
                            <a asp-action="ScrapFridge"
                               asp-route-allocationId="@allocation.AllocationID"
                               class="btn btn-danger btn-sm">
                                Scrap
                            </a>
                        }
                        else
                        {
                            <span class="text-muted">No Actions</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No fridges have been allocated to this customer yet.</p>
}

<p>
    <a asp-action="Index" class="btn btn-secondary">Back to Customers</a>
    <a asp-action="ExportToPdf"
       asp-route-id="@Model.CustomerId"
       class="btn btn-info">Download PDF</a>
    <a asp-action="ExportToPdf"
       asp-route-id="@Model.CustomerId"
       class="btn btn-primary">Export PDF</a>
</p>
