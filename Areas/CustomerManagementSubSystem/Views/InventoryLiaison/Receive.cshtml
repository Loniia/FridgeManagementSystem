@model FridgeManagementSystem.Models.Fridge

@{
    ViewData["Title"] = "Receive New Fridge";
}

<h2>Receive New Fridge</h2>

<form asp-area="CustomerManagementSubSystem" asp-controller="InventoryLiaison" asp-action="Receive" method="post">
    @Html.AntiForgeryToken()

    

    <!-- Fridge Type -->
    <div class="mb-3">
        <label asp-for="FridgeType" class="form-label">Fridge Type</label>
        <input asp-for="FridgeType" class="form-control" placeholder="e.g., Single Door, Double Door, French Door" />
        <span asp-validation-for="FridgeType" class="text-danger"></span>
    </div>

    <!-- Brand -->
    <div class="mb-3">
        <label asp-for="Brand" class="form-label">Brand</label>
        <input asp-for="Brand" class="form-control" placeholder="e.g., Samsung, LG, Whirlpool" />
        <span asp-validation-for="Brand" class="text-danger"></span>
    </div>

    <!-- Model (Required) -->
    <div class="mb-3">
        <label asp-for="Model" class="form-label">Model</label>
        <input asp-for="Model" class="form-control" placeholder="e.g., RT38K5932SL" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>

    <!-- Serial Number -->
    <div class="mb-3">
        <label asp-for="SerialNumber" class="form-label">Serial Number</label>
        <input asp-for="SerialNumber" class="form-control" placeholder="Enter serial number" />
        <span asp-validation-for="SerialNumber" class="text-danger"></span>
    </div>

    <!-- Condition (Required) -->
    <div class="mb-3">
        <label asp-for="Condition" class="form-label">Condition</label>
        <select asp-for="Condition" class="form-control">
            <option value="Working">Working</option>
            <option value="Under Repair">Under Repair</option>
            <option value="Faulty">Faulty</option>
            <option value="Scrapped">Scrapped</option>
        </select>
        <span asp-validation-for="Condition" class="text-danger"></span>
    </div>

    <!-- Purchase Date -->
    <div class="mb-3">
        <label asp-for="PurchaseDate" class="form-label">Purchase Date</label>
        <input asp-for="PurchaseDate" type="date" class="form-control" />
        <span asp-validation-for="PurchaseDate" class="text-danger"></span>
    </div>

    <!-- Warranty Expiry -->
    <div class="mb-3">
        <label asp-for="WarrantyExpiry" class="form-label">Warranty Expiry Date</label>
        <input asp-for="WarrantyExpiry" type="date" class="form-control" />
        <span asp-validation-for="WarrantyExpiry" class="text-danger"></span>
    </div>

    <!-- Quantity (Required) -->
    <div class="mb-3">
        <label asp-for="Quantity" class="form-label">Quantity</label>
        <input asp-for="Quantity" type="number" class="form-control" min="1" value="1" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <!-- Delivery Date -->
    <div class="mb-3">
        <label asp-for="DeliveryDate" class="form-label">Delivery Date</label>
        <input asp-for="DeliveryDate" type="date" class="form-control" />
        <span asp-validation-for="DeliveryDate" class="text-danger"></span>
    </div>

    <!-- Supplier (Required) -->
    <div class="mb-3">
        <label asp-for="SupplierID" class="form-label">Supplier</label>
        <select asp-for="SupplierID" asp-items="ViewBag.Suppliers" class="form-control">
            <option value="">-- Select Supplier --</option>
        </select>
        <span asp-validation-for="SupplierID" class="text-danger"></span>
    </div>

  

    <!-- Hidden fields for automatic values -->
    <input type="hidden" asp-for="Status" value="Received" />
    <input type="hidden" asp-for="DateAdded" value="@DateOnly.FromDateTime(DateTime.Now)" />
    <input type="hidden" asp-for="UpdatedDate" value="@DateTime.Now" />
    <input type="hidden" asp-for="IsActive" value="true" />

    <button type="submit" class="btn btn-primary">Receive Fridge</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
 
