@model IEnumerable<FridgeManagementSystem.Models.FridgeViewModel>

@{
    ViewData["Title"] = "Fridge Inventory";
}

<h2>Fridge Inventory</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Fridge ID</th>
            
            <th>Type</th>
            <th>Brand</th>
            <th>Model</th>
            <th>Serial Number</th>
            <th>Condition</th>
            <th>Status</th>
            <th>Quantity</th>
            <th>Customer Name</th>
            <th>Allocation Date</th>
            <th>Return Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var fridge in Model)
        {
            <tr>
                <td>@fridge.FridgeId</td> <!-- Fixed: FridgeId not FridgeID -->
               
                <td>@fridge.FridgeType</td>
                <td>@fridge.Brand</td>
                <td>@fridge.Model</td>
                <td>@fridge.SerialNumber</td>
                <td>
                    <span class="badge @(fridge.Condition == "Working" ? "bg-success" :
                                      fridge.Condition == "Under Repair" ? "bg-warning" :
                                      fridge.Condition == "Faulty" ? "bg-danger" : "bg-secondary")">
                        @fridge.Condition
                    </span>
                </td>
                <td class="@(fridge.Status == "Received" ? "table-warning" :
                            fridge.Status == "Available" ? "table-success" :
                            fridge.Status == "Scrapped" ? "table-danger" : "table-secondary")">
                    @fridge.Status
                </td>

                <!-- Quantity with Low Stock alert -->
               <td class="@(fridge.Quantity < 5 ? "table-danger fw-bold" : "")">
                    @fridge.Quantity
                    @if (fridge.Quantity < 5)
                    {
                        <a asp-area="CustomerManagementSubSystem"
                           asp-controller="InventoryLiaison"
                           asp-action="CreatePurchaseRequest"
                           asp-route-fridgeId="@fridge.FridgeId"
                           class="text-danger fw-bold text-decoration-none ms-2">
                            ⚠ Low Stock
                        </a>
                    }
                </td>

                <td>@fridge.CustomerName</td>
                <td>@(fridge.AllocationDate?.ToString("yyyy-MM-dd") ?? "N/A")</td>
                <td>@(fridge.ReturnDate?.ToString("yyyy-MM-dd") ?? "N/A")</td>

                <!-- Actions -->
                <td>
                    <div class="btn-group">
                        <!-- Update Status Button -->
                        <a asp-action="UpdateStatus" asp-route-id="@fridge.FridgeId" class="btn btn-sm btn-warning">
                            <i class="fas fa-sync"></i> Update Status
                        </a>

                        <!-- Dropdown for Remove Fridge -->
                        <button type="button" class="btn btn-sm btn-warning dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                            <span class="visually-hidden">Toggle Dropdown</span>
                        </button>
                        <ul class="dropdown-menu">
                            <li>
                                <form asp-area="CustomerManagementSubSystem"
                                      asp-controller="InventoryLiaison"
                                      asp-action="DeleteConfirmed"
                                      asp-route-id="@fridge.FridgeId"
                                      method="post"
                                      style="margin:0;">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="dropdown-item text-danger">
                                        <i class="fas fa-trash-alt"></i> Remove Fridge
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-action="Receive" class="btn btn-success">
        <i class="fas fa-plus"></i> Receive New Fridge
    </a>
</div>

@section Scripts {
    <script>
        // Auto-dismiss alerts after 5 seconds
        setTimeout(function () {
            $('.alert').alert('close');
        }, 5000);
    </script>
}

