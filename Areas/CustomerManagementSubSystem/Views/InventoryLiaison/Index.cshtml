@model IEnumerable<FridgeManagementSystem.Models.FridgeViewModel>

@{
    ViewData["Title"] = "Fridge Inventory";
}

<h2>Fridge Inventory</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Fridge ID</th>
            <th>Fridge Name</th>
            <th>Type</th>
            <th>Brand</th>
            <th>Model</th>
            <th>Serial Number</th>
            <th>Condition</th>
            <th>Status</th>
            <th>Quantity</th>
            <th>Customer Name</th>
            <th>Allocation Date</th>
            <th>Return Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var fridge in Model)
        {
            <tr>
                <td>@fridge.FridgeId</td> <!-- Fixed: FridgeId not FridgeID -->
                <td>@fridge.FridgeName</td>
                <td>@fridge.FridgeType</td>
                <td>@fridge.Brand</td>
                <td>@fridge.Model</td>
                <td>@fridge.SerialNumber</td>
                <td>
                    <span class="badge @(fridge.Condition == "Working" ? "bg-success" :
                                      fridge.Condition == "Under Repair" ? "bg-warning" :
                                      fridge.Condition == "Faulty" ? "bg-danger" : "bg-secondary")">
                        @fridge.Condition
                    </span>
                </td>
                <td class="@(fridge.Status == "Received" ? "table-warning" :
                            fridge.Status == "Available" ? "table-success" :
                            fridge.Status == "Scrapped" ? "table-danger" : "table-secondary")">
                    @fridge.Status
                </td>

                <!-- Quantity with Low Stock alert -->
                <td class="@(fridge.Quantity < 5 ? "table-danger fw-bold" : "")">
                    @fridge.Quantity
                    @if (fridge.Quantity < 5)
                    {
                        <span class="text-danger ms-2">⚠ Low Stock</span>
                    }
                </td>

                <td>@fridge.CustomerName</td>
                <td>@(fridge.AllocationDate?.ToString("yyyy-MM-dd") ?? "N/A")</td>
                <td>@(fridge.ReturnDate?.ToString("yyyy-MM-dd") ?? "N/A")</td>

                <!-- Actions -->
                <td>
                    <a asp-action="UpdateStatus" asp-route-id="@fridge.FridgeId" class="btn btn-sm btn-warning">
                        <!-- Fixed: FridgeId not FridgeID -->
                        <i class="fas fa-sync"></i> Update Status
                    </a>
                    <a asp-action="Details" asp-route-id="@fridge.FridgeId" class="btn btn-sm btn-info">
                        <!-- Fixed: FridgeId not FridgeID -->
                        <i class="fas fa-eye"></i> Details
                    </a>
                    <a asp-action="Edit" asp-route-id="@fridge.FridgeId" class="btn btn-sm btn-primary">
                        <!-- Fixed: FridgeId not FridgeID -->
                        <i class="fas fa-edit"></i> Edit
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-action="Receive" class="btn btn-success">
        <i class="fas fa-plus"></i> Receive New Fridge
    </a>
</div>

@section Scripts {
    <script>
        // Auto-dismiss alerts after 5 seconds
        setTimeout(function () {
            $('.alert').alert('close');
        }, 5000);
    </script>
}

