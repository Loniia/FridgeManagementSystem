@model IEnumerable<FridgeManagementSystem.Models.FridgeViewModel>

@{
    ViewData["Title"] = "Fridge Inventory";
}

<h2 class="mb-4 fw-bold text-center text-secondary">Fridge Inventory</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<table class="table table-hover table-bordered shadow-sm">
    <thead class="table-dark text-center">
        <tr>
            <th>Fridge ID</th>
            <th>Type</th>
            <th>Brand</th>
            <th>Model</th>
            <th>Serial Number</th>
            <th>Condition</th>
            <th>Status</th>
            <th>Quantity</th>
            <th>Customer Name</th>
            <th>Allocation Date</th>
            <th>Return Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody class="text-center align-middle">
        @foreach (var fridge in Model)
        {
            <tr>
                <td>@fridge.FridgeId</td>
                <td>@fridge.FridgeType</td>
                <td>@fridge.Brand</td>
                <td>@fridge.Model</td>
                <td>@fridge.SerialNumber</td>

                <td>
                    <span class="badge @(fridge.Condition == "Working" ? "bg-success" :
                                         fridge.Condition == "Under Repair" ? "bg-warning text-dark" :
                                         fridge.Condition == "Faulty" ? "bg-danger" : "bg-secondary")">
                        @fridge.Condition
                    </span>
                </td>

                <td class="@(fridge.Status == "Received" ? "table-warning" :
                            fridge.Status == "Available" ? "table-success" :
                            fridge.Status == "Scrapped" ? "table-danger" : "table-secondary")">
                    @fridge.Status
                </td>

                <!-- Quantity and low stock alert -->
                <td class="@(fridge.Quantity < 5 ? "table-danger fw-bold" : "")">
                    <a asp-area="CustomerManagementSubSystem"
                       asp-controller="InventoryLiaison"
                       asp-action="CreatePurchaseRequest"
                       asp-route-fridgeId="@fridge.FridgeId"
                       class="text-decoration-none @(fridge.Quantity < 5 ? "text-danger fw-bold" : "text-primary fw-semibold")">
                        @fridge.Quantity
                        @if (fridge.Quantity < 5)
                        {
                            <span class="ms-2">⚠ Low Stock</span>
                        }
                    </a>
                </td>

                <td>@(fridge.CustomerName ?? "N/A")</td>

                <!-- ✅ Fix DateOnly? formatting from controller -->
                <td>@(fridge.AllocationDate.HasValue ? fridge.AllocationDate.Value.ToString("yyyy-MM-dd") : "N/A")</td>
                <td>@(fridge.ReturnDate.HasValue ? fridge.ReturnDate.Value.ToString("yyyy-MM-dd") : "N/A")</td>

                <!-- Actions -->
                <td>
                    <div class="btn-group">
                        <a asp-action="UpdateStatus" asp-route-id="@fridge.FridgeId" class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-sync"></i> Update
                        </a>

                        <button type="button" class="btn btn-sm btn-outline-danger dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                            <span class="visually-hidden">Toggle Dropdown</span>
                        </button>

                        <ul class="dropdown-menu">
                            <li>
                                <form asp-area="CustomerManagementSubSystem"
                                      asp-controller="InventoryLiaison"
                                      asp-action="DeleteConfirmed"
                                      asp-route-id="@fridge.FridgeId"
                                      method="post"
                                      style="margin:0;">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="dropdown-item text-danger">
                                        <i class="fas fa-trash-alt"></i> Remove Fridge
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>


@section Scripts {
    <script>
        // Auto-dismiss alerts after 5 seconds
        setTimeout(function () {
            $('.alert').alert('close');
        }, 5000);
    </script>
}
