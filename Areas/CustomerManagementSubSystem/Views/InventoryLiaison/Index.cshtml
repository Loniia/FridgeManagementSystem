<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Fridge ID</th>
            <th>Brand</th>
            <th>Model</th>
            <th>Status</th>
            <th>Quantity</th>
            <th>Customer Name</th>
            <th>Allocation Date</th>
            <th>Return Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var fridge in Model)
        {
            <tr>
                <td>@fridge.FridgeId</td>
                <td>@fridge.Brand</td>
                <td>@fridge.Model</td>
                <td class="@(fridge.Status == "Received" ? "table-warning" :
                            fridge.Status == "Available" ? "table-success" :
                            fridge.Status == "Scrapped" ? "table-danger" : "table-secondary")">
                    @fridge.Status
                </td>

                <!-- Quantity with Low Stock alert -->
                <td class="@(fridge.Quantity < 5 ? "table-danger fw-bold" : "")">
                    @fridge.Quantity
                    @if (fridge.Quantity < 5)
                    {
                        <span class="text-danger ms-2">⚠ Stock is Low</span>
                    }
                </td>

                <td>@fridge.CustomerName</td>
                <td>@(fridge.AllocationDate?.ToString("yyyy-MM-dd"))</td>
                <td>@(fridge.ReturnDate?.ToString("yyyy-MM-dd"))</td>

                <!-- Actions -->
                <td>
                    <a asp-action="UpdateStatus" asp-route-id="@fridge.FridgeID" class="btn btn-sm btn-warning">
                        <i class="fas fa-sync"></i> Update Status
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

