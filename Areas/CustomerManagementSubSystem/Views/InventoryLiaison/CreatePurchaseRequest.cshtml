@model FridgeManagementSystem.Models.PurchaseRequest

@{
    ViewData["Title"] = "Create Purchase Request";
}

<h2>Create Purchase Request</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<form asp-action="CreatePurchaseRequest" method="post">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="RequestBy" class="form-label"></label>
        <input asp-for="RequestBy" class="form-control" placeholder="Your Name" />
        <span asp-validation-for="RequestBy" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="RequestType" class="form-label"></label>
        <input asp-for="RequestType" class="form-control" placeholder="e.g., Fridge Purchase" />
        <span asp-validation-for="RequestType" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ItemFullNames" class="form-label"></label>
        <input asp-for="ItemFullNames" class="form-control" placeholder="Item Name(s)" />
        <span asp-validation-for="ItemFullNames" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Quantity" class="form-label"></label>
        <input asp-for="Quantity" type="number" class="form-control" min="1" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CustomerID" class="form-label"></label>
        <input asp-for="CustomerID" type="number" class="form-control" placeholder="Customer ID" />
        <span asp-validation-for="CustomerID" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Submit Request</button>
        <a asp-action="ProcessPurchaseRequests" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
