@model BusinessInfo
@{
    ViewData["Title"] = "About Us";
   // Layout = "_PublicLayout"; // Use a public-facing layout
}

<div class="container py-5">
    <!-- Header Section -->
    <div class="row align-items-center mb-5">
        <div class="col-md-8">
            <h1 class="display-4 fw-bold text-primary">About @Model.CompanyName</h1>
            @if (!string.IsNullOrEmpty(Model.CompanyDescription))
            {
                <p class="lead">@Model.CompanyDescription</p>
            }
        </div>
        <div class="col-md-4 text-center">
            @if (!string.IsNullOrEmpty(Model.LogoUrl))
            {
                <img src="@Model.LogoUrl" alt="@Model.CompanyName Logo" class="img-fluid" style="max-height: 150px;">
            }
        </div>
    </div>

    <!-- Mission Statement -->
    @if (!string.IsNullOrEmpty(Model.MissionStatement))
    {
        <div class="row mb-5">
            <div class="col-12">
                <div class="card border-0 bg-light">
                    <div class="card-body p-4">
                        <h2 class="h3 mb-3">Our Mission</h2>
                        <p class="mb-0 fs-5">@Model.MissionStatement</p>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- What We Do -->
    @if (!string.IsNullOrEmpty(Model.ServicesDescription))
    {
        <div class="row mb-5">
            <div class="col-12">
                <h2 class="h3 mb-4">What We Do</h2>
                <div class="fs-5">
                    @Html.Raw(Model.ServicesDescription.Replace("\n", "<br>"))
                </div>
            </div>
        </div>
    }

    <!-- Core Values -->
    @if (!string.IsNullOrEmpty(Model.CoreValues))
    {
        <div class="row mb-5">
            <div class="col-12">
                <h2 class="h3 mb-4">Our Core Values</h2>
                <div class="fs-5">
                    @Html.Raw(Model.CoreValues.Replace("\n", "<br>"))
                </div>
            </div>
        </div>
    }

    <!-- Company Details -->
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">Company Information</h5>
                </div>
                <div class="card-body">
                    <p><strong>Industry:</strong> @Model.Industry</p>
                    <p><strong>Business Type:</strong> @Model.BusinessType</p>
                    <p><strong>Founded:</strong> @Model.YearFounded</p>
                    @if (!string.IsNullOrEmpty(Model.RegistrationNumber))
                    {
                        <p><strong>Registration:</strong> @Model.RegistrationNumber</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">Contact Information</h5>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.Address))
                    {
                        <p><strong>Address:</strong><br>@Model.Address</p>
                    }
                    @if (!string.IsNullOrEmpty(Model.Phone))
                    {
                        <p><strong>Phone:</strong> @Model.Phone</p>
                    }
                    @if (!string.IsNullOrEmpty(Model.Email))
                    {
                        <p><strong>Email:</strong> @Model.Email</p>
                    }
                    @if (!string.IsNullOrEmpty(Model.Website))
                    {
                        <p><strong>Website:</strong> <a href="@Model.Website">@Model.Website</a></p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
