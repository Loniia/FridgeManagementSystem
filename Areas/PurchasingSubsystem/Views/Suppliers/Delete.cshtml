@model FridgeManagementSystem.Models.Supplier

@{
    ViewData["Title"] = "Delete Supplier";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-trash"></i> @ViewData["Title"]</h2>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left-circle"></i> Back to List
    </a>
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm border-danger">
            <div class="card-header bg-danger text-white">
                <h5 class="card-title mb-0">
                    <i class="bi bi-exclamation-triangle"></i> Confirm Deletion
                </h5>
            </div>
            <div class="card-body">
                <div class="alert alert-warning" role="alert">
                    <h5 class="alert-heading">
                        <i class="bi bi-exclamation-circle"></i> Warning!
                    </h5>
                    <p class="mb-0">
                        Are you sure you want to delete <strong>@Model.Name</strong>?
                        This action will <strong>soft delete</strong> the supplier - they will be hidden from the system but retained in the database.
                    </p>
                </div>

                <h6 class="mb-3">Supplier Details:</h6>
                <dl class="row">
                    <dt class="col-sm-4">Supplier Name</dt>
                    <dd class="col-sm-8">@Model.Name</dd>

                    <dt class="col-sm-4">Contact Person</dt>
                    <dd class="col-sm-8">@Model.ContactPerson</dd>

                    <dt class="col-sm-4">Email</dt>
                    <dd class="col-sm-8"><a href="mailto:@Model.Email">@Model.Email</a></dd>

                    <dt class="col-sm-4">Phone</dt>
                    <dd class="col-sm-8"><a href="tel:@Model.Phone">@Model.Phone</a></dd>

                    <dt class="col-sm-4">Address</dt>
                    <dd class="col-sm-8">@Model.Address</dd>
                </dl>

                <div class="alert alert-info" role="alert">
                    <i class="bi bi-info-circle"></i>
                    <strong>Note:</strong> This supplier cannot be deleted if they have active purchase orders or quotations.
                </div>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="SupplierID" />
                    <div class="form-group mt-4">
                        <button type="submit" class="btn btn-danger me-2">
                            <i class="bi bi-trash"></i> Confirm Delete
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>