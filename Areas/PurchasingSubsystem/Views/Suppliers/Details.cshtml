@model PurchasingSubsystem.Models.Supplier

@{
    ViewData["Title"] = "Supplier Details";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-info-circle"></i> @ViewData["Title"]</h2>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left-circle"></i> Back to List
    </a>
</div>

<hr />

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header">
                <h5 class="card-title mb-0">Supplier Information</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.SupplierID)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.SupplierID)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Name)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Email)</dt>
                    <dd class="col-sm-8"><a href="mailto:@Model.Email">@Html.DisplayFor(model => model.Email)</a></dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Phone)</dt>
                    <dd class="col-sm-8"><a href="tel:@Model.Phone">@Html.DisplayFor(model => model.Phone)</a></dd>

                    <!-- Added the Address Field -->
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Address)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Address)</dd>
                </dl>
            </div>
            <div class="card-footer text-center">
                <a asp-action="Edit" asp-route-id="@Model.SupplierID" class="btn btn-warning me-2">
                    <i class="bi bi-pencil"></i> Edit
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-list-ul"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>

