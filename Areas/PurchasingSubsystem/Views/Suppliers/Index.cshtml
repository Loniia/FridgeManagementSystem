@model IEnumerable<FridgeManagementSystem.Models.Supplier>

    @{
    ViewData["Title"] = "Manage Suppliers";
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-building"></i> @ViewData["Title"]</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Supplier
        </a>
    </div>

    <!-- Success/Error Message Alert Box -->
    @if (TempData["Message"] != null)
{
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

    @if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

    <div class="card shadow-sm">
        <div class="card-body">
            @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Name)</th>
                            <th>@Html.DisplayNameFor(model => model.ContactPerson)</th> <!-- Added Contact Person -->
                            <th>@Html.DisplayNameFor(model => model.Email)</th>
                            <th>@Html.DisplayNameFor(model => model.Phone)</th>
                            <th>@Html.DisplayNameFor(model => model.Address)</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.ContactPerson)</td> <!-- Display Contact Person -->
                            <td><a href="mailto:@item.Email">@Html.DisplayFor(modelItem => item.Email)</a></td>
                            <td><a href="tel:@item.Phone">@Html.DisplayFor(modelItem => item.Phone)</a></td>
                            <td>@Html.DisplayFor(modelItem => item.Address)</td>
                            <td class="text-center">
                                <div class="btn-group" role="group" aria-label="Supplier Actions">
                                    <a asp-action="Details" asp-route-id="@item.SupplierID" class="btn btn-info btn-sm" title="View Details">
                                        <i class="bi bi-eye"></i> Details
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.SupplierID" class="btn btn-warning btn-sm" title="Edit">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.SupplierID" class="btn btn-danger btn-sm" title="Delete">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-building" style="font-size: 3rem; color: #6c757d;"></i>
                <h5 class="mt-3">No Suppliers Found</h5>
                <p class="text-muted">Get started by adding your first supplier to the system.</p>
                <a asp-action="Create" class="btn btn-primary mt-2">Add Supplier</a>
            </div>
        }
        </div>
    </div>
