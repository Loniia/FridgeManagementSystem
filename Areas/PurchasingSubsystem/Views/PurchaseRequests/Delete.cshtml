@model PurchasingSubsystem.Models.PurchaseRequest
@{
    ViewData["Title"] = "Delete Purchase Request";
}

<h2>Delete Purchase Request</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Request ID</dt>
        <dd class="col-sm-10">@Model.PurchaseRequestID</dd>
        
        <dt class="col-sm-2">Inventory Liaison</dt>
        <dd class="col-sm-10">@Model.InventoryLiaison?.Name</dd>
        
        <dt class="col-sm-2">Request Date</dt>
        <dd class="col-sm-10">@Model.RequestDate.ToString("yyyy-MM-dd")</dd>
        
        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="PurchaseRequestID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
