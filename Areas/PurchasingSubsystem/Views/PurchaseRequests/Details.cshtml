@model PurchasingSubsystem.Models.PurchaseRequest

@{
    ViewData["Title"] = "Purchase Request Details";
}

<h2>Purchase Request Details</h2>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Request ID</dt>
        <dd class="col-sm-10">@Model.PurchaseRequestID</dd>
        
        <dt class="col-sm-2">Inventory Liaison</dt>
        <dd class="col-sm-10">@Model.InventoryLiaison?.Name</dd>
        
        <dt class="col-sm-2">Request Date</dt>
        <dd class="col-sm-10">@Model.RequestDate.ToString("yyyy-MM-dd")</dd>
        
        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">
            <span class="badge bg-@(Model.Status == "Approved" ? "success" : Model.Status == "Rejected" ? "danger" : "warning")">
                @Model.Status
            </span>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.PurchaseRequestID" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
