@model FridgeManagementSystem.Models.PurchaseRequest

@{
    ViewData["Title"] = "Edit Purchase Request";
}

<h2>Edit Purchase Request</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PurchaseRequestID" />
            
            <div class="form-group mb-3">
                <label asp-for="InventoryLiaisonID" class="control-label">Inventory Liaison</label>
                <select asp-for="InventoryLiaisonID" class="form-control" asp-items="ViewBag.InventoryLiaisons">
                    <option value="">-- Select Liaison --</option>
                </select>
                <span asp-validation-for="InventoryLiaisonID" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="RequestDate" class="control-label"></label>
                <input asp-for="RequestDate" class="form-control" type="date" />
                <span asp-validation-for="RequestDate" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control">
                    <option value="Pending">Pending</option>
                    <option value="Approved">Approved</option>
                    <option value="Rejected">Rejected</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>
