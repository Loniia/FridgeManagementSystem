@model FridgeManagementSystem.Models.PurchaseOrder

@{
    ViewData["Title"] = "Delete Purchase Order";
}

<h2>Delete Purchase Order</h2>

<h3>Are you sure you want to delete this purchase order?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">PO Number</dt>
        <dd class="col-sm-10">@Model.PurchaseOrderID</dd>

        <dt class="col-sm-2">Quotation ID</dt>
        <dd class="col-sm-10">@Model.QuotationId</dd>

        <dt class="col-sm-2">Order Date</dt>
        <dd class="col-sm-10">@Model.OrderDate.ToString("yyyy-MM-dd")</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="PurchaseOrderID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
