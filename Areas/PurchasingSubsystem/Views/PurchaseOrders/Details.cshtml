@model FridgeManagementSystem.Models.PurchaseOrder

@{
    ViewData["Title"] = "Purchase Order Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .detail-card {
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        border: none;
    }

    .detail-header {
        background: linear-gradient(135deg, #667eea, #764ba2);
        border-radius: 12px 12px 0 0;
        color: white;
    }

    .info-label {
        font-weight: 600;
        color: #6b7280;
    }

    .info-value {
        color: #1f2937;
        font-size: 1rem;
    }
</style>

<div class="container py-4">
    <a asp-action="Index" class="btn btn-outline-secondary mb-3">
        <i class="fas fa-arrow-left me-2"></i>Back to Purchase Orders
    </a>

    <div class="card detail-card">
        <div class="card-header detail-header py-3">
            <h4 class="mb-0">
                <i class="fas fa-file-invoice me-2"></i>Purchase Order: @Model.PONumber
            </h4>
        </div>

        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="mb-3">
                        <span class="info-label">PO Number:</span>
                        <div class="info-value fw-bold text-primary">@Model.PONumber</div>
                    </div>

                    <div class="mb-3">
                        <span class="info-label">Supplier:</span>
                        <div class="info-value">@Model.Supplier?.Name</div>
                    </div>

                    <div class="mb-3">
                        <span class="info-label">Quotation ID:</span>
                        <div class="info-value">Q-@Model.QuotationID.ToString("D3")</div>
                    </div>

                    <div class="mb-3">
                        <span class="info-label">Total Amount:</span>
                        <div class="info-value fw-bold text-success">@Model.TotalAmount.ToString("C")</div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <span class="info-label">Order Date:</span>
                        <div class="info-value">@Model.OrderDate.ToString("dd MMM yyyy")</div>
                    </div>

                    <div class="mb-3">
                        <span class="info-label">Expected Delivery:</span>
                        <div class="info-value">
                            @if (Model.ExpectedDeliveryDate.HasValue)
                            {
                                @Model.ExpectedDeliveryDate.Value.ToString("dd MMM yyyy")
                            }
                            else
                            {
                                <span class="text-muted">Not specified</span>
                            }
                        </div>
                    </div>

                    <div class="mb-3">
                        <span class="info-label">Status:</span>
                        <div>
                            @{
                                var statusBadgeClass = Model.Status?.ToLower() switch
                                {
                                    "ordered" => "bg-warning",
                                    "confirmed" => "bg-info",
                                    "shipped" => "bg-primary",
                                    "delivered" => "bg-success",
                                    "cancelled" => "bg-danger",
                                    _ => "bg-secondary"
                                };
                            }
                            <span class="badge @statusBadgeClass p-2">
                                @Model.Status
                            </span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <span class="info-label">Active:</span>
                        <div class="info-value">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    @if (!string.IsNullOrEmpty(Model.DeliveryAddress))
                    {
                        <div class="mb-3">
                            <span class="info-label">Delivery Address:</span>
                            <div class="info-value">@Model.DeliveryAddress</div>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.SpecialInstructions))
                    {
                        <div class="mb-3">
                            <span class="info-label">Special Instructions:</span>
                            <div class="info-value">@Model.SpecialInstructions</div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="card-footer bg-light">
            <div class="d-flex justify-content-between align-items-center">
                <small class="text-muted">
                    Created from approved quotation
                </small>
                <div class="btn-group">
                    <a asp-action="Edit" asp-route-id="@Model.PurchaseOrderID" class="btn btn-warning">
                        <i class="fas fa-edit me-1"></i>Edit PO
                    </a>
                    <a asp-controller="DeliveryNotes" asp-action="Create" asp-route-purchaseOrderId="@Model.PurchaseOrderID"
                       class="btn btn-success">
                        <i class="fas fa-truck me-1"></i>Create Delivery Note
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>



