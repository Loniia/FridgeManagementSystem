@model FridgeManagementSystem.Models.RequestForQuotation

@{
    ViewData["Title"] = "RFQ Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <a asp-action="Index" class="btn btn-outline-secondary mb-3">
        <i class="fas fa-arrow-left me-2"></i>Back to RFQ List
    </a>

    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">RFQ Details - @Model.RFQNumber</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Purchase Request:</dt>
                <dd class="col-sm-9">PR-@Model.PurchaseRequestID.ToString("D3")</dd>

                <dt class="col-sm-3">Description:</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">Required Quantity:</dt>
                <dd class="col-sm-9">@Model.RequiredQuantity</dd>

                <dt class="col-sm-3">Deadline:</dt>
                <dd class="col-sm-9">@Model.Deadline.ToShortDateString()</dd>

                <dt class="col-sm-3">Status:</dt>
                <dd class="col-sm-9">
                    <span class="badge @(Model.Status == "Draft" ? "bg-secondary" : Model.Status == "Sent" ? "bg-success" : "bg-danger")">
                        @Model.Status
                    </span>
                </dd>

                <dt class="col-sm-3">Created Date:</dt>
                <dd class="col-sm-9">@Model.CreatedDate.ToShortDateString()</dd>
            </dl>
        </div>
    </div>
</div>

