@model IEnumerable<FridgeManagementSystem.Models.RequestForQuotation>

@{
    ViewData["Title"] = "Request for Quotations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary">Request for Quotations</h2>
            <p class="text-muted mb-0">All RFQs generated from approved purchase requests</p>
        </div>
        <a asp-area="PurchasingSubsystem" asp-controller="ProcessPurchaseRequests" asp-action="Pending" class="btn btn-outline-primary">
            <i class="fas fa-arrow-left me-2"></i>Back to Purchase Requests
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <table class="table table-hover align-middle">
                <thead class="table-primary">
                    <tr>
                        <th>RFQ Number</th>
                        <th>Purchase Request</th>
                        <th>Description</th>
                        <th>Quantity</th>
                        <th>Status</th>
                        <th>Deadline</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var rfq in Model)
                    {
                        <tr>
                            <td>@rfq.RFQNumber</td>
                            <td>PR-@rfq.PurchaseRequestID.ToString("D3")</td>
                            <td>@rfq.Description</td>
                            <td>@rfq.RequiredQuantity</td>
                            <td>
                                <span class="badge @(rfq.Status == "Draft" ? "bg-secondary" : rfq.Status == "Sent" ? "bg-success" : "bg-danger")">
                                    @rfq.Status
                                </span>
                            </td>
                            <td>@rfq.Deadline.ToShortDateString()</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@rfq.RFQID" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-eye me-1"></i>View
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-file-invoice fa-3x text-muted mb-3"></i>
                    <p class="text-muted mb-0">No RFQs available yet.</p>
                </div>
            }
        </div>
    </div>
</div>
