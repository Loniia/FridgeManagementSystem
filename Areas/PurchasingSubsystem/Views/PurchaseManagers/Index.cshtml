@model IEnumerable<PurchasingSubsystem.Models.PurchaseManager>

@{
    ViewData["Title"] = "Purchase Managers";
}

<h2>Purchase Managers</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Create New Purchase Manager</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Manager ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.PurchaseManagerID</td>
                <td>@item.PurchaseManagerName</td>
                <td>@item.PurchaseManagerEmail</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PurchaseManagerID" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.PurchaseManagerID" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.PurchaseManagerID" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
