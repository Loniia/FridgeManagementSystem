@model FridgeManagementSystem.Models.PurchaseRequest
@{
    ViewData["Title"] = "Process Purchase Request";
}

<style>
    .btn-dashboard {
        background: #4361ee;
        color: white;
        border: none;
        padding: 8px 16px;
        border-radius: 6px;
        font-weight: 600;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        font-size: 14px;
    }

        .btn-dashboard:hover {
            background: #3a0ca3;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(67, 97, 238, 0.3);
            color: white;
        }
</style>

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="bi bi-gear me-2"></i>Process Purchase Request
                        </h4>
                        <div class="d-flex align-items-center gap-2">
                            <span class="badge bg-light text-dark fs-6">@Model.RequestNumber</span>
                            <!-- Dashboard Button -->
                            <a asp-area="PurchasingSubsystem" asp-controller="Purchase" asp-action="Index" class="btn-dashboard">
                                <i class="fas fa-tachometer-alt me-1"></i>Dashboard
                            </a>
                        </div>
                    </div>
                </div>

                <div class="card-body p-4">
                    <!-- Request Summary -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="card bg-light border-0 h-100">
                                <div class="card-body">
                                    <h6 class="card-title text-primary mb-3">
                                        <i class="bi bi-info-circle me-1"></i>Request Details
                                    </h6>
                                    <table class="table table-sm table-borderless">
                                        <tr>
                                            <td class="text-muted" width="40%">Item:</td>
                                            <td><strong>@Model.ItemFullNames</strong></td>
                                        </tr>
                                        <tr>
                                            <td class="text-muted">Quantity:</td>
                                            <td><span class="badge bg-primary">@Model.Quantity units</span></td>
                                        </tr>
                                        <tr>
                                            <td class="text-muted">Request Type:</td>
                                            <td>@Model.RequestType</td>
                                        </tr>
                                        <tr>
                                            <td class="text-muted">Assigned To:</td>
                                            <td>@Model.AssignedToRole</td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card bg-light border-0 h-100">
                                <div class="card-body">
                                    <h6 class="card-title text-primary mb-3">
                                        <i class="bi bi-person me-1"></i>Request Information
                                    </h6>
                                    <table class="table table-sm table-borderless">
                                        <tr>
                                            <td class="text-muted" width="40%">Requested By:</td>
                                            <td><strong>@Model.RequestBy</strong></td>
                                        </tr>
                                        <tr>
                                            <td class="text-muted">Request Date:</td>
                                           <td>@(Model.RequestDate.HasValue ? Model.RequestDate.Value.ToString("dd MMM yyyy") : "")</td>
                                        </tr>
                                        <tr>
                                            <td class="text-muted">Status:</td>
                                            <td><span class="badge bg-warning">@Model.Status</span></td>
                                        </tr>
                                        @if (Model.Fridge != null)
                                        {
                                            <tr>
                                                <td class="text-muted">Fridge:</td>
                                                <td>@Model.Fridge.Brand</td>
                                            </tr>
                                        }
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Processing Form -->
                    <form asp-action="Process" method="post" class="needs-validation" novalidate>
                        <input type="hidden" name="id" value="@Model.PurchaseRequestID" />

                        <!-- Supplier Selection -->
                        <div class="mb-4">
                            <label class="form-label fw-bold h6 text-dark mb-3">
                                <i class="bi bi-building me-1"></i>Select Suppliers for RFQ:
                            </label>
                            <div class="border rounded p-3 bg-light">
                                @if (ViewBag.Suppliers != null && ViewBag.Suppliers.Count > 0)
                                {
                                    <div class="row">
                                        @foreach (var supplier in ViewBag.Suppliers)
                                        {
                                            <div class="col-md-6 mb-2">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox"
                                                           name="selectedSuppliers" value="@supplier.Value" id="supplier-@supplier.Value">
                                                    <label class="form-check-label fw-medium" for="supplier-@supplier.Value">
                                                        @supplier.Text
                                                    </label>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <div class="alert alert-warning mb-0">
                                        <i class="bi bi-exclamation-triangle me-2"></i>
                                        No active suppliers found. Please add suppliers first.
                                    </div>
                                }
                            </div>
                            <small class="form-text text-muted">Select one or more suppliers to send RFQs</small>
                        </div>

                        <!-- Approval Notes -->
                        <div class="mb-4">
                            <label for="approvalNotes" class="form-label fw-bold h6 text-dark">
                                <i class="bi bi-chat-text me-1"></i>Processing Notes:
                            </label>
                            <textarea class="form-control" id="approvalNotes" name="approvalNotes"
                                      rows="4" placeholder="Add approval notes, instructions, or reasons for decision..."
                                      required></textarea>
                            <div class="invalid-feedback">
                                Please provide processing notes.
                            </div>
                            <small class="form-text text-muted">These notes will be recorded with the decision</small>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex gap-3 justify-content-end border-top pt-4">
                            <a asp-action="Pending" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-1"></i>Back to List
                            </a>
                            <button type="submit" name="action" value="reject" class="btn btn-danger"
                                    onclick="return confirm('Are you sure you want to reject this request?')">
                                <i class="bi bi-x-circle me-1"></i>Reject Request
                            </button>
                            <button type="submit" name="action" value="approve" class="btn btn-success">
                                <i class="bi bi-check-circle me-1"></i>Approve & Create RFQs
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Form validation
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}