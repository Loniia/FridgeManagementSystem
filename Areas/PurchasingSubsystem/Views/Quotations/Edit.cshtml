@model FridgeManagementSystem.Models.Quotation
@{
    ViewData["Title"] = "Edit Quotation";
}

<h2>Edit Quotation</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="QuotationID" />

            <div class="form-group mb-3">
                <label asp-for="RequestForQuotationId" class="control-label">RFQ</label>
                <select asp-for="RequestForQuotationId" class="form-control" asp-items="ViewBag.RequestForQuotations">
                    <option value="">-- Select RFQ --</option>
                </select>
                <span asp-validation-for="RequestForQuotationId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="SupplierId" class="control-label">Supplier</label>
                <select asp-for="SupplierId" class="form-control" asp-items="ViewBag.Suppliers">
                    <option value="">-- Select Supplier --</option>
                </select>
                <span asp-validation-for="SupplierId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ReceivedDate" class="control-label"></label>
                <input asp-for="ReceivedDate" class="form-control" type="date" />
                <span asp-validation-for="ReceivedDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="QuotationAmount" class="control-label"></label>
                <input asp-for="QuotationAmount" class="form-control" />
                <span asp-validation-for="QuotationAmount" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>