@model FridgeManagementSystem.Models.Quotation

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Quotation Details";
}

<div class="container py-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-gradient-primary text-white">
            <h4 class="mb-0"><i class="fas fa-info-circle me-2"></i>Quotation Details</h4>
        </div>

        <div class="card-body bg-light">
            <dl class="row">
                <dt class="col-sm-3">RFQ Number</dt>
                <dd class="col-sm-9">@Model.RequestForQuotation?.RFQNumber</dd>

                <dt class="col-sm-3">Supplier</dt>
                <dd class="col-sm-9">@Model.Supplier?.Name</dd>

                <dt class="col-sm-3">Quotation Amount</dt>
                <dd class="col-sm-9">@Model.QuotationAmount.ToString("C")</dd>

                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-@(Model.Status == "Approved" ? "success" : "secondary")">@Model.Status</span>
                </dd>
            </dl>

            <a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
        </div>
    </div>
</div>
