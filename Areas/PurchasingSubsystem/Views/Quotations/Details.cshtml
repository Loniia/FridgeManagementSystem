@model FridgeManagementSystem.Models.Quotation

@{
    ViewData["Title"] = "Quotation Details";
}

<h2>Quotation Details</h2>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Quotation ID</dt>
        <dd class="col-sm-10">@Model.QuotationID</dd>

        <dt class="col-sm-2">RFQ ID</dt>
        <dd class="col-sm-10">@Model.RequestForQuotationId</dd>

        <dt class="col-sm-2">Supplier</dt>
        <dd class="col-sm-10">@Model.Supplier?.Name</dd>

        <dt class="col-sm-2">Received Date</dt>
        <dd class="col-sm-10">@Model.ReceivedDate.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">Amount</dt>
        <dd class="col-sm-10">@Model.QuotationAmount.ToString("C")</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.QuotationID" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
