@model IEnumerable<FridgeManagementSystem.Models.Quotation>

@{
    ViewData["Title"] = "Quotations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .btn-dashboard {
        background: #4361ee;
        color: white;
        border: none;
        padding: 8px 16px;
        border-radius: 6px;
        font-weight: 600;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        font-size: 14px;
    }

        .btn-dashboard:hover {
            background: #3a0ca3;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(67, 97, 238, 0.3);
            color: white;
        }
</style>

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="fas fa-file-invoice-dollar me-2"></i>Quotation Management</h4>
            <div class="d-flex gap-2">
                <!-- Dashboard Button -->
                <a asp-area="PurchasingSubsystem" asp-controller="Purchase" asp-action="Index" class="btn-dashboard">
                    <i class="fas fa-tachometer-alt me-1"></i>Dashboard
                </a>
                <a asp-action="Create" class="btn btn-light">
                    <i class="fas fa-plus me-1"></i> Add Quotation
                </a>
            </div>
        </div>
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-file-contract fa-4x text-muted mb-3"></i>
                    <h5 class="text-muted">No Quotations Yet</h5>
                    <p class="text-muted">Get started by adding your first quotation.</p>
                    <div class="mt-3">
                        <a asp-area="PurchasingSubsystem" asp-controller="Purchase" asp-action="Index" class="btn-dashboard me-2">
                            <i class="fas fa-tachometer-alt me-1"></i>Go to Dashboard
                        </a>
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus me-1"></i>Add First Quotation
                        </a>
                    </div>
                </div>
            }
            else
            {
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>RFQ</th>
                            <th>Supplier</th>
                            <th>Amount</th>
                            <th>Status</th>
                            <th>Date Received</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.RequestForQuotation?.RFQNumber</td>
                                <td>@item.Supplier?.Name</td>
                                <td>@item.QuotationAmount.ToString("C")</td>
                                <td>
                                    <span class="badge bg-@(item.Status == "Approved" ? "success" : "secondary")">
                                        @item.Status
                                    </span>
                                </td>
                                <td>@item.ReceivedDate.ToShortDateString()</td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-action="Details" asp-route-id="@item.QuotationID" class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.QuotationID" class="btn btn-outline-warning btn-sm">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form asp-action="Approve" asp-route-id="@item.QuotationID" method="post" class="d-inline">
                                            <button type="submit" class="btn btn-success btn-sm">
                                                <i class="fas fa-check"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>