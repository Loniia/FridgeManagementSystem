@model FridgeManagementSystem.Models.Quotation

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Approve Quotation";
}

<div class="container py-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-gradient-success text-white">
            <h4><i class="fas fa-check-circle me-2"></i>Approve Quotation</h4>
        </div>

        <div class="card-body">
            <h5>Are you sure you want to approve this quotation?</h5>
            <p>This will automatically generate a <strong>Purchase Order</strong> for the selected supplier.</p>

            <dl class="row">
                <dt class="col-sm-3">Supplier</dt>
                <dd class="col-sm-9">@Model.Supplier?.Name</dd>

                <dt class="col-sm-3">Amount</dt>
                <dd class="col-sm-9">@Model.QuotationAmount.ToString("C")</dd>

                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>
            </dl>

            <form asp-action="Approve" method="post">
                <input type="hidden" asp-for="QuotationID" />
                <button type="submit" class="btn btn-success me-2">
                    <i class="fas fa-check me-1"></i>Approve
                </button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
