@model FridgeManagementSystem.Models.Quotation

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Create Quotation";
}

<div class="container py-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-gradient-success text-white">
            <h4 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Create Quotation</h4>
        </div>

        <div class="card-body">
            <form asp-action="Create">
                <div class="mb-3">
                    <label asp-for="RequestForQuotationId" class="form-label"></label>
                    <select asp-for="RequestForQuotationId" asp-items="ViewBag.RFQs" class="form-select"></select>
                    <span asp-validation-for="RequestForQuotationId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="SupplierID" class="form-label"></label>
                    <select asp-for="SupplierID" asp-items="ViewBag.Suppliers" class="form-select"></select>
                    <span asp-validation-for="SupplierID" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="QuotationAmount" class="form-label"></label>
                    <input asp-for="QuotationAmount" class="form-control" />
                    <span asp-validation-for="QuotationAmount" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                </div>

                <div class="mb-3">
                    <label asp-for="RequiredQuantity" class="form-label"></label>
                    <input asp-for="RequiredQuantity" class="form-control" />
                </div>

                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save me-1"></i>Save Quotation
                </button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
            </form>
        </div>
    </div>
</div>
