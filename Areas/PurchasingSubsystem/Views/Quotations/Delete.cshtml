@model PurchasingSubsystem.Models.Quotation

@{
    ViewData["Title"] = "Delete Quotation";
}

<h2>Delete Quotation</h2>

<h3>Are you sure you want to delete this quotation?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Quotation ID</dt>
        <dd class="col-sm-10">@Model.QuotationID</dd>

        <dt class="col-sm-2">Supplier</dt>
        <dd class="col-sm-10">@Model.Supplier?.Name</dd>

        <dt class="col-sm-2">Received Date</dt>
        <dd class="col-sm-10">@Model.ReceivedDate.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">Amount</dt>
        <dd class="col-sm-10">@Model.QuotationAmount.ToString("C")</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="QuotationID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>