@model FridgeManagementSystem.Models.Supplier

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Add New Supplier";
}

<div class="container-fluid">
    <!-- Header with gradient -->
    <div class="d-flex justify-content-between align-items-center mb-4 py-3 px-4 rounded-3" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
        <div>
            <h1 class="h3 mb-2 text-white">Add New Supplier</h1>
            <p class="mb-0 text-white opacity-8">Create a new supplier account in the system</p>
        </div>
        <a asp-action="Index" class="btn btn-light">
            <i class="fas fa-arrow-left me-2"></i>Back to List
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white py-4 border-bottom">
                    <h5 class="card-title mb-0 text-primary">
                        <i class="fas fa-truck me-2"></i>Supplier Information
                    </h5>
                    <p class="text-muted mb-0 mt-2">Fill in the supplier details below</p>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3"></div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label asp-for="Name" class="form-label fw-semibold text-dark">Supplier Name *</label>
                                <input asp-for="Name" class="form-control form-control-lg border-2" placeholder="Enter supplier company name" />
                                <span asp-validation-for="Name" class="text-danger small mt-1"></span>
                            </div>
                            <div class="col-md-6 mb-4">
                                <label asp-for="ContactPerson" class="form-label fw-semibold text-dark">Contact Person *</label>
                                <input asp-for="ContactPerson" class="form-control form-control-lg border-2" placeholder="Enter contact person name" />
                                <span asp-validation-for="ContactPerson" class="text-danger small mt-1"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label asp-for="Email" class="form-label fw-semibold text-dark">Email Address *</label>
                                <input asp-for="Email" type="email" class="form-control form-control-lg border-2" placeholder="supplier@company.com" />
                                <span asp-validation-for="Email" class="text-danger small mt-1"></span>
                            </div>
                            <div class="col-md-6 mb-4">
                                <label asp-for="Phone" class="form-label fw-semibold text-dark">Phone Number *</label>
                                <input asp-for="Phone" class="form-control form-control-lg border-2" placeholder="+27 12 345 6789" />
                                <span asp-validation-for="Phone" class="text-danger small mt-1"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Address" class="form-label fw-semibold text-dark">Address *</label>
                            <textarea asp-for="Address" class="form-control border-2" rows="4" placeholder="Enter full physical address for deliveries"></textarea>
                            <span asp-validation-for="Address" class="text-danger small mt-1"></span>
                        </div>

                        <div class="d-flex gap-3 justify-content-end pt-3 border-top">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">Cancel</a>
                            <button type="submit" class="btn btn-primary px-4 shadow">
                                <i class="fas fa-save me-2"></i>Create Supplier
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}