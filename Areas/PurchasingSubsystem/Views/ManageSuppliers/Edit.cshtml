@model FridgeManagementSystem.Models.Supplier

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Edit Supplier";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <style>
        .fridge-theme {
            --primary: #4CC9F0;
            --secondary: #4361EE;
            --accent: #7209B7;
            --warning: #FF9800;
        }

        .cute-header {
            background: linear-gradient(135deg, var(--warning) 0%, #FFB74D 100%);
            border-radius: 20px;
            padding: 2rem;
            margin-bottom: 2rem;
            box-shadow: 0 10px 30px rgba(255, 152, 0, 0.3);
        }

        .cute-form-card {
            background: white;
            border-radius: 25px;
            border: none;
            box-shadow: 0 15px 35px rgba(0,0,0,0.1);
            overflow: hidden;
        }

        .form-section {
            padding: 2rem;
            border-bottom: 2px dashed #f0f0f0;
        }

        .cute-input {
            border: 2px solid #e9ecef;
            border-radius: 15px;
            padding: 1rem 1.5rem;
            font-size: 1rem;
            transition: all 0.3s ease;
            background: #fafbfc;
        }

            .cute-input:focus {
                border-color: var(--warning);
                box-shadow: 0 0 0 0.3rem rgba(255, 152, 0, 0.1);
                background: white;
            }

        .cute-btn {
            border-radius: 50px;
            padding: 1rem 2rem;
            font-weight: 600;
            border: none;
            transition: all 0.3s ease;
        }

        .cute-btn-warning {
            background: linear-gradient(135deg, var(--warning), #FFB74D);
            color: white;
        }

            .cute-btn-warning:hover {
                transform: translateY(-3px);
                box-shadow: 0 12px 25px rgba(255, 152, 0, 0.4);
            }

        .floating-label {
            position: relative;
            margin-bottom: 2rem;
        }

            .floating-label label {
                position: absolute;
                top: -10px;
                left: 15px;
                background: white;
                padding: 0 8px;
                font-size: 0.85rem;
                font-weight: 600;
                color: var(--warning);
                z-index: 1;
            }

        .toggle-switch {
            position: relative;
            display: inline-block;
            width: 60px;
            height: 34px;
        }

            .toggle-switch input {
                opacity: 0;
                width: 0;
                height: 0;
            }

        .slider {
            position: absolute;
            cursor: pointer;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: #ccc;
            transition: .4s;
            border-radius: 34px;
        }

            .slider:before {
                position: absolute;
                content: "";
                height: 26px;
                width: 26px;
                left: 4px;
                bottom: 4px;
                background-color: white;
                transition: .4s;
                border-radius: 50%;
            }

        input:checked + .slider {
            background: linear-gradient(135deg, var(--primary), var(--secondary));
        }

            input:checked + .slider:before {
                transform: translateX(26px);
            }
    </style>
</head>
<body class="fridge-theme">
    <div class="container-fluid py-4">
        <!-- Cute Header -->
        <div class="cute-header">
            <div class="row align-items-center">
                <div class="col">
                    <h1 class="text-white mb-2">
                        <i class="fas fa-edit me-2"></i>
                        Edit Supplier
                    </h1>
                    <p class="text-white mb-0 opacity-8">
                        Update your refrigerator supplier information! 🔧❄️
                    </p>
                </div>
                <div class="col-auto">
                    <a asp-action="Details" asp-route-id="@Model.SupplierID" class="btn btn-light btn-lg rounded-pill">
                        <i class="fas fa-eye me-2"></i>
                        View Details
                    </a>
                </div>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-xl-8 col-lg-10">
                <div class="cute-form-card">
                    <form asp-action="Edit">
                        <input type="hidden" asp-for="SupplierID" />

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger m-4 rounded-3"></div>

                        <!-- Basic Information -->
                        <div class="form-section">
                            <h4 class="text-warning mb-4">
                                <i class="fas fa-info-circle me-2"></i>
                                Basic Information
                            </h4>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="floating-label">
                                        <label>Supplier Name</label>
                                        <input asp-for="Name" class="form-control cute-input" />
                                        <span asp-validation-for="Name" class="text-danger small"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="floating-label">
                                        <label>Contact Person</label>
                                        <input asp-for="ContactPerson" class="form-control cute-input" />
                                        <span asp-validation-for="ContactPerson" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Contact Information -->
                        <div class="form-section">
                            <h4 class="text-warning mb-4">
                                <i class="fas fa-address-book me-2"></i>
                                Contact Information
                            </h4>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="floating-label">
                                        <label>Email Address</label>
                                        <input asp-for="Email" class="form-control cute-input" />
                                        <span asp-validation-for="Email" class="text-danger small"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="floating-label">
                                        <label>Phone Number</label>
                                        <input asp-for="Phone" class="form-control cute-input" />
                                        <span asp-validation-for="Phone" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Address -->
                        <div class="form-section">
                            <h4 class="text-warning mb-4">
                                <i class="fas fa-map-marker-alt me-2"></i>
                                Physical Address
                            </h4>

                            <div class="floating-label">
                                <label>Delivery Address</label>
                                <textarea asp-for="Address" class="form-control cute-input" rows="4"></textarea>
                                <span asp-validation-for="Address" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Status -->
                        <div class="form-section">
                            <h4 class="text-warning mb-4">
                                <i class="fas fa-toggle-on me-2"></i>
                                Supplier Status
                            </h4>

                            <div class="d-flex align-items-center">
                                <label class="toggle-switch me-3">
                                    <input asp-for="IsActive" type="checkbox" />
                                    <span class="slider"></span>
                                </label>
                                <div>
                                    <h6 class="mb-1">Supplier Active</h6>
                                    <p class="text-muted mb-0 small">Toggle to activate/deactivate this supplier</p>
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="form-section text-center py-4">
                            <div class="d-flex gap-3 justify-content-center">
                                <a asp-action="Details" asp-route-id="@Model.SupplierID" class="cute-btn btn-secondary">
                                    <i class="fas fa-times me-2"></i>Cancel
                                </a>
                                <button type="submit" class="cute-btn cute-btn-warning">
                                    <i class="fas fa-save me-2"></i>Save Changes
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
