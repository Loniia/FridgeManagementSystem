@model IEnumerable<PurchasingSubsystem.Models.InventoryLiaison>
@{
    ViewData["Title"] = "Inventory Liaisons";
}

<h2>Inventory Liaisons</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Create New Liaison</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Liaison ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.InventoryLiaisonID</td>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.InventoryLiaisonID" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.InventoryLiaisonID" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.InventoryLiaisonID" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>