@model PurchasingSubsystem.Models.DeliveryNote

@{
    ViewData["Title"] = "Delete Delivery Note";
}

<h2>Delete Delivery Note</h2>

<h3>Are you sure you want to delete this delivery note?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Delivery Note ID</dt>
        <dd class="col-sm-10">@Model.DeliveryNoteID</dd>

        <dt class="col-sm-2">Purchase Order</dt>
        <dd class="col-sm-10">@Model.PurchaseOrderId</dd>

        <dt class="col-sm-2">Supplier</dt>
        <dd class="col-sm-10">@Model.Supplier?.Name</dd>

        <dt class="col-sm-2">Delivery Date</dt>
        <dd class="col-sm-10">@Model.DeliveryDate.ToString("yyyy-MM-dd")</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="DeliveryNoteID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>