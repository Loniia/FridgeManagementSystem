@model IEnumerable<FridgeManagementSystem.Models.DeliveryNote>

@{
    ViewData["Title"] = "Delivery Notes";
}

<h2>Delivery Notes</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Create New Delivery Note</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Delivery Note ID</th>
            <th>Purchase Order</th>
            <th>Supplier</th>
            <th>Delivery Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DeliveryNoteID</td>
                <td>@item.PurchaseOrderId</td>
                <td>@item.Supplier?.Name</td>
                <td>@item.DeliveryDate.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.DeliveryNoteID" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.DeliveryNoteID" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.DeliveryNoteID" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>