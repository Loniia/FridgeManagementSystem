@model FridgeManagementSystem.Models.DeliveryNote
@{
    ViewData["Title"] = "Create Delivery Note";
}

<h2>Create Delivery Note</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="PurchaseOrderId" class="control-label">Purchase Order</label>
                <select asp-for="PurchaseOrderId" class="form-control" asp-items="ViewBag.PurchaseOrders">
                    <option value="">-- Select Purchase Order --</option>
                </select>
                <span asp-validation-for="PurchaseOrderId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="SupplierId" class="control-label">Supplier</label>
                <select asp-for="SupplierId" class="form-control" asp-items="ViewBag.Suppliers">
                    <option value="">-- Select Supplier --</option>
                </select>
                <span asp-validation-for="SupplierId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DeliveryDate" class="control-label"></label>
                <input asp-for="DeliveryDate" class="form-control" type="date" />
                <span asp-validation-for="DeliveryDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}