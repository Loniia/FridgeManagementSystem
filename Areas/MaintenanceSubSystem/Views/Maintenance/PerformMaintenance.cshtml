@model FridgeManagementSystem.Models.MaintenanceVisit

@{
    ViewData["Title"] = "Perform Maintenance";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary: #2c3e50;
            --secondary: #3498db;
            --light: #ecf0f1;
            --success: #2ecc71;
            --warning: #f39c12;
        }

        * {
            box-sizing: border-box;
        }

        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            line-height: 1.5;
        }

        .responsive-container {
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
            padding: 1rem;
        }

        .card {
            border-radius: 8px;
            border: none;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            margin-bottom: 1.25rem;
            overflow: hidden;
        }

        .card-header {
            border-radius: 8px 8px 0 0 !important;
            font-weight: bold;
            padding: 0.875rem 1rem;
            font-size: clamp(0.9rem, 2.5vw, 1rem);
        }

        .card-body {
            padding: 1.25rem;
        }

            .card-body p {
                margin-bottom: 0.75rem;
                font-size: clamp(0.85rem, 2vw, 0.95rem);
            }

        .bg-primary {
            background-color: var(--primary) !important;
        }

        .bg-info {
            background-color: var(--secondary) !important;
        }

        .btn-primary {
            background-color: var(--secondary);
            border: none;
            padding: 0.75rem 1.5rem;
            border-radius: 6px;
            font-weight: 600;
            font-size: clamp(0.9rem, 2vw, 1rem);
            width: 100%;
        }

        .btn-lg {
            padding: 0.875rem 1.75rem;
        }

        .status-badge {
            padding: 0.4rem 0.8rem;
            border-radius: 15px;
            font-weight: 600;
            font-size: clamp(0.75rem, 2vw, 0.85rem);
        }

        .maintenance-actions {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1rem;
            margin: 1.5rem 0;
        }

        .action-button {
            text-align: center;
            padding: 1.25rem;
            border-radius: 8px;
            background: white;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
            border: 1px solid #e9ecef;
            text-decoration: none;
            color: inherit;
            transition: all 0.2s ease;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            min-height: 140px;
        }

            .action-button:hover {
                transform: translateY(-3px);
                box-shadow: 0 5px 12px rgba(0, 0, 0, 0.15);
                color: inherit;
                text-decoration: none;
            }

            .action-button i {
                font-size: clamp(1.5rem, 5vw, 2rem);
                margin-bottom: 0.75rem;
                color: var(--secondary);
            }

            .action-button h5 {
                font-size: clamp(0.95rem, 2.5vw, 1.1rem);
                margin-bottom: 0.5rem;
                font-weight: 600;
            }

            .action-button p {
                font-size: clamp(0.8rem, 2vw, 0.9rem);
                margin-bottom: 0;
                color: #6c757d;
            }

        .alert {
            border-radius: 8px;
            border: none;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
            padding: 1rem;
            margin-bottom: 1.25rem;
            font-size: clamp(0.9rem, 2vw, 1rem);
        }

        .badge.bg-warning {
            background-color: var(--warning) !important;
        }

        .badge.bg-success {
            background-color: var(--success) !important;
        }

        /* Responsive adjustments */
        @@media (max-width: 768px) {
            .responsive-container

        {
            padding: 0.75rem;
        }

        .maintenance-actions {
            grid-template-columns: 1fr;
            gap: 0.875rem;
        }

        .card-body .row > div {
            margin-bottom: 0.875rem;
        }

        .action-button {
            min-height: 120px;
            padding: 1rem;
        }

        }

        @@media (max-width: 576px) {
            .responsive-container

        {
            padding: 0.5rem;
        }

        .card-header {
            padding: 0.75rem;
            font-size: 0.9rem;
        }

        .card-body {
            padding: 1rem;
        }

        .btn-primary {
            padding: 0.875rem 1.25rem;
        }

        .action-button {
            padding: 0.875rem;
            min-height: 110px;
        }

        .alert {
            padding: 0.875rem;
        }

        }

        @@media (min-width: 1200px) {
            .responsive-container

        {
            padding: 1.5rem;
        }

        .maintenance-actions {
            grid-template-columns: repeat(2, 1fr);
        }

        }

        /* High contrast for better accessibility */
        @@media (prefers-contrast: high) {
            .card

        {
            border: 1px solid #dee2e6;
        }

        .action-button {
            border: 2px solid #dee2e6;
        }

        }

        /* Reduced motion for accessibility */
        @@media (prefers-reduced-motion: reduce) {
            .action-button

        {
            transition: none;
        }

        .action-button:hover {
            transform: none;
        }

        }
    </style>
</head>
<body>
    <div class="responsive-container mt-3">

        <!-- Start Maintenance Button at the top -->
        @if (Model.MaintenanceRequest?.TaskStatus == FridgeManagementSystem.Models.TaskStatus.Scheduled)
        {
            <div class="d-grid gap-2 mb-4">
                <form asp-action="StartMaintenance" method="post">
                    <input type="hidden" name="visitId" value="@Model.MaintenanceVisitId" />
                    <button class="btn btn-primary btn-lg py-2" type="submit">
                        <i class="fas fa-play-circle me-2"></i> Start Maintenance
                    </button>
                </form>
            </div>
        }
        else
        {
            <div class="alert alert-info mb-4">
                <i class="fas fa-check-circle me-2"></i> Maintenance in progress.
            </div>
        }

        <!-- Action buttons for Checklist and Components and FaultReport -->
        <div class="maintenance-actions mb-4">
            <a asp-controller="Maintenance" asp-action="MaintenanceChecklist" asp-route-visitId="@Model?.MaintenanceVisitId" class="action-button">
                <i class="fas fa-clipboard-list"></i>
                <h5>Maintenance Checklist</h5>
                <p class="text-muted">Complete the maintenance tasks</p>
            </a>

            <a asp-controller="Maintenance" asp-action="ComponentsUsed" asp-route-visitId="@Model?.MaintenanceVisitId" class="action-button">
                <i class="fas fa-cogs"></i>
                <h5>Components Used</h5>
                <p class="text-muted">Record replaced components (optional)</p>
            </a>
            <a asp-controller="Maintenance" asp-action="CreateFaultReport"
               asp-route-visitId="@Model.MaintenanceVisitId"
               asp-route-fridgeId="@Model.MaintenanceRequest?.FridgeId"
               class="action-button">
                <i class="fas fa-exclamation-triangle"></i>
                <h5>Fault Report</h5>
                <p class="text-muted">Report any faults detected during maintenance</p>
            </a>


        </div>

        <!-- Success/Error messages -->
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Message"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <!-- Fridge Details -->
        <div class="card mb-3 shadow-sm">
            <div class="card-header bg-primary text-white">
                <i class="fas fa-refrigerator me-2"></i> Fridge Details
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-12 col-md-6">
                        <p><strong><i class="fas fa-tag me-2"></i> Fridge:</strong> @Model.MaintenanceRequest?.Fridge?.FridgeName</p>
                        <p><strong><i class="fas fa-cube me-2"></i> Model:</strong> @Model.MaintenanceRequest?.Fridge?.Model</p>
                    </div>
                    <div class="col-12 col-md-6">
                        <p><strong><i class="fas fa-map-marker-alt me-2"></i> Address:</strong> @Model.MaintenanceRequest?.Fridge?.Customer?.Location?.Address</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Visit Details -->
        <div class="card mb-3 shadow-sm">
            <div class="card-header bg-info text-white">
                <i class="fas fa-clipboard-list me-2"></i> Visit Details
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-12 col-md-6">
                        <p><strong><i class="fas fa-calendar me-2"></i> Scheduled Date:</strong> @Model.ScheduledDate.ToShortDateString()</p>
                        <p><strong><i class="fas fa-clock me-2"></i> Scheduled Time:</strong> @Model.ScheduledTime.ToString(@"hh\:mm")</p>
                    </div>
                    <div class="col-12 col-md-6">
                        <p>
                            <strong><i class="fas fa-tasks me-2"></i> Task Status:</strong>
                            <span class="badge @(Model.MaintenanceRequest?.TaskStatus == FridgeManagementSystem.Models.TaskStatus.Scheduled ? "bg-warning" : "bg-success")">
                                @(Model.MaintenanceRequest?.TaskStatus.ToString() ?? "N/A")
                            </span>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <!-- Visit Notes -->
        <div class="card mb-3 shadow-sm">
            <div class="card-header bg-warning text-white">
                <i class="fas fa-sticky-note me-2"></i> Visit Notes
            </div>
            <div class="card-body">
                <form asp-action="SaveVisitNotes" method="post">
                    <input type="hidden" name="visitId" value="@Model.MaintenanceVisitId" />
                    <div class="mb-3">
                        <textarea class="form-control" name="visitNotes" rows="4" placeholder="Add any notes from this visit...">@Model.VisitNotes</textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i> Save Notes
                    </button>
                </form>
            </div>
        </div>


        <!-- Complete Maintenance Button  -->
        @if (Model.MaintenanceRequest?.TaskStatus == FridgeManagementSystem.Models.TaskStatus.InProgress)
        {
            <form asp-action="CompleteMaintenance" method="post" class="mt-3">
                <input type="hidden" name="visitId" value="@Model.MaintenanceVisitId" />
                <button class="btn btn-success btn-lg">
                    <i class="fas fa-check-circle me-2"></i> Complete Maintenance
                </button>
            </form>
        }

    </div>

</body>
</html>
