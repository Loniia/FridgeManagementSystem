<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Maintenance System</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* ===== OPTIMIZED SIDEBAR STYLING ===== */

        /* Sidebar Base */
        .sidebar {
            position: fixed;
            left: 0;
            top: 0;
            height: 100vh;
            width: 250px;
            background: #2c3e50;
            color: white;
            transition: all 0.3s ease;
            display: flex;
            flex-direction: column;
            z-index: 1000;
            overflow-y: auto;
            box-shadow: 2px 0 10px rgba(0,0,0,0.1);
        }

            .sidebar.collapsed {
                width: 60px;
            }

                /* Hide text when collapsed */
                .sidebar.collapsed .logo h1,
                .sidebar.collapsed .user-profile h2,
                .sidebar.collapsed .user-profile p,
                .sidebar.collapsed .menu li a span,
                .sidebar.collapsed .menu-heading,
                .sidebar.collapsed .sign-out a span {
                    display: none;
                }

                .sidebar.collapsed .user-profile img {
                    width: 35px;
                    height: 35px;
                    margin-bottom: 5px;
                }

                .sidebar.collapsed .menu li a {
                    justify-content: center;
                    padding: 12px 8px;
                }

                    .sidebar.collapsed .menu li a i {
                        margin-right: 0;
                        font-size: 1.1rem;
                    }

        /* Toggle Button */
        .toggle-btn {
            position: fixed;
            top: 15px;
            left: 265px;
            z-index: 1001;
            background: #2c3e50;
            color: white;
            border: none;
            padding: 8px 10px;
            border-radius: 4px;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 2px 5px rgba(0,0,0,0.2);
            font-size: 0.9rem;
        }

            .toggle-btn:hover {
                background: #34495e;
                transform: scale(1.05);
            }

        .sidebar.collapsed + .toggle-btn {
            left: 75px;
        }

        /* Main Content */
        .main-content {
            margin-left: 250px;
            padding: 20px;
            transition: all 0.3s ease;
            min-height: 100vh;
            background: #f8f9fa;
        }

            .main-content.sidebar-collapsed {
                margin-left: 60px;
            }

        /* Logo - Compact */
        .logo {
            padding: 15px 15px;
            text-align: center;
            border-bottom: 1px solid #34495e;
            background: #34495e;
            min-height: 60px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .logo h1 {
                font-size: 1.2rem;
                margin: 0;
                color: white;
                font-weight: 600;
                line-height: 1.2;
            }

        /* User Profile - Compact */
        .user-profile {
            padding: 15px 15px;
            text-align: center;
            border-bottom: 1px solid #34495e;
            min-height: 80px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

            .user-profile img {
                width: 60px;
                height: 60px;
                border-radius: 50%;
                margin-bottom: 8px;
                border: 2px solid #3498db;
                object-fit: cover;
            }

            .user-profile h2 {
                font-size: 0.95rem;
                margin: 4px 0;
                color: white;
                font-weight: 600;
                line-height: 1.2;
            }

            .user-profile p {
                font-size: 0.75rem;
                color: #bdc3c7;
                margin: 0;
                line-height: 1.2;
            }

        /* Menu - Compact */
        .menu {
            flex: 1;
            list-style: none;
            padding: 0;
            margin: 0;
            overflow-y: auto;
        }

        .menu-heading {
            padding: 12px 15px 6px 15px;
            font-size: 0.7rem;
            text-transform: uppercase;
            color: #95a5a6;
            font-weight: 600;
            margin-top: 5px;
            letter-spacing: 0.5px;
            line-height: 1.2;
        }

        .menu li a {
            display: flex;
            align-items: center;
            padding: 10px 15px;
            color: #ecf0f1;
            text-decoration: none;
            transition: all 0.3s ease;
            border-left: 3px solid transparent;
            font-size: 0.85rem;
            line-height: 1.2;
            min-height: 40px;
        }

            .menu li a i {
                width: 18px;
                text-align: center;
                margin-right: 12px;
                font-size: 1rem;
                flex-shrink: 0;
            }

            .menu li a:hover {
                background: #34495e;
                color: white;
                border-left: 3px solid #3498db;
                padding-left: 18px;
            }

            .menu li a.active {
                background: #34495e;
                color: white;
                border-left: 3px solid #e74c3c;
                font-weight: 600;
            }

        /* Sign Out - Compact */
        .sign-out {
            margin-top: auto;
            padding: 15px;
            border-top: 1px solid #34495e;
            background: #34495e;
            min-height: 60px;
            display: flex;
            align-items: center;
        }

            .sign-out a {
                display: flex;
                align-items: center;
                color: #ecf0f1;
                text-decoration: none;
                padding: 8px 12px;
                border-radius: 4px;
                transition: all 0.3s ease;
                background: #2c3e50;
                font-size: 0.85rem;
                line-height: 1.2;
                width: 100%;
                min-height: 40px;
            }

                .sign-out a:hover {
                    background: #e74c3c;
                    color: white;
                    transform: translateX(3px);
                }

                .sign-out a i {
                    margin-right: 10px;
                    font-size: 1rem;
                    flex-shrink: 0;
                }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .sidebar

        {
            width: 250px;
            transform: translateX(-100%);
        }

        .sidebar.expanded {
            transform: translateX(0);
        }

        .main-content {
            margin-left: 0;
            padding: 15px;
        }

        .toggle-btn {
            left: 15px;
            top: 15px;
        }

        .sidebar.collapsed {
            transform: translateX(-100%);
        }

            .sidebar.collapsed.expanded {
                transform: translateX(0);
            }

        }

        /* Scrollbar Styling */
        .menu::-webkit-scrollbar {
            width: 4px;
        }

        .menu::-webkit-scrollbar-track {
            background: #34495e;
        }

        .menu::-webkit-scrollbar-thumb {
            background: #3498db;
            border-radius: 8px;
        }

            .menu::-webkit-scrollbar-thumb:hover {
                background: #2980b9;
            }

        /* Ensure proper spacing for menu items */
        .menu li {
            margin: 0;
        }

        /* Compact spacing between sections */
        .logo + .user-profile {
            border-top: none;
        }
    </style>
</head>
<body>
    <button class="toggle-btn" id="sidebarToggle">
        <i class="fas fa-bars"></i>
    </button>

    <div class="sidebar" id="sidebar">
        <div class="logo">
            <h1>Dynamic Ice Inc</h1>
        </div>

        <div class="user-profile">
            <img src="~/images/Kayla.jpg" alt="Kayla Williams" />
            <h2>Kayla Williams</h2>
            <p>Maintenance Technician</p>
        </div>

        @{
            var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
            var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
        }

        <ul class="menu">
            <li>
                <a asp-area="MaintenanceSubSystem" asp-controller="MaintenanceHome" asp-action="Index"
                   class="@(currentController == "MaintenanceHome" ? "active" : "")">
                    <i class="fas fa-home"></i>
                    <span>Home</span>
                </a>
            </li>

            <li>
                <a asp-area="MaintenanceSubSystem" asp-controller="Maintenance" asp-action="MaintenanceRequests"
                   class="@(currentController == "Maintenance" && currentAction == "MaintenanceRequests" ? "active" : "")">
                    <i class="fas fa-snowflake"></i>
                    <span>Request Tracking</span>
                </a>
            </li>

            <li class="menu-heading">MAINTENANCE</li>

            <li>
                <a asp-area="MaintenanceSubSystem" asp-controller="Maintenance" asp-action="ScheduleVisit"
                   class="@(currentController == "Maintenance" && currentAction == "ScheduleVisit" ? "active" : "")">
                    <i class="fas fa-calendar-plus"></i>
                    <span>Schedule Visit</span>
                </a>
            </li>

            <li>
                <a asp-area="MaintenanceSubSystem" asp-controller="Maintenance" asp-action="VisitList"
                   class="@(currentController == "Maintenance" && currentAction == "VisitList" ? "active" : "")">
                    <i class="fas fa-calendar-check"></i>
                    <span>View Scheduled Visits</span>
                </a>
            </li>

            <li class="menu-heading">REPORTS</li>

            <li>
                <a asp-area="MaintenanceSubSystem" asp-controller="Maintenance" asp-action="ReportedFaults"
                   class="@(currentController == "Maintenance" && currentAction == "ReportedFaults" ? "active" : "")">
                    <i class="fas fa-exclamation-triangle"></i>
                    <span>View Reported Faults</span>
                </a>
            </li>
        </ul>

        <div class="sign-out">
            <a asp-area="" asp-controller="Account" asp-action="Logout">
                <i class="fas fa-sign-out-alt"></i>
                <span>Sign Out</span>
            </a>
        </div>
    </div>

    <div class="main-content" id="mainContent">
        @RenderBody()
    </div>

    <script>
        const sidebar = document.getElementById('sidebar');
        const mainContent = document.getElementById('mainContent');
        const toggleBtn = document.getElementById('sidebarToggle');

        let sidebarOpen = true;

        toggleBtn.addEventListener('click', () => {
            if (window.innerWidth > 768) {
                // Desktop: toggle collapsed state
                sidebar.classList.toggle('collapsed');
                mainContent.classList.toggle('sidebar-collapsed');

                // Update toggle button position and icon
                if (sidebar.classList.contains('collapsed')) {
                    toggleBtn.style.left = '75px';
                    toggleBtn.innerHTML = '<i class="fas fa-chevron-right"></i>';
                } else {
                    toggleBtn.style.left = '265px';
                    toggleBtn.innerHTML = '<i class="fas fa-bars"></i>';
                }
            } else {
                // Mobile: toggle expanded state
                sidebar.classList.toggle('expanded');
            }
        });

        // Handle window resize
        window.addEventListener('resize', () => {
            if (window.innerWidth > 768) {
                sidebar.classList.remove('expanded');
            } else {
                sidebar.classList.remove('collapsed');
                mainContent.classList.remove('sidebar-collapsed');
                toggleBtn.style.left = '15px';
                toggleBtn.innerHTML = '<i class="fas fa-bars"></i>';
            }
        });

        // Close sidebar when clicking on a link (mobile)
        document.querySelectorAll('.menu li a').forEach(link => {
            link.addEventListener('click', () => {
                if (window.innerWidth <= 768) {
                    sidebar.classList.remove('expanded');
                }
            });
        });
    </script>

    <!-- jQuery (Bootstrap 5 doesn't require it, but let's include it to be safe) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>