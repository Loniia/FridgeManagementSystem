@{
    ViewData["Title"] = "Dashboard";
}

<style>
    .content-header {
        margin-bottom: 2rem;
        padding: 1.5rem;
        background: linear-gradient(135deg, #3498db 0%, #2c3e50 100%);
        border-radius: 12px;
        color: white;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

        .content-header h1 {
            font-size: 2.2rem;
            margin-bottom: 0.5rem;
            font-weight: 700;
        }

        .content-header p {
            font-size: 1.1rem;
            opacity: 0.9;
            margin: 0;
        }

    .dashboard-cards {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 1.5rem;
        margin-top: 1rem;
    }

    .card {
        background: white;
        border-radius: 12px;
        padding: 1.8rem;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        border: 1px solid #e9ecef;
        position: relative;
        overflow: hidden;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.15);
        }

        .card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 4px;
            background: linear-gradient(90deg, #3498db, #2c3e50);
        }

        .card h3 {
            color: #2c3e50;
            margin-bottom: 1.2rem;
            font-size: 1.3rem;
            font-weight: 600;
            display: flex;
            align-items: center;
        }

            .card h3 i {
                margin-right: 0.8rem;
                color: #3498db;
                font-size: 1.4rem;
            }

    .stat-number {
        font-size: 2.8rem;
        font-weight: 800;
        color: #2c3e50;
        margin: 0.5rem 0;
        line-height: 1;
    }

    .card p {
        color: #6c757d;
        font-size: 1rem;
        margin: 0;
        line-height: 1.5;
    }

    /* Specific card colors */
    .card:nth-child(1)::before {
        background: linear-gradient(90deg, #e74c3c, #c0392b);
    }

    .card:nth-child(1) h3 i {
        color: #e74c3c;
    }

    .card:nth-child(2)::before {
        background: linear-gradient(90deg, #3498db, #2980b9);
    }

    .card:nth-child(2) h3 i {
        color: #3498db;
    }

    .card:nth-child(3)::before {
        background: linear-gradient(90deg, #27ae60, #229954);
    }

    .card:nth-child(3) h3 i {
        color: #27ae60;
    }

    /* Responsive design */
    @@media (max-width: 768px) {
        .dashboard-cards {
            grid-template-columns: 1fr;
        }

        .content-header {
            padding: 1.2rem;
            text-align: center;
        }

            .content-header h1 {
                font-size: 1.8rem;
            }

            .content-header p {
                font-size: 1rem;
            }

        .card {
            padding: 1.5rem;
        }

        .stat-number {
            font-size: 2.4rem;
        }
    }

    @@media (max-width: 480px) {
        .content-header {
            padding: 1rem;
        }

            .content-header h1 {
                font-size: 1.6rem;
            }

        .card {
            padding: 1.2rem;
        }

        .stat-number {
            font-size: 2.2rem;
        }

        .card h3 {
            font-size: 1.2rem;
        }
    }

    /* Animation for numbers */
    .stat-number {
        animation: countUp 1s ease-out;
    }

    @@keyframes countUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
<h2>Welcome Back Kayla !</h2>
<p>Use the sidebar to navigate your jobs.</p>
<div class="dashboard-cards">
    <div class="card">
        <h3><i class="fas fa-tasks"></i> Pending Requests</h3>
        <div class="stat-number">@ViewBag.PendingRequests</div>
        <p>Maintenance requests awaiting your attention</p>
    </div>

    <div class="card">
        <h3><i class="fas fa-calendar"></i> Scheduled Visits</h3>
        <div class="stat-number">@ViewBag.ScheduledVisits</div>
        <p>Upcoming scheduled visits</p>
    </div>

    <div class="card">
        <h3><i class="fas fa-check-circle"></i> Completed Tasks</h3>
        <div class="stat-number">@ViewBag.CompletedTasks</div>
        <p>Completed this month</p>
    </div>

    <div class="card">
        <h3><i class="fas fa-history"></i> Rescheduled Visits</h3>
        <div class="stat-number">@ViewBag.RescheduledVisits</div>
        <p>Visits that have been rescheduled</p>
    </div>

    <div class="card">
        <h3><i class="fas fa-ban"></i> Cancelled Visits</h3>
        <div class="stat-number">@ViewBag.CancelledVisits</div>
        <p>Visits that were cancelled</p>
    </div>
    <div class="card">
        <h3><i class="fas fa-ban"></i> InProgress Visits</h3>
        <div class="stat-number">@ViewBag.InProgressVisits</div>
        <p>Visits that are currently in-progress</p>
    </div>
</div>